@* Component displayed when a tenant cannot be resolved from URL *@
<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 100vh; background: linear-gradient(135deg, #f5f7fa 0%, #e4e8eb 100%);">
    <div class="card shadow-sm" style="max-width: 500px;">
        <div class="card-body p-5 text-center">
            <div class="mb-4">
                <i class="ti ti-building-store text-secondary" style="font-size: 4rem;"></i>
            </div>
            <h2 class="mb-3">Shop Not Found</h2>
            <p class="text-secondary mb-4">
                We couldn't find the rental shop you're looking for.
                The link may be incorrect or the shop may no longer be available.
            </p>
            <div class="d-flex flex-column gap-2">
                <a href="https://www.safengo.co.th" class="btn btn-primary">
                    <i class="ti ti-home me-2"></i>
                    Go to SafeNGo Home
                </a>
                <button type="button" class="btn btn-outline-secondary" onclick="history.back()">
                    <i class="ti ti-arrow-left me-2"></i>
                    Go Back
                </button>
            </div>
        </div>
    </div>
    <p class="text-secondary small mt-4">
        Looking for a specific rental shop? Contact us at
        <a href="mailto:support@safengo.co.th">support@safengo.co.th</a>
    </p>
</div>
