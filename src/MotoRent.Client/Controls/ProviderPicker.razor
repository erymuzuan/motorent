    [Parameter] public string? Label { get; set; }

    [Parameter] public string? Value { get; set; }

    [Parameter] public EventCallback<string?> ValueChanged { get; set; }

    [Parameter] public bool ShowLineProvider { get; set; } = true;

    [Parameter] public bool ShowCustomProvider { get; set; }

    [Parameter] public bool Required { get; set; }

    [Parameter] public string? Hint { get; set; }

    private async Task SelectProvider(string provider)
    {
        Value = provider;
        await ValueChanged.InvokeAsync(provider);
    }

    private MarkupString GetProviderIcon(string? provider) => provider switch
    {
        User.GOOGLE => (MarkupString)GoogleIcon,
        User.MICROSOFT => (MarkupString)MicrosoftIcon,
        User.LINE => (MarkupString)LineIcon,
        User.CUSTOM => (MarkupString)"""<i class="ti ti-dots me-2" style="font-size: 20px;"></i>""",
        _ => (MarkupString)GoogleIcon
    };

    private string GetProviderDisplayName(string? provider) => provider switch
    {
        User.GOOGLE => "Google",
        User.MICROSOFT => "Microsoft",
        User.LINE => "LINE",
        User.CUSTOM => "Custom",
        _ => "Google"
    };
