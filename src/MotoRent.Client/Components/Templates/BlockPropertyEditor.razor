@using MotoRent.Domain.Models
@inherits LocalizedComponentBase<BlockPropertyEditor>

<div class="card h-100">
    <div class="card-header">
        <h3 class="card-title">@this.Localizer["Header"]</h3>
    </div>
    <div class="card-body">
        @if (this.Block == null)
        {
            <div class="text-center py-5 text-muted">
                <i class="ti ti-click size-lg mb-2"></i>
                <p>@this.Localizer["NoBlockSelected"]</p>
            </div>
        }
        else
        {
            <div class="mb-3">
                <label class="form-label">@this.Localizer["Type"]</label>
                <div class="form-control-plaintext fw-bold">@this.Block.GetType().Name.Replace("Block", "")</div>
            </div>

            @if (this.Block is HeadingBlock hb)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Content"]</label>
                    <input type="text" class="form-control" @bind="hb.Content" @bind:event="oninput" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["HeadingLevel"]</label>
                    <select class="form-select" @bind="hb.Level">
                        <option value="1">Level 1 (H1)</option>
                        <option value="2">Level 2 (H2)</option>
                        <option value="3">Level 3 (H3)</option>
                        <option value="4">Level 4 (H4)</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Alignment"]</label>
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-sm @(hb.HorizontalAlignment == "Left" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => hb.HorizontalAlignment = "Left"'>
                            <i class="ti ti-align-left"></i>
                        </button>
                        <button type="button" class="btn btn-sm @(hb.HorizontalAlignment == "Center" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => hb.HorizontalAlignment = "Center"'>
                            <i class="ti ti-align-center"></i>
                        </button>
                        <button type="button" class="btn btn-sm @(hb.HorizontalAlignment == "Right" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => hb.HorizontalAlignment = "Right"'>
                            <i class="ti ti-align-right"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" @bind="hb.IsBold">
                        <span class="form-check-label">@this.Localizer["Bold"]</span>
                    </label>
                </div>
            }
            else if (this.Block is TextBlock tb)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Content"]</label>
                    <textarea class="form-control" @bind="tb.Content" @bind:event="oninput" rows="5"></textarea>
                    <div class="form-hint">@this.Localizer["PlaceholderHint"]</div>
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["FontSize"]</label>
                    <input type="number" class="form-control" @bind="tb.FontSize" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Alignment"]</label>
                    <div class="btn-group w-100">
                        <button type="button" class="btn btn-sm @(tb.HorizontalAlignment == "Left" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => tb.HorizontalAlignment = "Left"'>
                            <i class="ti ti-align-left"></i>
                        </button>
                        <button type="button" class="btn btn-sm @(tb.HorizontalAlignment == "Center" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => tb.HorizontalAlignment = "Center"'>
                            <i class="ti ti-align-center"></i>
                        </button>
                        <button type="button" class="btn btn-sm @(tb.HorizontalAlignment == "Right" ? "btn-primary" : "btn-outline-secondary")" @onclick='() => tb.HorizontalAlignment = "Right"'>
                            <i class="ti ti-align-right"></i>
                        </button>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" @bind="tb.IsBold">
                        <span class="form-check-label">@this.Localizer["Bold"]</span>
                    </label>
                </div>
            }
            else if (this.Block is DividerBlock db)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Thickness"]</label>
                    <input type="number" class="form-control" @bind="db.Thickness" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Color"]</label>
                    <input type="color" class="form-control form-control-color w-100" @bind="db.Color" />
                </div>
            }
            else if (this.Block is SpacerBlock sb)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Height"]</label>
                    <input type="number" class="form-control" @bind="sb.Height" />
                </div>
            }
            else if (this.Block is ImageBlock ib)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["ImageUrl"]</label>
                    <input type="text" class="form-control" @bind="ib.ImageUrl" placeholder="https://..." />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["DataBinding"]</label>
                    <input type="text" class="form-control" @bind="ib.BindingPath" placeholder="e.g. Organization.Logo" />
                </div>
                <div class="row g-2 mb-3">
                    <div class="col-6">
                        <label class="form-label">@this.Localizer["Width"]</label>
                        <input type="number" class="form-control" @bind="ib.Width" />
                    </div>
                    <div class="col-6">
                        <label class="form-label">@this.Localizer["Height"]</label>
                        <input type="number" class="form-control" @bind="ib.Height" />
                    </div>
                </div>
            }
            else if (this.Block is TableBlock table)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["DataArrayPath"]</label>
                    <input type="text" class="form-control" @bind="table.BindingPath" placeholder="e.g. Booking.Items" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Columns"]</label>
                    <div class="space-y-2">
                        @foreach (var col in table.Columns)
                        {
                            <div class="card p-2 bg-light">
                                <div class="row g-2 mb-2">
                                    <div class="col">
                                        <input type="text" class="form-control form-control-sm" @bind="col.Header" placeholder="Header" />
                                    </div>
                                    <div class="col-auto">
                                        <button class="btn btn-sm btn-icon btn-ghost-danger" @onclick="() => table.Columns.Remove(col)">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <input type="text" class="form-control form-control-sm" @bind="col.BindingPath" placeholder="Field Path" />
                            </div>
                        }
                    </div>
                    <button class="btn btn-sm btn-outline-primary w-100 mt-2" @onclick="() => table.Columns.Add(new TableColumn())">
                        <i class="ti ti-plus me-1"></i> @this.Localizer["AddColumn"]
                    </button>
                </div>
            }
            else if (this.Block is SignatureBlock sig)
            {
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["Label"]</label>
                    <input type="text" class="form-control" @bind="sig.Label" />
                </div>
                <div class="mb-3">
                    <label class="form-label">@this.Localizer["DataPath"]</label>
                    <input type="text" class="form-control" @bind="sig.BindingPath" />
                </div>
            }
            
            <div class="mt-4 pt-3 border-top">
                <button class="btn btn-outline-danger w-100" @onclick="this.OnDeleteRequested">
                    <i class="ti ti-trash me-2"></i> @this.Localizer["DeleteBlock"]
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public LayoutBlock? Block { get; set; }
    [Parameter] public EventCallback OnDeleteRequested { get; set; }
}
