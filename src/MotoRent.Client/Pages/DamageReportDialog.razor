    private async Task UpdateStatus()
    {
        if (!CanUpdate) return;

        Saving = true;
        try
        {
            var actualCost = m_newStatus == "Charged" ? m_actualCost : (decimal?)null;
            var result = await DamageReportService.UpdateStatusAsync(
                Entity.DamageReportId,
                m_newStatus,
                actualCost,
                m_notes,
                UserName);

            if (result.Success)
            {
                ShowSuccess(Localizer["DamageReportUpdated", Localizer[m_newStatus].Value]);
                Close();
            }
            else
            {
                ShowError(Localizer["UpdateFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["Error", ex.Message]);
        }
        finally
        {
            Saving = false;
        }
    }
