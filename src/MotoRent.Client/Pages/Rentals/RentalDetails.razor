                        <div class="table-responsive">
                            <table class="table table-vcenter card-table">
                                <thead>
                                    <tr>
                                        <th>@Localizer["Accessory"]</th>
                                        <th class="text-center">@Localizer["Quantity"]</th>
                                        <th class="text-end">@Localizer["Charged"]</th>
