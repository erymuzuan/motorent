@inherits MotoRentComponentBase
@using MotoRent.Domain.Entities
@using MotoRent.Services
@inject RenterService RenterService

<div class="d-flex flex-column gap-4">
    <div>
        <h5 class="mb-1">Select a Renter</h5>
        <p class="text-secondary mb-0">Search for an existing renter or create a new one</p>
    </div>

    <div class="mb-3">
        <label class="form-label">Search Renter</label>
        <div class="input-icon">
            <span class="input-icon-addon">
                <i class="ti ti-search"></i>
            </span>
            <input type="text" class="form-control" placeholder="Search by name, phone, or passport..."
                   @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyup" />
        </div>
        @if (m_showSearchResults && m_searchResults.Count > 0)
        {
            <div class="dropdown-menu show w-100 mt-1" style="max-height: 300px; overflow-y: auto;">
                @foreach (var renter in m_searchResults)
                {
                    <a class="dropdown-item d-flex align-items-center gap-2" href="#"
                       @onclick="@(() => SelectRenterItem(renter))" @onclick:preventDefault>
                        <span class="avatar avatar-sm bg-primary text-white">
                            @renter.FullName?.FirstOrDefault()
                        </span>
                        <div class="d-flex flex-column">
                            <span>@renter.FullName</span>
                            <small class="text-secondary">
                                @renter.Phone @(renter.Nationality != null ? $"| {renter.Nationality}" : "")
                            </small>
                        </div>
                    </a>
                }
            </div>
        }
        else if (m_showSearchResults && !string.IsNullOrWhiteSpace(m_searchTerm))
        {
            <div class="dropdown-menu show w-100 mt-1">
                <span class="dropdown-item text-secondary">No renters found</span>
            </div>
        }
    </div>

    <hr>

    <button type="button" class="btn btn-outline-primary" @onclick="@(() => OnCreateNew.InvokeAsync())">
        <i class="ti ti-user-plus me-2"></i>
        Create New Renter
    </button>

    @if (m_recentRenters.Count > 0)
    {
        <div class="mt-4">
            <h6 class="mb-3">Recent Renters</h6>
            <div class="d-flex flex-column gap-2">
                @foreach (var renter in m_recentRenters.Take(5))
                {
                    <div class="card card-link @(this.SelectedRenter?.RenterId == renter.RenterId ? "border-primary" : "")"
                         style="cursor: pointer;" @onclick="@(() => SelectRenterItem(renter))">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-2">
                                    <span class="avatar avatar-sm bg-primary text-white">
                                        @renter.FullName?.FirstOrDefault()
                                    </span>
                                    <div class="d-flex flex-column">
                                        <span class="fw-medium">@renter.FullName</span>
                                        <small class="text-secondary">
                                            @renter.Phone
                                            @if (!string.IsNullOrEmpty(renter.Nationality))
                                            {
                                                <span> | @renter.Nationality</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                                @if (this.SelectedRenter?.RenterId == renter.RenterId)
                                {
                                    <i class="ti ti-circle-check text-success" style="font-size: 1.25rem;"></i>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    @if (this.SelectedRenter != null)
    {
        <hr>
        <div class="alert alert-success d-flex align-items-center gap-2">
            <i class="ti ti-user"></i>
            <span>Selected: <strong>@this.SelectedRenter.FullName</strong> (@this.SelectedRenter.Phone)</span>
        </div>

        <div class="accordion" id="renterDetailsAccordion">
            <div class="accordion-item">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#renterDetailsPanel" aria-expanded="false">
                        Renter Details
                    </button>
                </h2>
                <div id="renterDetailsPanel" class="accordion-collapse collapse">
                    <div class="accordion-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <small class="text-secondary d-block">Nationality</small>
                                <span>@(this.SelectedRenter.Nationality ?? "-")</span>
                            </div>
                            <div class="col-6">
                                <small class="text-secondary d-block">Passport/ID</small>
                                <span>@(this.SelectedRenter.PassportNo ?? this.SelectedRenter.NationalIdNo ?? "-")</span>
                            </div>
                            <div class="col-6">
                                <small class="text-secondary d-block">Email</small>
                                <span>@(this.SelectedRenter.Email ?? "-")</span>
                            </div>
                            <div class="col-6">
                                <small class="text-secondary d-block">Hotel</small>
                                <span>@(this.SelectedRenter.HotelName ?? "-")</span>
                            </div>
                            <div class="col-12">
                                <small class="text-secondary d-block">Driving License</small>
                                <span>
                                    @(this.SelectedRenter.DrivingLicenseNo ?? "-")
                                    @if (!string.IsNullOrEmpty(this.SelectedRenter.DrivingLicenseCountry))
                                    {
                                        <span> (@this.SelectedRenter.DrivingLicenseCountry)</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public Renter? SelectedRenter { get; set; }
    [Parameter] public EventCallback<Renter?> SelectedRenterChanged { get; set; }
    [Parameter] public EventCallback OnCreateNew { get; set; }

    private List<Renter> m_recentRenters = [];
    private List<Renter> m_searchResults = [];
    private bool m_loading;
    private string? m_searchTerm;
    private bool m_showSearchResults;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadRecentRenters();
    }

    private async Task LoadRecentRenters()
    {
        this.m_loading = true;
        try
        {
            var result = await this.RenterService.GetRentersAsync(this.ShopId, page: 1, pageSize: 10);
            this.m_recentRenters = result.ItemCollection;
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading renters: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private async Task OnSearchKeyup(KeyboardEventArgs e)
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();

        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += async (sender, args) =>
        {
            this.m_debounceTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await this.SearchRenters();
                this.StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private async Task SearchRenters()
    {
        if (string.IsNullOrWhiteSpace(this.m_searchTerm))
        {
            this.m_searchResults = this.m_recentRenters.Take(5).ToList();
            this.m_showSearchResults = false;
            return;
        }

        var result = await this.RenterService.GetRentersAsync(this.ShopId, this.m_searchTerm, page: 1, pageSize: 10);
        this.m_searchResults = result.ItemCollection;
        this.m_showSearchResults = true;
    }

    private async Task SelectRenterItem(Renter renter)
    {
        this.SelectedRenter = renter;
        this.m_showSearchResults = false;
        this.m_searchTerm = renter.FullName;
        await this.SelectedRenterChanged.InvokeAsync(renter);
    }
}
