@inherits LocalizedComponentBase<CheckIn>
@using MotoRent.Domain.Entities
@using MotoRent.Services
@inject MotorbikeService MotorbikeService

<div class="d-flex flex-column gap-4">
    <div>
        <h5 class="mb-1">@Localizer["SelectVehicle"]</h5>
        <p class="text-secondary mb-0">@Localizer["SelectVehicleDesc"]</p>
    </div>

    <div class="d-flex flex-wrap gap-2 align-items-center">
        <div class="input-icon" style="max-width: 300px;">
            <span class="input-icon-addon">
                <i class="ti ti-search"></i>
            </span>
            <input type="text" class="form-control" placeholder="@Localizer["SearchRenterPlaceholder"]"
                   @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchChanged" />
        </div>

        <select class="form-select" style="width: 150px;" @bind="m_brandFilter" @bind:after="ApplyFilters">
            <option value="">@Localizer["AllBrands"]</option>
            @foreach (var brand in m_brands)
            {
                <option value="@brand">@brand</option>
            }
        </select>

        <div class="ms-auto">
            <span class="badge bg-success">@m_availableCount @Localizer["Available"]</span>
        </div>
    </div>

    @if (m_loading)
    {
        <div class="progress progress-sm">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }

    <div class="row g-3">
        @foreach (var motorbike in m_filteredMotorbikes)
        {
            var isSelected = this.SelectedMotorbike?.MotorbikeId == motorbike.MotorbikeId;
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100 @(isSelected ? "border-primary" : "")"
                     style="cursor: pointer; @(isSelected ? "border-width: 2px;" : "")"
                     @onclick="@(() => SelectMotorbikeItem(motorbike))">
                    <div class="card-header">
                        <div class="d-flex align-items-center gap-2">
                            <span class="avatar bg-primary text-white">
                                <i class="ti ti-motorbike"></i>
                            </span>
                            <div class="flex-grow-1">
                                <div class="fw-medium">@motorbike.Brand @motorbike.Model</div>
                                <div class="text-primary small">@motorbike.LicensePlate</div>
                            </div>
                            @if (isSelected)
                            {
                                <i class="ti ti-circle-check text-success" style="font-size: 1.25rem;"></i>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column gap-1">
                            <div class="d-flex justify-content-between">
                                <small class="text-secondary">@Localizer["Engine"]</small>
                                <span>@motorbike.EngineCC cc</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-secondary">@Localizer["Year"]</small>
                                <span>@motorbike.Year</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-secondary">@Localizer["Color"]</small>
                                <span>@(motorbike.Color ?? "-")</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-secondary">@Localizer["CurrentMileage"]</small>
                                <span>@motorbike.Mileage.ToString("N0") km</span>
                            </div>
                            <hr class="my-2">
                            <div class="d-flex justify-content-between">
                                <span class="fw-medium">@Localizer["DailyRate"]</span>
                                <span class="text-primary fw-semibold" style="font-size: 1.1rem;">
                                    @FormatCurrency(motorbike.DailyRate)
                                </span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-secondary">@Localizer["Deposit"]</small>
                                <span>@FormatCurrency(motorbike.DepositAmount)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (m_filteredMotorbikes.Count == 0 && !m_loading)
    {
        <div class="alert alert-info">
            <i class="ti ti-info-circle me-2"></i>
            @Localizer["NoVehiclesFound"]
        </div>
    }

    @if (this.SelectedMotorbike != null)
    {
        <div class="alert alert-success d-flex align-items-center gap-2 mt-4">
            <i class="ti ti-motorbike"></i>
            <span>
                @Localizer["Selected"]: <strong>@this.SelectedMotorbike.Brand @this.SelectedMotorbike.Model</strong>
                (@this.SelectedMotorbike.LicensePlate) - @FormatCurrency(this.SelectedMotorbike.DailyRate)/@Localizer["Days"]
            </span>
        </div>
    }
</div>

@code {
    [Parameter] public Motorbike? SelectedMotorbike { get; set; }
    [Parameter] public EventCallback<Motorbike?> SelectedMotorbikeChanged { get; set; }

    private List<Motorbike> m_motorbikes = [];
    private List<Motorbike> m_filteredMotorbikes = [];
    private List<string> m_brands = [];
    private bool m_loading;
    private string? m_searchTerm;
    private string? m_brandFilter;
    private int m_availableCount;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadMotorbikes();
    }

    private async Task LoadMotorbikes()
    {
        this.m_loading = true;
        try
        {
            var result = await this.MotorbikeService.GetMotorbikesAsync(this.ShopId, status: "Available", pageSize: 100);
            this.m_motorbikes = result.ItemCollection;
            this.m_availableCount = this.m_motorbikes.Count;
            this.m_brands = this.m_motorbikes.Select(m => m.Brand).Distinct().OrderBy(b => b).ToList();
            this.ApplyFilters();
        }
        catch (Exception ex)
        {
            this.ShowError(this.Localizer["ErrorLoading", ex.Message]);
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchChanged()
    {
        this.ApplyFilters();
    }

    private void ApplyFilters()
    {
        var filtered = this.m_motorbikes.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(this.m_searchTerm))
        {
            var term = this.m_searchTerm.ToLowerInvariant();
            filtered = filtered.Where(m =>
                m.Brand.ToLowerInvariant().Contains(term) ||
                m.Model.ToLowerInvariant().Contains(term) ||
                m.LicensePlate.ToLowerInvariant().Contains(term));
        }

        if (!string.IsNullOrWhiteSpace(this.m_brandFilter))
        {
            filtered = filtered.Where(m => m.Brand == this.m_brandFilter);
        }

        this.m_filteredMotorbikes = filtered.OrderBy(m => m.Brand).ThenBy(m => m.Model).ToList();
    }

    private async Task SelectMotorbikeItem(Motorbike motorbike)
    {
        this.SelectedMotorbike = motorbike;
        await this.SelectedMotorbikeChanged.InvokeAsync(motorbike);
    }
}
