@inherits LocalizedDialogBase<Rental, CheckOutDialog>
@inject RentalService RentalService
@inject RenterService RenterService
@inject MotorbikeService MotorbikeService

<div class="modal-body">
    @if (m_loading)
    {
        <div class="progress progress-sm mb-3">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }

    <ul class="nav nav-tabs mb-3" role="tablist">
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link @(m_activeTab == 0 ? "active" : "")"
                    @onclick="@(() => m_activeTab = 0)">
                <i class="ti ti-clipboard-check me-1"></i>
                Return Details
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link @(m_activeTab == 1 ? "active" : "")"
                    @onclick="@(() => m_activeTab = 1)">
                <i class="ti ti-alert-triangle me-1"></i>
                Damage Assessment
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button type="button" class="nav-link @(m_activeTab == 2 ? "active" : "")"
                    @onclick="@(() => m_activeTab = 2)">
                <i class="ti ti-calculator me-1"></i>
                Final Settlement
            </button>
        </li>
    </ul>

    <div class="tab-content">
        @* Return Details Tab *@
        <div class="tab-pane fade @(m_activeTab == 0 ? "show active" : "")">
            <h4 class="mb-3">Rental Information</h4>

            <div class="row g-3 mb-3">
                <div class="col-6">
                    <div class="subheader text-secondary">Renter</div>
                    <div class="fw-bold">@m_renterName</div>
                </div>
                <div class="col-6">
                    <div class="subheader text-secondary">Motorbike</div>
                    <div class="fw-bold">@m_motorbikeName</div>
                </div>
                <div class="col-6">
                    <div class="subheader text-secondary">Start Date</div>
                    <div>@FormatDate(Entity.StartDate)</div>
                </div>
                <div class="col-6">
                    <div class="subheader text-secondary">Expected Return</div>
                    <div>@FormatDate(Entity.ExpectedEndDate)</div>
                </div>
            </div>

            <hr class="my-3" />

            <h4 class="mb-3">Return Information</h4>

            <div class="row g-3">
                <div class="col-12 col-sm-6">
                    <label class="form-label">Actual Return Date</label>
                    <input type="date" class="form-control" @bind="m_actualReturnDate" />
                </div>
                <div class="col-12 col-sm-6">
                    <label class="form-label">Mileage at Return (km)</label>
                    <input type="number" class="form-control" @bind="m_mileageEnd" min="@Entity.MileageStart" />
                </div>
            </div>

            @if (m_extraDays > 0)
            {
                <div class="alert alert-warning mt-3">
                    <div class="d-flex align-items-center">
                        <i class="ti ti-alert-triangle me-2"></i>
                        <div>
                            <strong>Late Return:</strong> @m_extraDays day(s) past expected return date.
                            Additional charge: @FormatCurrency(m_extraDays * Entity.DailyRate)
                        </div>
                    </div>
                </div>
            }
            else if (m_extraDays < 0)
            {
                <div class="alert alert-info mt-3">
                    <div class="d-flex align-items-center">
                        <i class="ti ti-info-circle me-2"></i>
                        <div>
                            <strong>Early Return:</strong> Returning @Math.Abs(m_extraDays) day(s) early.
                        </div>
                    </div>
                </div>
            }

            <div class="mt-3">
                <label class="form-label">Return Notes</label>
                <textarea class="form-control" @bind="m_notes" rows="2"
                          placeholder="Any additional notes about the return..."></textarea>
            </div>
        </div>

        @* Damage Assessment Tab *@
        <div class="tab-pane fade @(m_activeTab == 1 ? "show active" : "")">
            <h4 class="mb-3">Condition Assessment</h4>

            <div class="form-selectgroup form-selectgroup-boxes d-flex flex-column gap-2 mb-3">
                <label class="form-selectgroup-item flex-fill">
                    <input type="radio" name="damage-level" value="None" class="form-selectgroup-input"
                           checked="@(m_damageLevel == "None")" @onchange="@(() => m_damageLevel = "None")" />
                    <div class="form-selectgroup-label d-flex align-items-center p-3">
                        <div class="me-3">
                            <span class="form-selectgroup-check"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="ti ti-circle-check text-success fs-2 me-3"></i>
                            <div>
                                <div class="fw-bold">No Damage</div>
                                <small class="text-secondary">Motorbike returned in good condition</small>
                            </div>
                        </div>
                    </div>
                </label>

                <label class="form-selectgroup-item flex-fill">
                    <input type="radio" name="damage-level" value="Minor" class="form-selectgroup-input"
                           checked="@(m_damageLevel == "Minor")" @onchange="@(() => m_damageLevel = "Minor")" />
                    <div class="form-selectgroup-label d-flex align-items-center p-3">
                        <div class="me-3">
                            <span class="form-selectgroup-check"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="ti ti-info-circle text-info fs-2 me-3"></i>
                            <div>
                                <div class="fw-bold">Minor Damage</div>
                                <small class="text-secondary">Small scratches, scuffs - cosmetic only</small>
                            </div>
                        </div>
                    </div>
                </label>

                <label class="form-selectgroup-item flex-fill">
                    <input type="radio" name="damage-level" value="Moderate" class="form-selectgroup-input"
                           checked="@(m_damageLevel == "Moderate")" @onchange="@(() => m_damageLevel = "Moderate")" />
                    <div class="form-selectgroup-label d-flex align-items-center p-3">
                        <div class="me-3">
                            <span class="form-selectgroup-check"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="ti ti-alert-triangle text-warning fs-2 me-3"></i>
                            <div>
                                <div class="fw-bold">Moderate Damage</div>
                                <small class="text-secondary">Dents, broken parts, requires repair</small>
                            </div>
                        </div>
                    </div>
                </label>

                <label class="form-selectgroup-item flex-fill">
                    <input type="radio" name="damage-level" value="Major" class="form-selectgroup-input"
                           checked="@(m_damageLevel == "Major")" @onchange="@(() => m_damageLevel = "Major")" />
                    <div class="form-selectgroup-label d-flex align-items-center p-3">
                        <div class="me-3">
                            <span class="form-selectgroup-check"></span>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="ti ti-alert-octagon text-danger fs-2 me-3"></i>
                            <div>
                                <div class="fw-bold">Major Damage</div>
                                <small class="text-secondary">Significant damage, major repairs needed</small>
                            </div>
                        </div>
                    </div>
                </label>
            </div>

            @if (m_damageLevel != "None")
            {
                <hr class="my-3" />

                <h4 class="mb-3">Damage Details</h4>

                <div class="mb-3">
                    <label class="form-label">Damage Description</label>
                    <textarea class="form-control" @bind="m_damageDescription" rows="3"
                              placeholder="Describe the damage in detail..."></textarea>
                </div>

                <div class="mb-3">
                    <label class="form-label">Estimated Repair Cost (THB)</label>
                    <div class="input-group">
                        <span class="input-group-text">à¸¿</span>
                        <input type="number" class="form-control" @bind="m_damageEstimate"
                               min="0" max="100000" step="100" />
                    </div>
                </div>

                <div class="alert alert-info">
                    <i class="ti ti-info-circle me-2"></i>
                    This amount will be deducted from the deposit if applicable.
                </div>
            }
        </div>

        @* Final Settlement Tab *@
        <div class="tab-pane fade @(m_activeTab == 2 ? "show active" : "")">
            <h4 class="mb-3">Charges Summary</h4>

            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small">Original Rental</span>
                        <span class="small">@FormatCurrency(Entity.TotalAmount) (Paid)</span>
                    </div>

                    @if (m_extraDays > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small text-warning">Extra Days (@m_extraDays)</span>
                            <span class="small text-warning">+@FormatCurrency(m_extraDaysCharge)</span>
                        </div>
                    }

                    @if (m_damageLevel != "None" && m_damageEstimate > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small text-danger">Damage (@m_damageLevel)</span>
                            <span class="small text-danger">+@FormatCurrency(m_damageEstimate)</span>
                        </div>
                    }

                    <hr class="my-2" />

                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Additional Due</span>
                        <span class="fw-bold text-primary">@FormatCurrency(m_totalAdditional)</span>
                    </div>
                </div>
            </div>

            <h4 class="mb-3">Deposit Settlement</h4>

            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="small">Deposit Held</span>
                        <span class="small">@FormatCurrency(m_depositAmount)</span>
                    </div>

                    @if (m_totalAdditional > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span class="small">Deductions</span>
                            <span class="small text-danger">-@FormatCurrency(Math.Min(m_totalAdditional, m_depositAmount))</span>
                        </div>
                    }

                    <hr class="my-2" />

                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Refund Amount</span>
                        <span class="h4 text-success mb-0">@FormatCurrency(m_refundAmount)</span>
                    </div>

                    @if (m_totalAdditional > m_depositAmount)
                    {
                        <div class="alert alert-warning mt-3 mb-0">
                            <i class="ti ti-alert-triangle me-2"></i>
                            Additional payment of @FormatCurrency(m_totalAdditional - m_depositAmount) is required from the renter.
                        </div>
                    }
                </div>
            </div>

            <h4 class="mb-3">Refund Method</h4>

            <div class="btn-group w-100 mb-3" role="group">
                <input type="radio" class="btn-check" name="refund-method" id="refund-cash" value="Cash"
                       checked="@(m_refundMethod == "Cash")" @onchange="@(() => m_refundMethod = "Cash")" />
                <label class="btn btn-outline-primary" for="refund-cash">Cash</label>

                <input type="radio" class="btn-check" name="refund-method" id="refund-card" value="Card"
                       checked="@(m_refundMethod == "Card")" @onchange="@(() => m_refundMethod = "Card")" />
                <label class="btn btn-outline-primary" for="refund-card">Return to Card</label>

                <input type="radio" class="btn-check" name="refund-method" id="refund-bank" value="BankTransfer"
                       checked="@(m_refundMethod == "BankTransfer")" @onchange="@(() => m_refundMethod = "BankTransfer")" />
                <label class="btn btn-outline-primary" for="refund-bank">Bank Transfer</label>
            </div>

            <label class="form-check">
                <input type="checkbox" class="form-check-input" @bind="m_refundProcessed" />
                <span class="form-check-label">@GetRefundConfirmationText()</span>
            </label>
        </div>
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        Cancel
    </button>
    <button type="button" class="btn btn-success" disabled="@(!CanComplete)" @onclick="CompleteCheckOut">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-logout me-1"></i>
        Complete Check-Out
    </button>
</div>

@code {
    private bool m_loading = true;
    private int m_activeTab;

    // Rental details
    private string m_renterName = "";
    private string m_motorbikeName = "";
    private decimal m_depositAmount;

    // Return details
    private DateTime? m_actualReturnDate;
    private int m_mileageEnd;
    private string? m_notes;

    // Damage assessment
    private string m_damageLevel = "None";
    private string? m_damageDescription;
    private decimal m_damageEstimate;

    // Settlement
    private string m_refundMethod = "Cash";
    private bool m_refundProcessed;

    // Calculated values
    private int m_extraDays => this.m_actualReturnDate.HasValue
        ? Math.Max(0, (int)(this.m_actualReturnDate.Value - this.Entity.ExpectedEndDate.Date).TotalDays)
        : 0;

    private decimal m_extraDaysCharge => this.m_extraDays * this.Entity.DailyRate;
    private decimal m_totalAdditional => this.m_extraDaysCharge + (this.m_damageLevel != "None" ? this.m_damageEstimate : 0);
    private decimal m_refundAmount => Math.Max(0, this.m_depositAmount - this.m_totalAdditional);

    private bool CanComplete => this.m_actualReturnDate.HasValue &&
                                this.m_mileageEnd >= this.Entity.MileageStart &&
                                (this.m_refundAmount == 0 || this.m_refundProcessed);

    protected override async Task OnInitializedAsync()
    {
        this.m_loading = true;
        try
        {
            // Set defaults
            this.m_actualReturnDate = DateTime.Today;
            this.m_mileageEnd = this.Entity.MileageStart;

            // Load renter name
            var renter = await this.DataContext.LoadOneAsync<Renter>(r => r.RenterId == this.Entity.RenterId);
            this.m_renterName = renter?.FullName ?? "Unknown";

            // Load motorbike name
            var motorbike = await this.DataContext.LoadOneAsync<Motorbike>(m => m.MotorbikeId == this.Entity.MotorbikeId);
            this.m_motorbikeName = motorbike != null ? $"{motorbike.Brand} {motorbike.Model} ({motorbike.LicensePlate})" : "Unknown";
            if (motorbike != null)
                this.m_mileageEnd = motorbike.Mileage;

            // Load deposit
            var deposit = await this.DataContext.LoadOneAsync<Deposit>(d => d.RentalId == this.Entity.RentalId);
            this.m_depositAmount = deposit?.Amount ?? 0;
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private string GetRefundConfirmationText()
    {
        if (this.m_refundAmount > 0)
            return $"I confirm the refund of {FormatCurrency(this.m_refundAmount)} has been processed via {this.m_refundMethod}";
        else if (this.m_totalAdditional > this.m_depositAmount)
            return $"I confirm the additional payment of {FormatCurrency(this.m_totalAdditional - this.m_depositAmount)} has been collected";
        else
            return "No refund needed - deposit covers all charges";
    }

    private async Task CompleteCheckOut()
    {
        if (!this.m_actualReturnDate.HasValue) return;

        this.Saving = true;
        try
        {
            var request = new CheckOutRequest
            {
                RentalId = this.Entity.RentalId,
                ActualEndDate = new DateTimeOffset(this.m_actualReturnDate.Value, TimeSpan.Zero),
                MileageEnd = this.m_mileageEnd,
                Notes = this.m_notes,
                PaymentMethod = this.m_refundMethod,
                RefundDeposit = this.m_refundAmount > 0
            };

            if (this.m_damageLevel != "None" && !string.IsNullOrEmpty(this.m_damageDescription))
            {
                request.DamageReports = [
                    new DamageReportInfo
                    {
                        Description = this.m_damageDescription,
                        Severity = this.m_damageLevel,
                        EstimatedCost = this.m_damageEstimate
                    }
                ];
            }

            var result = await this.RentalService.CheckOutAsync(request, this.UserName);

            if (result.Success)
            {
                this.ShowSuccess($"Check-out completed. Refund: {FormatCurrency(result.RefundAmount)}");
                this.Close();
            }
            else
            {
                this.ShowError($"Check-out failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }
}
