                        Severity = this.m_damageLevel,
                        EstimatedCost = this.m_damageEstimate,
                        PhotoPaths = this.m_damagePhotoPaths.Count > 0 ? this.m_damagePhotoPaths : null
                    }
                ];
            }

            var result = await this.RentalService.CheckOutAsync(request, this.UserName);

            if (result.Success)
            {
                // Record deposit refund to till session (if cash refund and till is open)
                if (this.m_tillSession != null && this.m_refundAmount > 0 && this.m_refundMethod == "Cash")
                {
                    await this.RecordDepositRefundToTillAsync(result.RefundAmount);
                }

                // Generate and show settlement receipt
                await this.GenerateAndShowSettlementReceiptAsync(result);

                var message = Localizer["CheckOutCompleted"].Value;
                if (this.m_refundAmount > 0)
                    message += $" {Localizer["RefundLabel", FormatCurrency(result.RefundAmount)]}";
                if (this.m_returnToShopId != this.RequestContext.GetShopId())
                    message += $" {Localizer["VehicleTransferred", this.m_poolShops.FirstOrDefault(s => s.ShopId == this.m_returnToShopId)?.Name ?? ""]}";
                this.ShowSuccess(message);
                this.Close();
            }
            else
            {
                this.ShowError(Localizer["CheckOutFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["ErrorLoading", ex.Message]);
        }
        finally
        {
            this.Saving = false;
        }
    }

    /// <summary>
    /// Records the deposit refund to the till session.
    /// Only cash refunds are recorded to the till.
    /// </summary>
    private async Task RecordDepositRefundToTillAsync(decimal refundAmount)
    {
        if (this.m_tillSession == null || refundAmount <= 0) return;

        try
        {
            var rentalNo = $"#{Entity.RentalId}";

            // Load the deposit to get its ID
            var deposit = await this.DataContext.LoadOneAsync<Deposit>(d => d.RentalId == this.Entity.RentalId);

            await this.TillService.RecordDepositRefundFromTillAsync(
                this.m_tillSession.ShopId,
                this.UserName,
                deposit?.DepositId ?? 0,
                this.Entity.RentalId,
                refundAmount,
                $"Deposit refund {rentalNo}");
        }
        catch (Exception ex)
        {
            // Log but don't fail the checkout if till recording fails
            this.Logger.LogError(ex, "Failed to record deposit refund to till session");
        }
    }

    /// <summary>
    /// Generates a settlement receipt and shows the print dialog.
    /// </summary>
    private async Task GenerateAndShowSettlementReceiptAsync(CheckOutResult result)
    {
        try
        {
            // Get renter and vehicle
            var renter = await this.RenterService.GetRenterByIdAsync(this.Entity.RenterId);
            var vehicle = await this.VehicleService.GetVehicleByIdAsync(this.Entity.VehicleId);

            if (renter == null || vehicle == null) return;

            // Get damage reports
            List<DamageReport>? damages = null;
            if (this.m_damageEstimate > 0)
            {
                damages = await this.DamageReportService.GetByRentalAsync(this.Entity.RentalId);
            }

            // Calculate extra days charge
            var extraDays = this.m_extraDays;
            var extraDaysCharge = this.m_extraDaysCharge;

            // Get location fee
            var locationFee = this.m_dropoffLocationFee + this.m_dropoffOutOfHoursFee;
            var locationName = this.m_selectedDropoffLocation?.Name;

            // Create refund payments
            var payments = new List<ReceiptPayment>();
            if (result.RefundAmount > 0)
            {
                payments.Add(new ReceiptPayment
                {
                    Method = this.m_refundMethod,
                    Amount = result.RefundAmount,
                    Currency = SupportedCurrencies.THB,
                    ExchangeRate = 1.0m,
                    AmountInBaseCurrency = result.RefundAmount,
                    PaidAt = DateTimeOffset.Now
                });
            }

            // If there's an amount due (deposit doesn't cover charges)
            var amountDue = Math.Max(0, this.m_totalAdditional - this.m_depositAmount);
            if (amountDue > 0)
            {
                payments.Add(new ReceiptPayment
                {
                    Method = this.m_refundMethod,
                    Amount = amountDue,
                    Currency = SupportedCurrencies.THB,
                    ExchangeRate = 1.0m,
                    AmountInBaseCurrency = amountDue,
                    PaidAt = DateTimeOffset.Now
                });
            }

            // Generate the receipt
            var receipt = await this.ReceiptService.GenerateSettlementReceiptAsync(
                this.Entity.RentalId,
                this.m_tillSession?.TillSessionId,
                this.Entity,
                renter,
                vehicle,
                this.m_depositAmount,
                extraDaysCharge,
                extraDays,
                this.m_damageEstimate,
                damages,
                locationFee,
                locationName,
                result.RefundAmount,
                amountDue,
                payments,
                this.UserName);

            // Show print dialog
            await this.DialogService
                .Create<ReceiptPrintDialog>(this.CommonLocalizer["SettlementReceipt"])
                .WithParameter(x => x.Entity, receipt)
                .WithParameter(x => x.IsReprint, false)
                .Large()
                .ShowDialogAsync();
        }
        catch (Exception ex)
        {
            // Log but don't fail the checkout if receipt generation fails
            this.Logger.LogError(ex, "Failed to generate settlement receipt");
            this.ShowWarning(this.Localizer["ReceiptGenerationFailed"]);
        }
    }
