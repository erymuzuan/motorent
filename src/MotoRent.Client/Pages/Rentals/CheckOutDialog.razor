@using MotoRent.Domain.Entities
@using MotoRent.Client.Components.Shared
@using MotoRent.Client.Controls
@inherits LocalizedDialogBase<Rental, CheckOutDialog>
@inject RentalService RentalService
@inject RenterService RenterService
@inject VehicleService VehicleService
@inject VehiclePoolService VehiclePoolService
@inject ShopService ShopService
@inject MaintenanceService MaintenanceService

<div class="checkout-dialog">
    @if (m_loading)
    {
        <div class="loading-overlay">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }

    @* Step Progress Indicator *@
    <div class="step-progress">
        <div class="step-item @(m_activeTab >= 0 ? "active" : "") @(m_activeTab > 0 ? "completed" : "")"
             @onclick="@(() => m_activeTab = 0)">
            <div class="step-circle">
                @if (m_activeTab > 0)
                {
                    <i class="ti ti-check"></i>
                }
                else
                {
                    <span>1</span>
                }
            </div>
            <div class="step-label">Return</div>
        </div>
        <div class="step-connector @(m_activeTab > 0 ? "active" : "")"></div>
        <div class="step-item @(m_activeTab >= 1 ? "active" : "") @(m_activeTab > 1 ? "completed" : "")"
             @onclick="@(() => m_activeTab = 1)">
            <div class="step-circle">
                @if (m_activeTab > 1)
                {
                    <i class="ti ti-check"></i>
                }
                else
                {
                    <span>2</span>
                }
            </div>
            <div class="step-label">Damage</div>
        </div>
        <div class="step-connector @(m_activeTab > 1 ? "active" : "")"></div>
        <div class="step-item @(m_activeTab >= 2 ? "active" : "")">
            <div class="step-circle">
                <span>3</span>
            </div>
            <div class="step-label">Settle</div>
        </div>
    </div>

    <div class="step-content">
        @* Return Details Tab *@
        <div class="step-pane @(m_activeTab == 0 ? "active" : "")">
            @* Rental Summary Card *@
            <div class="summary-card">
                <div class="summary-row">
                    <div class="summary-item">
                        <i class="ti ti-user summary-icon"></i>
                        <div class="summary-text">
                            <span class="summary-label">Renter</span>
                            <span class="summary-value">@m_renterName</span>
                        </div>
                    </div>
                    <div class="summary-item">
                        <i class="ti ti-motorbike summary-icon"></i>
                        <div class="summary-text">
                            <span class="summary-label">@GetVehicleTypeLabel()</span>
                            <span class="summary-value">@m_vehicleName</span>
                        </div>
                    </div>
                </div>
                <div class="summary-dates">
                    <div class="date-box">
                        <span class="date-label">Started</span>
                        <span class="date-value">@FormatDate(Entity.StartDate)</span>
                    </div>
                    <div class="date-arrow">
                        <i class="ti ti-arrow-right"></i>
                    </div>
                    <div class="date-box">
                        <span class="date-label">Expected</span>
                        <span class="date-value">
                            @if (m_isIntervalRental)
                            {
                                @Entity.ExpectedEndDate.ToString("HH:mm")
                            }
                            else
                            {
                                @FormatDate(Entity.ExpectedEndDate)
                            }
                        </span>
                    </div>
                </div>
            </div>

            @* Return Form *@
            <div class="form-section">
                <h5 class="section-title">
                    <i class="ti ti-calendar-check"></i>
                    Return Information
                </h5>

                <div class="form-grid">
                    @if (!m_isIntervalRental)
                    {
                        <div class="form-group">
                            <label class="form-label">Actual Return Date</label>
                            <input type="date" class="form-control form-control-lg" @bind="m_actualReturnDate" />
                        </div>
                    }
                    @if (m_showMileage)
                    {
                        <div class="form-group">
                            <label class="form-label">Mileage at Return (km)</label>
                            <input type="number" class="form-control form-control-lg" @bind="m_mileageEnd" min="@Entity.MileageStart" />
                        </div>
                    }
                </div>
            </div>

            @* Cross-shop return for pooled vehicles *@
            @if (m_isPooledVehicle && m_poolShops.Count > 1)
            {
                <div class="form-section">
                    <h5 class="section-title">
                        <i class="ti ti-share text-purple"></i>
                        Return Location
                    </h5>
                    <select class="form-select form-select-lg" @bind="m_returnToShopId">
                        @foreach (var shop in m_poolShops)
                        {
                            <option value="@shop.ShopId">
                                @shop.Name @(shop.ShopId == this.ShopId ? "(Current Shop)" : "")
                            </option>
                        }
                    </select>
                    @if (m_returnToShopId != this.ShopId)
                    {
                        <div class="info-banner info-purple mt-2">
                            <i class="ti ti-info-circle"></i>
                            <span>Vehicle will be transferred to the selected shop</span>
                        </div>
                    }
                </div>
            }

            @* Status Alerts *@
            @if (m_extraDays > 0 && !m_isIntervalRental)
            {
                <div class="status-alert status-warning">
                    <div class="status-icon">
                        <i class="ti ti-alert-triangle"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">Late Return</span>
                        <span class="status-detail">@m_extraDays day(s) overdue · +@FormatCurrency(m_extraDays * Entity.RentalRate)</span>
                    </div>
                </div>
            }
            else if (m_extraDays < 0 && !m_isIntervalRental)
            {
                <div class="status-alert status-info">
                    <div class="status-icon">
                        <i class="ti ti-clock"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">Early Return</span>
                        <span class="status-detail">Returning @Math.Abs(m_extraDays) day(s) early</span>
                    </div>
                </div>
            }

            <div class="form-section">
                <label class="form-label">Return Notes (Optional)</label>
                <textarea class="form-control" @bind="m_notes" rows="2"
                          placeholder="Any notes about the return..."></textarea>
            </div>

            @* Navigation Buttons *@
            <div class="step-nav">
                <div></div>
                <button type="button" class="btn btn-primary btn-lg" @onclick="@(() => m_activeTab = 1)">
                    Next: Damage Check
                    <i class="ti ti-arrow-right ms-2"></i>
                </button>
            </div>
        </div>

        @* Damage Assessment Tab *@
        <div class="step-pane @(m_activeTab == 1 ? "active" : "")">
            <h5 class="section-title mb-3">
                <i class="ti ti-clipboard-check"></i>
                Vehicle Condition
            </h5>

            <div class="damage-options">
                <div class="damage-option @(m_damageLevel == "None" ? "selected" : "") damage-none"
                     @onclick="@(() => m_damageLevel = "None")">
                    <div class="damage-icon">
                        <i class="ti ti-circle-check"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">No Damage</span>
                        <span class="damage-desc">Good condition</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "None")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Minor" ? "selected" : "") damage-minor"
                     @onclick="@(() => m_damageLevel = "Minor")">
                    <div class="damage-icon">
                        <i class="ti ti-info-circle"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">Minor</span>
                        <span class="damage-desc">Scratches, scuffs</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Minor")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Moderate" ? "selected" : "") damage-moderate"
                     @onclick="@(() => m_damageLevel = "Moderate")">
                    <div class="damage-icon">
                        <i class="ti ti-alert-triangle"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">Moderate</span>
                        <span class="damage-desc">Dents, repairs needed</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Moderate")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Major" ? "selected" : "") damage-major"
                     @onclick="@(() => m_damageLevel = "Major")">
                    <div class="damage-icon">
                        <i class="ti ti-alert-octagon"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">Major</span>
                        <span class="damage-desc">Significant damage</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Major")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>
            </div>

            @if (m_damageLevel != "None")
            {
                <div class="damage-details-section">
                    <h5 class="section-title">
                        <i class="ti ti-file-description"></i>
                        Damage Details
                    </h5>

                    <div class="form-group">
                        <label class="form-label">Describe the damage</label>
                        <textarea class="form-control" @bind="m_damageDescription" rows="3"
                                  placeholder="What damage was found?"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Estimated Repair Cost</label>
                        <div class="cost-input">
                            <span class="cost-currency">฿</span>
                            <input type="number" class="form-control form-control-lg" @bind="m_damageEstimate"
                                   min="0" max="100000" step="100" placeholder="0" />
                        </div>
                    </div>

                    <h5 class="section-title mt-4">
                        <i class="ti ti-camera"></i>
                        Damage Photos
                    </h5>
                    <p class="text-secondary small mb-3">
                        Take photos for documentation
                    </p>

                    <DamagePhotoUpload @ref="m_damagePhotoUpload"
                                       RentalId="@Entity.RentalId"
                                       PhotoType="After"
                                       MaxPhotos="5"
                                       OnPhotosChanged="OnDamagePhotosChanged" />

                    <div class="info-banner info-blue mt-3">
                        <i class="ti ti-info-circle"></i>
                        <span>Amount will be deducted from deposit</span>
                    </div>
                </div>
            }

            @* Navigation Buttons *@
            <div class="step-nav">
                <button type="button" class="btn btn-ghost-secondary btn-lg" @onclick="@(() => m_activeTab = 0)">
                    <i class="ti ti-arrow-left me-2"></i>
                    Back
                </button>
                <button type="button" class="btn btn-primary btn-lg" @onclick="@(() => m_activeTab = 2)">
                    Next: Settlement
                    <i class="ti ti-arrow-right ms-2"></i>
                </button>
            </div>
        </div>

        @* Final Settlement Tab *@
        <div class="step-pane @(m_activeTab == 2 ? "active" : "")">
            @* Charges Summary *@
            <div class="settlement-card">
                <h5 class="settlement-title">Charges Summary</h5>

                <div class="settlement-row">
                    <span>Original Rental</span>
                    <span class="text-secondary">@FormatCurrency(Entity.TotalAmount) (Paid)</span>
                </div>

                @if (m_extraDays > 0)
                {
                    <div class="settlement-row text-warning">
                        <span>Extra Days (@m_extraDays)</span>
                        <span>+@FormatCurrency(m_extraDaysCharge)</span>
                    </div>
                }

                @if (m_damageLevel != "None" && m_damageEstimate > 0)
                {
                    <div class="settlement-row text-danger">
                        <span>Damage (@m_damageLevel)</span>
                        <span>+@FormatCurrency(m_damageEstimate)</span>
                    </div>
                }

                <div class="settlement-total">
                    <span>Additional Due</span>
                    <span class="total-value">@FormatCurrency(m_totalAdditional)</span>
                </div>
            </div>

            @* Deposit Settlement *@
            <div class="settlement-card">
                <h5 class="settlement-title">Deposit Settlement</h5>

                <div class="settlement-row">
                    <span>Deposit Held</span>
                    <span>@FormatCurrency(m_depositAmount)</span>
                </div>

                @if (m_totalAdditional > 0)
                {
                    <div class="settlement-row text-danger">
                        <span>Deductions</span>
                        <span>-@FormatCurrency(Math.Min(m_totalAdditional, m_depositAmount))</span>
                    </div>
                }

                <div class="refund-amount">
                    <span class="refund-label">Refund Amount</span>
                    <span class="refund-value @(m_refundAmount > 0 ? "text-success" : "")">
                        @FormatCurrency(m_refundAmount)
                    </span>
                </div>

                @if (m_totalAdditional > m_depositAmount)
                {
                    <div class="status-alert status-warning mt-3">
                        <div class="status-icon">
                            <i class="ti ti-alert-triangle"></i>
                        </div>
                        <div class="status-content">
                            <span class="status-title">Payment Required</span>
                            <span class="status-detail">Collect @FormatCurrency(m_totalAdditional - m_depositAmount) from renter</span>
                        </div>
                    </div>
                }
            </div>

            @* Refund Method *@
            <div class="form-section">
                <h5 class="section-title">
                    <i class="ti ti-wallet"></i>
                    Refund Method
                </h5>

                <div class="refund-methods">
                    <div class="refund-method @(m_refundMethod == "Cash" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "Cash")">
                        <i class="ti ti-cash"></i>
                        <span>Cash</span>
                    </div>
                    <div class="refund-method @(m_refundMethod == "Card" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "Card")">
                        <i class="ti ti-credit-card"></i>
                        <span>Card</span>
                    </div>
                    <div class="refund-method @(m_refundMethod == "BankTransfer" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "BankTransfer")">
                        <i class="ti ti-building-bank"></i>
                        <span>Bank</span>
                    </div>
                </div>

                <label class="confirm-check">
                    <input type="checkbox" class="form-check-input" @bind="m_refundProcessed" />
                    <span>@GetRefundConfirmationText()</span>
                </label>
            </div>

            @if (m_hasMaintenanceWarning)
            {
                <div class="status-alert status-warning">
                    <div class="status-icon">
                        <i class="ti ti-tool"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">Maintenance Notice</span>
                        <span class="status-detail">
                            @if (m_maintenanceOverdueCount > 0)
                            {
                                <span class="badge bg-danger me-1">@m_maintenanceOverdueCount overdue</span>
                            }
                            @if (m_maintenanceDueSoonCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@m_maintenanceDueSoonCount due soon</span>
                            }
                        </span>
                        <label class="confirm-check mt-2">
                            <input type="checkbox" class="form-check-input" @bind="m_acknowledgeMaintenanceWarning" />
                            <span>I acknowledge this</span>
                        </label>
                    </div>
                </div>
            }

            @* Navigation Buttons *@
            <div class="step-nav">
                <button type="button" class="btn btn-ghost-secondary btn-lg" @onclick="@(() => m_activeTab = 1)">
                    <i class="ti ti-arrow-left me-2"></i>
                    Back
                </button>
                <button type="button" class="btn btn-success btn-lg" disabled="@(!CanComplete)" @onclick="CompleteCheckOut">
                    @if (Saving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    <i class="ti ti-check me-1"></i>
                    Complete
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .checkout-dialog {
        position: relative;
        padding: 0;
    }

    .loading-overlay {
        position: absolute;
        inset: 0;
        background: var(--tblr-bg-surface-tertiary);
        opacity: 0.9;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    /* Step Progress */
    .step-progress {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 1.5rem;
        background: var(--tblr-bg-surface-secondary);
        border-bottom: 1px solid var(--tblr-border-color);
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--tblr-bg-surface);
        border: 2px solid var(--tblr-border-color);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: var(--tblr-secondary-color);
        transition: all 0.3s ease;
    }

    .step-item.active .step-circle {
        background: var(--tblr-primary);
        border-color: var(--tblr-primary);
        color: white;
    }

    .step-item.completed .step-circle {
        background: var(--tblr-success);
        border-color: var(--tblr-success);
        color: white;
    }

    .step-label {
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--tblr-secondary-color);
        margin-top: 0.5rem;
    }

    .step-item.active .step-label {
        color: var(--tblr-primary);
    }

    .step-connector {
        width: 50px;
        height: 2px;
        background: var(--tblr-border-color);
        margin: 0 0.5rem;
        margin-bottom: 1.5rem;
    }

    .step-connector.active {
        background: var(--tblr-success);
    }

    /* Step Content */
    .step-content {
        padding: 1.25rem;
    }

    .step-pane {
        display: none;
    }

    .step-pane.active {
        display: block;
        animation: fadeIn 0.3s ease;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(10px); }
        to { opacity: 1; transform: translateY(0); }
    }

    /* Summary Card */
    .summary-card {
        background: var(--tblr-bg-surface-secondary);
        border: 1px solid var(--tblr-border-color);
        border-radius: 16px;
        padding: 1rem;
        margin-bottom: 1.25rem;
    }

    .summary-row {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .summary-item {
        flex: 1;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .summary-icon {
        width: 36px;
        height: 36px;
        background: var(--tblr-bg-surface);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--tblr-primary);
        font-size: 1.1rem;
        box-shadow: var(--tblr-box-shadow-card);
    }

    .summary-text {
        display: flex;
        flex-direction: column;
    }

    .summary-label {
        font-size: 0.7rem;
        color: var(--tblr-secondary-color);
        text-transform: uppercase;
    }

    .summary-value {
        font-weight: 600;
        font-size: 0.85rem;
    }

    .summary-dates {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: var(--tblr-bg-surface);
        border-radius: 12px;
        padding: 0.75rem;
    }

    .date-box {
        text-align: center;
        flex: 1;
    }

    .date-label {
        display: block;
        font-size: 0.7rem;
        color: var(--tblr-secondary-color);
        text-transform: uppercase;
    }

    .date-value {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .date-arrow {
        color: var(--tblr-secondary-color);
    }

    /* Form Section */
    .form-section {
        margin-bottom: 1.25rem;
    }

    .section-title {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        color: var(--tblr-body-color);
        margin-bottom: 0.75rem;
    }

    .section-title i {
        color: var(--tblr-primary);
    }

    .form-grid {
        display: grid;
        gap: 1rem;
    }

    .form-group {
        margin-bottom: 1rem;
    }

    .form-label {
        font-size: 0.85rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    /* Status Alerts */
    .status-alert {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem;
        border-radius: 12px;
        margin-bottom: 1rem;
    }

    .status-alert.status-warning {
        background: rgba(var(--tblr-warning-rgb), 0.15);
    }

    .status-alert.status-info {
        background: rgba(var(--tblr-info-rgb), 0.15);
    }

    .status-icon {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    .status-warning .status-icon {
        background: #f59e0b;
        color: white;
    }

    .status-info .status-icon {
        background: #3b82f6;
        color: white;
    }

    .status-content {
        flex: 1;
    }

    .status-title {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .status-detail {
        display: block;
        font-size: 0.8rem;
        color: var(--tblr-secondary-color);
    }

    /* Info Banners */
    .info-banner {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem;
        border-radius: 10px;
        font-size: 0.8rem;
    }

    .info-banner.info-purple {
        background: rgba(var(--tblr-purple-rgb), 0.15);
        color: var(--tblr-purple);
    }

    .info-banner.info-blue {
        background: rgba(var(--tblr-info-rgb), 0.15);
        color: var(--tblr-info);
    }

    /* Damage Options */
    .damage-options {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 0.75rem;
        margin-bottom: 1rem;
    }

    .damage-option {
        background: var(--tblr-bg-surface);
        border: 2px solid var(--tblr-border-color);
        border-radius: 12px;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        position: relative;
    }

    .damage-option:hover {
        border-color: var(--tblr-border-color-active);
        background: var(--tblr-bg-surface-secondary);
    }

    .damage-option.selected {
        border-width: 2px;
    }

    .damage-none.selected { border-color: var(--tblr-success); background: rgba(var(--tblr-success-rgb), 0.1); }
    .damage-minor.selected { border-color: var(--tblr-info); background: rgba(var(--tblr-info-rgb), 0.1); }
    .damage-moderate.selected { border-color: var(--tblr-warning); background: rgba(var(--tblr-warning-rgb), 0.1); }
    .damage-major.selected { border-color: var(--tblr-danger); background: rgba(var(--tblr-danger-rgb), 0.1); }

    .damage-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
