@using MotoRent.Domain.Entities
@using MotoRent.Domain.Models
@using MotoRent.Client.Components.Shared
@using MotoRent.Client.Components.Receipts
@using MotoRent.Client.Controls
@inherits LocalizedDialogBase<Rental, CheckOutDialog>
@inject RentalService RentalService
@inject RenterService RenterService
@inject VehicleService VehicleService
@inject VehiclePoolService VehiclePoolService
@inject ShopService ShopService
@inject MaintenanceService MaintenanceService
@inject ServiceLocationService LocationService
@inject OperatingHoursService HoursService
@inject RentalPricingService PricingService
@inject TillService TillService
@inject ReceiptService ReceiptService
@inject DamageReportService DamageReportService

<div class="checkout-dialog">
    @if (m_loading)
    {
        <div class="loading-overlay">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }

    @* Step Progress Indicator *@
    <div class="step-progress">
        <div class="step-item @(m_activeTab >= 0 ? "active" : "") @(m_activeTab > 0 ? "completed" : "")"
             @onclick="@(() => m_activeTab = 0)">
            <div class="step-circle">
                @if (m_activeTab > 0)
                {
                    <i class="ti ti-check"></i>
                }
                else
                {
                    <span>1</span>
                }
            </div>
            <div class="step-label">@Localizer["Return"]</div>
        </div>
        <div class="step-connector @(m_activeTab > 0 ? "active" : "")"></div>
        <div class="step-item @(m_activeTab >= 1 ? "active" : "") @(m_activeTab > 1 ? "completed" : "")"
             @onclick="@(() => m_activeTab = 1)">
            <div class="step-circle">
                @if (m_activeTab > 1)
                {
                    <i class="ti ti-check"></i>
                }
                else
                {
                    <span>2</span>
                }
            </div>
            <div class="step-label">@Localizer["Damage"]</div>
        </div>
        <div class="step-connector @(m_activeTab > 1 ? "active" : "")"></div>
        <div class="step-item @(m_activeTab >= 2 ? "active" : "")">
            <div class="step-circle">
                <span>3</span>
            </div>
            <div class="step-label">@Localizer["Settle"]</div>
        </div>
    </div>

    <div class="step-content">
        @* Return Details Tab *@
        <div class="step-pane @(m_activeTab == 0 ? "active" : "")">
            @* Rental Summary Card *@
            <div class="summary-card">
                <div class="summary-row">
                    <div class="summary-item">
                        <i class="ti ti-user summary-icon"></i>
                        <div class="summary-text">
                            <span class="summary-label">@Localizer["Renter"]</span>
                            <span class="summary-value">@m_renterName</span>
                        </div>
                    </div>
                    <div class="summary-item">
                        <i class="ti ti-motorbike summary-icon"></i>
                        <div class="summary-text">
                            <span class="summary-label">@GetVehicleTypeLabel()</span>
                            <span class="summary-value">@m_vehicleName</span>
                        </div>
                    </div>
                </div>
                <div class="summary-dates">
                    <div class="date-box">
                        <span class="date-label">@Localizer["Started"]</span>
                        <span class="date-value">@FormatDate(Entity.StartDate)</span>
                    </div>
                    <div class="date-arrow">
                        <i class="ti ti-arrow-right"></i>
                    </div>
                    <div class="date-box">
                        <span class="date-label">@Localizer["Expected"]</span>
                        <span class="date-value">
                            @if (m_isIntervalRental)
                            {
                                @Entity.ExpectedEndDate.ToString("HH:mm")
                            }
                            else
                            {
                                @FormatDate(Entity.ExpectedEndDate)
                            }
                        </span>
                    </div>
                </div>
            </div>

            @* Return Form *@
            <div class="form-section">
                <h5 class="section-title">
                    <i class="ti ti-calendar-check"></i>
                    @Localizer["ReturnInformation"]
                </h5>

                <div class="form-grid">
                    @if (!m_isIntervalRental)
                    {
                        <div class="form-group">
                            <label class="form-label">@Localizer["ActualReturnDate"]</label>
                            <input type="date" class="form-control form-control-lg" @bind="m_actualReturnDate" />
                        </div>
                    }
                    @if (m_showMileage)
                    {
                        <div class="form-group">
                            <label class="form-label">@Localizer["MileageAtReturn"]</label>
                            <input type="number" class="form-control form-control-lg" @bind="m_mileageEnd" min="@Entity.MileageStart" />
                        </div>
                    }
                </div>
            </div>

            @* Cross-shop return for pooled vehicles *@
            @if (m_isPooledVehicle && m_poolShops.Count > 1)
            {
                <div class="form-section">
                    <h5 class="section-title">
                        <i class="ti ti-share text-purple"></i>
                        @Localizer["ReturnLocation"]
                    </h5>
                    <select class="form-select form-select-lg" @bind="m_returnToShopId">
                        @foreach (var shop in m_poolShops)
                        {
                            <option value="@shop.ShopId">
                                @shop.Name @(shop.ShopId == this.RequestContext.GetShopId() ? $"({Localizer["CurrentShop"]})" : "")
                            </option>
                        }
                    </select>
                    @if (m_returnToShopId != this.RequestContext.GetShopId())
                    {
                        <div class="info-banner info-purple mt-2">
                            <i class="ti ti-info-circle"></i>
                            <span>@Localizer["TransferHint"]</span>
                        </div>
                    }
                </div>
            }

            @* Drop-off Service Location *@
            @if (m_dropoffLocations.Count > 0)
            {
                <div class="form-section">
                    <h5 class="section-title">
                        <i class="ti ti-map-pin text-teal"></i>
                        @Localizer["DropoffServiceLocation"]
                    </h5>
                    <select class="form-select" @bind="m_dropoffLocationId" @bind:after="OnDropoffLocationChanged">
                        <option value="0">@Localizer["AtShopFree"]</option>
                        @foreach (var location in m_dropoffLocations)
                        {
                            <option value="@location.ServiceLocationId">
                                @location.Name
                                @if (location.DropoffFee > 0)
                                {
                                    @($" (+{FormatCurrency(location.DropoffFee)})")
                                }
                            </option>
                        }
                    </select>

                    @if (m_dropoffLocationId > 0)
                    {
                        <div class="mt-3">
                            <label class="form-label">@Localizer["DropoffTime"]</label>
                            <input type="time" class="form-control"
                                   value="@m_dropoffTime.ToString(@"hh\:mm")"
                                   @onchange="OnDropoffTimeChanged" />
                            @if (m_dropoffOutOfHoursBand != null)
                            {
                                <small class="text-warning mt-1 d-block">
                                    <i class="ti ti-clock-exclamation me-1"></i>
                                    @m_dropoffOutOfHoursBand.BandName: +@FormatCurrency(m_dropoffOutOfHoursBand.Fee)
                                </small>
                            }
                        </div>
                    }

                    @if (m_dropoffLocationFee > 0 || m_dropoffOutOfHoursFee > 0)
                    {
                        <div class="info-banner info-blue mt-3">
                            <i class="ti ti-info-circle"></i>
                            <span>
                                @Localizer["DropoffFees"]: <strong>@FormatCurrency(m_dropoffLocationFee + m_dropoffOutOfHoursFee)</strong>
                                @if (m_dropoffLocationFee > 0 && m_dropoffOutOfHoursFee > 0)
                                {
                                    @($" ({Localizer["LocationFee"]}: {FormatCurrency(m_dropoffLocationFee)}, {Localizer["OutOfHoursFee"]}: {FormatCurrency(m_dropoffOutOfHoursFee)})")
                                }
                            </span>
                        </div>
                    }
                </div>
            }

            @* Status Alerts *@
            @if (m_extraDays > 0 && !m_isIntervalRental)
            {
                <div class="status-alert status-warning">
                    <div class="status-icon">
                        <i class="ti ti-alert-triangle"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">@Localizer["LateReturn"]</span>
                        <span class="status-detail">@Localizer["OverdueDaysCharge", m_extraDays, FormatCurrency(m_extraDaysCharge)]</span>
                    </div>
                </div>
            }
            else if (m_extraDays < 0 && !m_isIntervalRental)
            {
                <div class="status-alert status-info">
                    <div class="status-icon">
                        <i class="ti ti-clock"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">@Localizer["EarlyReturn"]</span>
                        <span class="status-detail">@Localizer["ReturningEarly", Math.Abs(m_extraDays)]</span>
                    </div>
                </div>
            }

            <div class="form-section">
                <label class="form-label">@Localizer["ReturnNotes"]</label>
                <textarea class="form-control" @bind="m_notes" rows="2"
                          placeholder="@Localizer["ReturnNotesPlaceholder"]"></textarea>
            </div>

            @* Post-rental Inspection *@
            <div class="form-section">
                <h5 class="section-title">
                    <i class="ti ti-clipboard-check text-teal"></i>
                    @Localizer["PostRentalInspection"]
                </h5>
                <p class="text-secondary small mb-3">@Localizer["PostRentalInspectionDesc"]</p>
                <InspectionSelector @bind-Value="m_postInspection" />
            </div>

            @if (m_postInspection != null)
            {
                <div class="info-banner info-blue">
                    <i class="ti ti-circle-check"></i>
                    <span>
                        @Localizer["InspectionRecorded", m_postInspection.InspectorName]
                        @if (!m_postInspection.IsSystemUser && !string.IsNullOrEmpty(m_postInspection.CompanyAffiliation))
                        {
                            <span class="text-secondary">(@m_postInspection.CompanyAffiliation)</span>
                        }
                    </span>
                </div>
            }

            @* Navigation Buttons *@
            <div class="step-nav">
                <div></div>
                <button type="button" class="btn btn-primary btn-lg" @onclick="@(() => m_activeTab = 1)">
                    @Localizer["NextDamageCheck"]
                    <i class="ti ti-arrow-right ms-2"></i>
                </button>
            </div>
        </div>

        @* Damage Assessment Tab *@
        <div class="step-pane @(m_activeTab == 1 ? "active" : "")">
            <h5 class="section-title mb-3">
                <i class="ti ti-clipboard-check"></i>
                @Localizer["VehicleCondition"]
            </h5>

            <div class="damage-options">
                <div class="damage-option @(m_damageLevel == "None" ? "selected" : "") damage-none"
                     @onclick="@(() => m_damageLevel = "None")">
                    <div class="damage-icon">
                        <i class="ti ti-circle-check"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">@Localizer["NoDamage"]</span>
                        <span class="damage-desc">@Localizer["GoodCondition"]</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "None")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Minor" ? "selected" : "") damage-minor"
                     @onclick="@(() => m_damageLevel = "Minor")">
                    <div class="damage-icon">
                        <i class="ti ti-info-circle"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">@Localizer["Minor"]</span>
                        <span class="damage-desc">@Localizer["ScratchesScuffs"]</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Minor")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Moderate" ? "selected" : "") damage-moderate"
                     @onclick="@(() => m_damageLevel = "Moderate")">
                    <div class="damage-icon">
                        <i class="ti ti-alert-triangle"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">@Localizer["Moderate"]</span>
                        <span class="damage-desc">@Localizer["RepairsNeeded"]</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Moderate")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>

                <div class="damage-option @(m_damageLevel == "Major" ? "selected" : "") damage-major"
                     @onclick="@(() => m_damageLevel = "Major")">
                    <div class="damage-icon">
                        <i class="ti ti-alert-octagon"></i>
                    </div>
                    <div class="damage-text">
                        <span class="damage-title">@Localizer["Major"]</span>
                        <span class="damage-desc">@Localizer["SignificantDamage"]</span>
                    </div>
                    <div class="damage-check">
                        @if (m_damageLevel == "Major")
                        {
                            <i class="ti ti-check"></i>
                        }
                    </div>
                </div>
            </div>

            @if (m_damageLevel != "None")
            {
                <div class="damage-details-section">
                    <h5 class="section-title">
                        <i class="ti ti-file-description"></i>
                        @Localizer["DamageDetails"]
                    </h5>

                    <div class="form-group">
                        <label class="form-label">@Localizer["DescribeDamage"]</label>
                        <textarea class="form-control" @bind="m_damageDescription" rows="3"
                                  placeholder="@Localizer["DescribeDamagePlaceholder"]"></textarea>
                    </div>

                    <div class="form-group">
                        <label class="form-label">@Localizer["EstimatedRepairCost"]</label>
                        <div class="cost-input">
                            <span class="cost-currency">฿</span>
                            <input type="number" class="form-control form-control-lg" @bind="m_damageEstimate"
                                   min="0" max="100000" step="100" placeholder="0" />
                        </div>
                    </div>

                    <h5 class="section-title mt-4">
                        <i class="ti ti-camera"></i>
                        @Localizer["DamagePhotos"]
                    </h5>
                    <p class="text-secondary small mb-3">
                        @Localizer["DamagePhotosDesc"]
                    </p>

                    <DamagePhotoUpload @ref="m_damagePhotoUpload"
                                       RentalId="@Entity.RentalId"
                                       PhotoType="After"
                                       MaxPhotos="5"
                                       OnPhotosChanged="OnDamagePhotosChanged" />

                    <div class="info-banner info-blue mt-3">
                        <i class="ti ti-info-circle"></i>
                        <span>@Localizer["DeductedFromDeposit"]</span>
                    </div>
                </div>
            }

            @* Navigation Buttons *@
            <div class="step-nav">
                <button type="button" class="btn btn-ghost-secondary btn-lg" @onclick="@(() => m_activeTab = 0)">
                    <i class="ti ti-arrow-left me-2"></i>
                    @Localizer["Back"]
                </button>
                <button type="button" class="btn btn-primary btn-lg" @onclick="@(() => m_activeTab = 2)">
                    @Localizer["NextSettlement"]
                    <i class="ti ti-arrow-right ms-2"></i>
                </button>
            </div>
        </div>

        @* Final Settlement Tab *@
        <div class="step-pane @(m_activeTab == 2 ? "active" : "")">
            @* Charges Summary *@
            <div class="settlement-card">
                <h5 class="settlement-title">@Localizer["ChargesSummary"]</h5>

                <div class="settlement-row">
                    <span>@Localizer["OriginalRental"]</span>
                    <span class="text-secondary">@FormatCurrency(Entity.TotalAmount) (@Localizer["Paid"])</span>
                </div>

                @* Dynamic Pricing Badge (shows when applied) *@
                @if (Entity.DynamicPricingApplied)
                {
                    <div class="dynamic-pricing-summary">
                        <button type="button" class="dynamic-pricing-toggle @(m_showPricingBreakdown ? "expanded" : "")"
                                @onclick="@(() => m_showPricingBreakdown = !m_showPricingBreakdown)">
                            <i class="ti ti-chart-arrows-vertical text-warning me-2"></i>
                            <span class="flex-grow-1 text-start">@Localizer["DynamicPricingApplied"]</span>
                            <span class="badge bg-warning text-dark me-2">×@Entity.AverageMultiplier.ToString("N2")</span>
                            <i class="ti @(m_showPricingBreakdown ? "ti-chevron-up" : "ti-chevron-down")"></i>
                        </button>

                        @if (m_showPricingBreakdown && Entity.DayPricingBreakdown.Count > 0)
                        {
                            <div class="pricing-breakdown">
                                <div class="breakdown-header">
                                    <span>@Localizer["Date"]</span>
                                    <span class="text-end">@Localizer["BaseRate"]</span>
                                    <span class="text-center">@Localizer["Multiplier"]</span>
                                    <span class="text-end">@Localizer["AdjustedRate"]</span>
                                </div>
                                @foreach (var day in Entity.DayPricingBreakdown)
                                {
                                    <div class="breakdown-row @(day.HasAdjustment ? "adjusted" : "")">
                                        <span>@day.Date.ToString("dd MMM")</span>
                                        <span class="text-end">@FormatCurrency(day.BaseRate)</span>
                                        <span class="text-center">
                                            @if (day.HasAdjustment)
                                            {
                                                <span class="text-warning fw-medium">×@day.Multiplier.ToString("N2")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">×1.00</span>
                                            }
                                        </span>
                                        <span class="text-end fw-medium">@FormatCurrency(day.AdjustedRate)</span>
                                    </div>
                                }
                                <div class="breakdown-footer">
                                    <span class="text-muted">@Entity.AppliedPricingRules</span>
                                    <span class="text-decoration-line-through text-muted">
                                        @FormatCurrency(Entity.BaseRentalRate * Entity.DayPricingBreakdown.Count)
                                    </span>
                                    <span></span>
                                    <span class="fw-bold text-warning">
                                        @FormatCurrency(Entity.DayPricingBreakdown.Sum(d => d.AdjustedRate))
                                    </span>
                                </div>
                            </div>
                        }
                    </div>
                }

                @if (m_extraDays > 0)
                {
                    <div class="settlement-row text-warning">
                        <span>@Localizer["ExtraDays", m_extraDays]</span>
                        <span>+@FormatCurrency(m_extraDaysCharge)</span>
                    </div>
                }

                @if (m_damageLevel != "None" && m_damageEstimate > 0)
                {
                    <div class="settlement-row text-danger">
                        <span>@Localizer["Damage"] (@Localizer[m_damageLevel])</span>
                        <span>+@FormatCurrency(m_damageEstimate)</span>
                    </div>
                }

                @if (m_dropoffLocationFee > 0)
                {
                    <div class="settlement-row text-secondary">
                        <span><i class="ti ti-map-pin me-1"></i>@m_selectedDropoffLocation?.Name</span>
                        <span>+@FormatCurrency(m_dropoffLocationFee)</span>
                    </div>
                }

                @if (m_dropoffOutOfHoursFee > 0)
                {
                    <div class="settlement-row text-warning">
                        <span><i class="ti ti-clock me-1"></i>@m_dropoffOutOfHoursBand?.BandName</span>
                        <span>+@FormatCurrency(m_dropoffOutOfHoursFee)</span>
                    </div>
                }

                <div class="settlement-total">
                    <span>@Localizer["AdditionalDue"]</span>
                    <span class="total-value">@FormatCurrency(m_totalAdditional)</span>
                </div>
            </div>

            @* Deposit Settlement *@
            <div class="settlement-card">
                <h5 class="settlement-title">@Localizer["DepositSettlement"]</h5>

                <div class="settlement-row">
                    <span>@Localizer["DepositHeld"]</span>
                    <span>@FormatCurrency(m_depositAmount)</span>
                </div>

                @if (m_totalAdditional > 0)
                {
                    <div class="settlement-row text-danger">
                        <span>@Localizer["Deductions"]</span>
                        <span>-@FormatCurrency(Math.Min(m_totalAdditional, m_depositAmount))</span>
                    </div>
                }

                <div class="refund-amount">
                    <span class="refund-label">@Localizer["RefundAmount"]</span>
                    <span class="refund-value @(m_refundAmount > 0 ? "text-success" : "")">
                        @FormatCurrency(m_refundAmount)
                    </span>
                </div>

                @if (m_totalAdditional > m_depositAmount)
                {
                    <div class="status-alert status-warning mt-3">
                        <div class="status-icon">
                            <i class="ti ti-alert-triangle"></i>
                        </div>
                        <div class="status-content">
                            <span class="status-title">@Localizer["PaymentRequired"]</span>
                            <span class="status-detail">@Localizer["CollectFromRenter", FormatCurrency(m_totalAdditional - m_depositAmount)]</span>
                        </div>
                    </div>
                }
            </div>

            @* Refund Method *@
            <div class="form-section">
                <h5 class="section-title">
                    <i class="ti ti-wallet"></i>
                    @Localizer["RefundMethod"]
                </h5>

                <div class="refund-methods">
                    <div class="refund-method @(m_refundMethod == "Cash" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "Cash")">
                        <i class="ti ti-cash"></i>
                        <span>@Localizer["Cash"]</span>
                    </div>
                    <div class="refund-method @(m_refundMethod == "Card" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "Card")">
                        <i class="ti ti-credit-card"></i>
                        <span>@Localizer["Card"]</span>
                    </div>
                    <div class="refund-method @(m_refundMethod == "BankTransfer" ? "selected" : "")"
                         @onclick="@(() => m_refundMethod = "BankTransfer")">
                        <i class="ti ti-building-bank"></i>
                        <span>@Localizer["Bank"]</span>
                    </div>
                </div>

                <label class="confirm-check">
                    <input type="checkbox" class="form-check-input" @bind="m_refundProcessed" />
                    <span>@GetRefundConfirmationText()</span>
                </label>
            </div>

            @if (m_hasMaintenanceWarning)
            {
                <div class="status-alert status-warning">
                    <div class="status-icon">
                        <i class="ti ti-tool"></i>
                    </div>
                    <div class="status-content">
                        <span class="status-title">@Localizer["MaintenanceNotice"]</span>
                        <span class="status-detail">
                            @if (m_maintenanceOverdueCount > 0)
                            {
                                <span class="badge bg-danger me-1">@m_maintenanceOverdueCount @Localizer["Overdue"]</span>
                            }
                            @if (m_maintenanceDueSoonCount > 0)
                            {
                                <span class="badge bg-warning text-dark">@m_maintenanceDueSoonCount @Localizer["DueSoon"]</span>
                            }
                        </span>
                        <label class="confirm-check mt-2">
                            <input type="checkbox" class="form-check-input" @bind="m_acknowledgeMaintenanceWarning" />
                            <span>@Localizer["Acknowledge"]</span>
                        </label>
                    </div>
                </div>
            }

            @* Navigation Buttons *@
            <div class="step-nav">
                <button type="button" class="btn btn-ghost-secondary btn-lg" @onclick="@(() => m_activeTab = 1)">
                    <i class="ti ti-arrow-left me-2"></i>
                    @Localizer["Back"]
                </button>
                <button type="button" class="btn btn-success btn-lg" disabled="@(!CanComplete)" @onclick="CompleteCheckOut">
                    @if (Saving)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                    }
                    <i class="ti ti-check me-1"></i>
                    @Localizer["Complete"]
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .checkout-dialog {
        position: relative;
        padding: 0;
    }

    .loading-overlay {
        position: absolute;
        inset: 0;
        background: var(--tblr-bg-surface-tertiary);
        opacity: 0.9;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 10;
    }

    /* Step Progress */
    .step-progress {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 1.5rem;
        background: var(--tblr-bg-surface-secondary);
        border-bottom: 1px solid var(--tblr-border-color);
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        cursor: pointer;
    }

    .step-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: var(--tblr-bg-surface);
        border: 2px solid var(--tblr-border-color);
