@using MotoRent.Domain.Entities
@inherits LocalizedDialogBase<AccidentParty, AddPartyDialog>
@inject AccidentService AccidentService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label required">@Localizer["PartyType"]</label>
                <select class="form-select" @bind="Entity.PartyType" required>
                    @foreach (var type in Enum.GetValues<AccidentPartyType>())
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@Localizer["Name"]</label>
                <input type="text" class="form-control" @bind="Entity.Name" required
                       placeholder="@Localizer["NamePlaceholder"]" />
            </div>

            <div class="col-md-6">
                <label class="form-label">@Localizer["Phone"]</label>
                <input type="tel" class="form-control" @bind="Entity.Phone"
                       placeholder="@Localizer["PhonePlaceholder"]" />
            </div>

            <div class="col-md-6">
                <label class="form-label">@Localizer["Email"]</label>
                <input type="email" class="form-control" @bind="Entity.Email"
                       placeholder="@Localizer["EmailPlaceholder"]" />
            </div>

            <div class="col-12">
                <label class="form-label">@Localizer["Address"]</label>
                <textarea class="form-control" @bind="Entity.Address" rows="2"
                          placeholder="@Localizer["AddressPlaceholder"]"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label">@Localizer["IdNumber"]</label>
                <input type="text" class="form-control" @bind="Entity.IdNumber"
                       placeholder="@Localizer["IdNumberPlaceholder"]" />
            </div>

            <div class="col-md-6">
                <label class="form-label">@Localizer["Organization"]</label>
                <input type="text" class="form-control" @bind="Entity.Organization"
                       placeholder="@Localizer["OrganizationPlaceholder"]" />
            </div>

            @if (Entity.PartyType == AccidentPartyType.PoliceOfficer)
            {
                <div class="col-md-6">
                    <label class="form-label">@Localizer["BadgeNumber"]</label>
                    <input type="text" class="form-control" @bind="Entity.BadgeNumber" />
                </div>
            }

            @if (Entity.PartyType == AccidentPartyType.ThirdPartyDriver)
            {
                <div class="col-md-6">
                    <label class="form-label">@Localizer["VehicleLicensePlate"]</label>
                    <input type="text" class="form-control" @bind="Entity.VehicleLicensePlate" />
                </div>
                <div class="col-md-6">
                    <label class="form-label">@Localizer["InsurancePolicyNo"]</label>
                    <input type="text" class="form-control" @bind="Entity.InsurancePolicyNo" />
                </div>
            }

            <div class="col-12">
                <label class="form-label">@Localizer["InvolvementDescription"]</label>
                <textarea class="form-control" @bind="Entity.InvolvementDescription" rows="2"
                          placeholder="@Localizer["InvolvementPlaceholder"]"></textarea>
            </div>

            <div class="col-md-4">
                <label class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" @bind="Entity.IsInjured" />
                    <span class="form-check-label">@Localizer["Injured"]</span>
                </label>
            </div>

            @if (Entity.IsInjured)
            {
                <div class="col-md-8">
                    <label class="form-label">@Localizer["InjuryDescription"]</label>
                    <input type="text" class="form-control" @bind="Entity.InjuryDescription"
                           placeholder="@Localizer["InjuryPlaceholder"]" />
                </div>
            }

            <div class="col-md-4">
                <label class="form-check form-switch">
                    <input type="checkbox" class="form-check-input" @bind="m_isAtFault" />
                    <span class="form-check-label">@Localizer["AtFault"]</span>
                </label>
            </div>

            @if (m_isAtFault)
            {
                <div class="col-md-4">
                    <label class="form-label">@Localizer["FaultPercentage"]</label>
                    <div class="input-group">
                        <input type="number" class="form-control" @bind="Entity.FaultPercentage"
                               min="0" max="100" />
                        <span class="input-group-text">%</span>
                    </div>
                </div>
            }

            <div class="col-12">
                <label class="form-label">@Localizer["Notes"]</label>
                <textarea class="form-control" @bind="Entity.Notes" rows="2"
                          placeholder="@Localizer["NotesPlaceholder"]"></textarea>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">@Localizer["Cancel"]</button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
...
    private async Task SaveAsync()
    {
        Saving = true;
        try
        {
            Entity.IsAtFault = m_isAtFault ? true : null;

            var result = await AccidentService.SavePartyAsync(Entity, UserName);
            if (result.Success)
            {
                Close();
            }
            else
            {
                ShowError(Localizer["SaveFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            ShowError(Localizer["Error", ex.Message]);
        }
        finally
        {
            Saving = false;
        }
    }
}
