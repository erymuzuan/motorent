@page "/rentals"
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Client.Pages.Rentals
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<RentalList>
@inject RentalService RentalService
@inject RenterService RenterService
@inject VehicleService VehicleService

<MotoRentPageTitle>Rentals</MotoRentPageTitle>

<div class="rentals-page">
    @* Hero Header with Quick Stats *@
    <div class="rental-header mb-4">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1 class="page-title mb-1">Rentals</h1>
                <p class="text-secondary mb-0">Manage your active rentals</p>
            </div>
            <a href="/rentals/checkin" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="ti ti-plus me-2"></i>
                New Check-In
            </a>
        </div>
    </div>

    @* Quick Stats Cards *@
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-active @(m_activeTab == "Active" ? "active" : "")" @onclick="@(() => SetActiveTab("Active"))">
                <div class="stat-icon">
                    <i class="ti ti-motorbike"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(m_statusCounts.GetValueOrDefault("Active", 0))</div>
                    <div class="stat-label">Active</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-warning @(m_activeTab == "DueToday" ? "active" : "") @(m_dueTodayCount > 0 ? "has-items" : "")" @onclick="@(() => SetActiveTab("DueToday"))">
                <div class="stat-icon">
                    <i class="ti ti-clock-hour-4"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@m_dueTodayCount</div>
                    <div class="stat-label">Due Today</div>
                </div>
                @if (m_dueTodayCount > 0)
                {
                    <span class="stat-badge pulse"></span>
                }
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-danger @(m_activeTab == "Overdue" ? "active" : "") @(m_overdueCount > 0 ? "has-items" : "")" @onclick="@(() => SetActiveTab("Overdue"))">
                <div class="stat-icon">
                    <i class="ti ti-alert-triangle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@m_overdueCount</div>
                    <div class="stat-label">Overdue</div>
                </div>
                @if (m_overdueCount > 0)
                {
                    <span class="stat-badge pulse"></span>
                }
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-success @(m_activeTab == "Completed" ? "active" : "")" @onclick="@(() => SetActiveTab("Completed"))">
                <div class="stat-icon">
                    <i class="ti ti-circle-check"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(m_statusCounts.GetValueOrDefault("Completed", 0))</div>
                    <div class="stat-label">Completed</div>
                </div>
            </div>
        </div>
    </div>

    @* Search Bar *@
    <div class="search-container mb-4">
        <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden">
            <span class="input-group-text bg-white border-0 ps-4">
                <i class="ti ti-search text-secondary"></i>
            </span>
            <input type="text" class="form-control border-0 py-3"
                   placeholder="Search by renter name, vehicle, or plate..."
                   @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
            @if (!string.IsNullOrEmpty(m_searchTerm))
            {
                <button class="btn btn-link text-secondary border-0" @onclick="ClearSearch">
                    <i class="ti ti-x"></i>
                </button>
            }
        </div>
    </div>

    @* Filter Pills *@
    <div class="filter-pills-container mb-4">
        <div class="filter-pills d-flex gap-2 overflow-auto pb-2">
            <button type="button" class="filter-pill @(m_activeTab == "All" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("All"))">
                <span>All</span>
            </button>
            <button type="button" class="filter-pill filter-pill-primary @(m_activeTab == "Active" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Active"))">
                <i class="ti ti-motorbike me-1"></i>
                <span>Active</span>
            </button>
            <button type="button" class="filter-pill filter-pill-warning @(m_activeTab == "DueToday" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("DueToday"))">
                <i class="ti ti-clock me-1"></i>
                <span>Due Today</span>
            </button>
            <button type="button" class="filter-pill filter-pill-danger @(m_activeTab == "Overdue" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Overdue"))">
                <i class="ti ti-alert-triangle me-1"></i>
                <span>Overdue</span>
            </button>
            <button type="button" class="filter-pill filter-pill-success @(m_activeTab == "Completed" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Completed"))">
                <i class="ti ti-check me-1"></i>
                <span>Completed</span>
            </button>
        </div>
    </div>

    @* Rental Cards *@
    <LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card" Rows="4">
        @if (m_filteredRentals.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="ti ti-motorbike"></i>
                </div>
                <h3>No rentals found</h3>
                <p class="text-secondary">@GetEmptyStateMessage()</p>
                <a href="/rentals/checkin" class="btn btn-primary btn-lg rounded-pill px-4 mt-3">
                    <i class="ti ti-plus me-2"></i>
                    Create New Check-In
                </a>
            </div>
        }
        else
        {
            <div class="rental-cards">
                @foreach (var rental in m_filteredRentals)
                {
                    <div class="rental-card @GetCardClass(rental)" @onclick="@(() => ViewRentalDetails(rental))">
                        @* Status Ribbon *@
                        <div class="rental-status-ribbon @GetStatusRibbonClass(rental)">
                            @if (rental.IsOverdue)
                            {
                                <i class="ti ti-alert-triangle me-1"></i>
                                <span>@rental.DaysOverdue day(s) overdue</span>
                            }
                            else if (rental.IsDueToday)
                            {
                                <i class="ti ti-clock me-1"></i>
                                <span>Due Today</span>
                            }
                            else
                            {
                                <span>@rental.Rental.Status</span>
                            }
                        </div>

                        <div class="rental-card-body">
                            @* Main Info Row *@
                            <div class="rental-main-info">
                                <div class="renter-info">
                                    <div class="renter-avatar">
                                        <i class="ti ti-user"></i>
                                    </div>
                                    <div class="renter-details">
                                        <h4 class="renter-name">@rental.RenterName</h4>
                                        <span class="renter-phone">
                                            <i class="ti ti-phone me-1"></i>
                                            @rental.RenterPhone
                                        </span>
                                    </div>
                                </div>
                                <div class="rental-amount">
                                    <span class="amount-value">@FormatCurrency(rental.Rental.TotalAmount)</span>
                                    <span class="amount-label">@rental.Days days</span>
                                </div>
                            </div>

                            @* Vehicle Info *@
                            <div class="vehicle-info">
                                <div class="vehicle-icon">
                                    <i class="ti ti-motorbike"></i>
                                </div>
                                <div class="vehicle-details">
                                    <span class="vehicle-model">@rental.VehicleBrandModel</span>
                                    <span class="vehicle-plate">@rental.VehicleLicensePlate</span>
                                </div>
                            </div>

                            @* Period Info *@
                            <div class="period-info">
                                <div class="period-dates">
                                    <div class="period-start">
                                        <span class="period-label">From</span>
                                        <span class="period-value">@FormatDateShort(rental.Rental.StartDate)</span>
                                    </div>
                                    <div class="period-arrow">
                                        <i class="ti ti-arrow-right"></i>
                                    </div>
                                    <div class="period-end">
                                        <span class="period-label">To</span>
                                        <span class="period-value">@FormatDateShort(rental.Rental.ExpectedEndDate)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Action Buttons *@
                        <div class="rental-card-actions" @onclick:stopPropagation="true">
                            @if (rental.Rental.Status == "Active")
                            {
                                <button type="button" class="action-btn action-btn-checkout"
                                        @onclick="@(() => OpenCheckOutDialog(rental))">
                                    <i class="ti ti-logout"></i>
                                    <span>Check Out</span>
                                </button>
                                <button type="button" class="action-btn action-btn-extend"
                                        @onclick="@(() => ExtendRental(rental))">
                                    <i class="ti ti-calendar-plus"></i>
                                    <span>Extend</span>
                                </button>
                                <button type="button" class="action-btn action-btn-cancel"
                                        @onclick="@(() => CancelRental(rental))">
                                    <i class="ti ti-x"></i>
                                    <span>Cancel</span>
                                </button>
                            }
                            @if (rental.Rental.Status == "Reserved")
                            {
                                <button type="button" class="action-btn action-btn-start"
                                        @onclick="@(() => StartRental(rental))">
                                    <i class="ti ti-player-play"></i>
                                    <span>Start</span>
                                </button>
                                <button type="button" class="action-btn action-btn-cancel"
                                        @onclick="@(() => CancelRental(rental))">
                                    <i class="ti ti-x"></i>
                                    <span>Cancel</span>
                                </button>
                            }
                            <button type="button" class="action-btn action-btn-invoice"
                                    @onclick="@(() => ViewInvoice(rental))">
                                <i class="ti ti-receipt"></i>
                                <span>Invoice</span>
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="results-count text-center text-secondary py-3">
                Showing <strong>@m_filteredRentals.Count</strong> rentals
            </div>
        }
    </LoadingSkeleton>
</div>

