@page "/rentals"
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Client.Pages.Rentals
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<RentalList>
@inject RentalService RentalService
@inject RenterService RenterService
@inject VehicleService VehicleService

<MotoRentPageTitle>@Localizer["PageTitle"]</MotoRentPageTitle>

<div class="rentals-page">
    @* Hero Header with Quick Stats *@
    <div class="rental-header mb-4">
        <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
            <div>
                <h1 class="page-title mb-1">@Localizer["Header"]</h1>
                <p class="text-secondary mb-0">@Localizer["SubHeader"]</p>
            </div>
            <a href="/rentals/checkin" class="btn btn-primary btn-lg rounded-pill px-4 shadow-sm">
                <i class="ti ti-plus me-2"></i>
                @Localizer["NewCheckIn"]
            </a>
        </div>
    </div>

    @* Quick Stats Cards *@
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-active @(m_activeTab == "Active" ? "active" : "")" @onclick="@(() => SetActiveTab("Active"))">
                <div class="stat-icon">
                    <i class="ti ti-motorbike"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(m_statusCounts.GetValueOrDefault("Active", 0))</div>
                    <div class="stat-label">@Localizer["Active"]</div>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-warning @(m_activeTab == "DueToday" ? "active" : "") @(m_dueTodayCount > 0 ? "has-items" : "")" @onclick="@(() => SetActiveTab("DueToday"))">
                <div class="stat-icon">
                    <i class="ti ti-clock-hour-4"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@m_dueTodayCount</div>
                    <div class="stat-label">@Localizer["DueToday"]</div>
                </div>
                @if (m_dueTodayCount > 0)
                {
                    <span class="stat-badge pulse"></span>
                }
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-danger @(m_activeTab == "Overdue" ? "active" : "") @(m_overdueCount > 0 ? "has-items" : "")" @onclick="@(() => SetActiveTab("Overdue"))">
                <div class="stat-icon">
                    <i class="ti ti-alert-triangle"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@m_overdueCount</div>
                    <div class="stat-label">@Localizer["Overdue"]</div>
                </div>
                @if (m_overdueCount > 0)
                {
                    <span class="stat-badge pulse"></span>
                }
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stat-card stat-card-success @(m_activeTab == "Completed" ? "active" : "")" @onclick="@(() => SetActiveTab("Completed"))">
                <div class="stat-icon">
                    <i class="ti ti-circle-check"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-value">@(m_statusCounts.GetValueOrDefault("Completed", 0))</div>
                    <div class="stat-label">@Localizer["Completed"]</div>
                </div>
            </div>
        </div>
    </div>

    @* Search Bar *@
    <div class="search-container mb-4">
        <div class="input-group input-group-lg shadow-sm rounded-pill overflow-hidden">
            <span class="input-group-text bg-white border-0 ps-4">
                <i class="ti ti-search text-secondary"></i>
            </span>
            <input type="text" class="form-control border-0 py-3"
                   placeholder="@Localizer["SearchPlaceholder"]"
                   @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
            @if (!string.IsNullOrEmpty(m_searchTerm))
            {
                <button class="btn btn-link text-secondary border-0" @onclick="ClearSearch">
                    <i class="ti ti-x"></i>
                </button>
            }
        </div>
    </div>

    @* Filter Pills *@
    <div class="filter-pills-container mb-4">
        <div class="filter-pills d-flex gap-2 overflow-auto pb-2">
            <button type="button" class="filter-pill @(m_activeTab == "All" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("All"))">
                <span>@Localizer["All"]</span>
            </button>
            <button type="button" class="filter-pill filter-pill-primary @(m_activeTab == "Active" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Active"))">
                <i class="ti ti-motorbike me-1"></i>
                <span>@Localizer["Active"]</span>
            </button>
            <button type="button" class="filter-pill filter-pill-warning @(m_activeTab == "DueToday" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("DueToday"))">
                <i class="ti ti-clock me-1"></i>
                <span>@Localizer["DueToday"]</span>
            </button>
            <button type="button" class="filter-pill filter-pill-danger @(m_activeTab == "Overdue" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Overdue"))">
                <i class="ti ti-alert-triangle me-1"></i>
                <span>@Localizer["Overdue"]</span>
            </button>
            <button type="button" class="filter-pill filter-pill-success @(m_activeTab == "Completed" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Completed"))">
                <i class="ti ti-check me-1"></i>
                <span>@Localizer["Completed"]</span>
            </button>
        </div>
    </div>

    @* Rental Cards *@
    <LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card" Rows="4">
        @if (m_filteredRentals.Count == 0)
        {
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="ti ti-motorbike"></i>
                </div>
                <h3>@Localizer["NoRentalsFound"]</h3>
                <p class="text-secondary">@GetEmptyStateMessage()</p>
                <a href="/rentals/checkin" class="btn btn-primary btn-lg rounded-pill px-4 mt-3">
                    <i class="ti ti-plus me-2"></i>
                    @Localizer["CreateNewCheckIn"]
                </a>
            </div>
        }
        else
        {
            <div class="rental-cards">
                @foreach (var rental in m_filteredRentals)
                {
                    <div class="rental-card @GetCardClass(rental)" @onclick="@(() => ViewRentalDetails(rental))">
                        @* Status Ribbon *@
                        <div class="rental-status-ribbon @GetStatusRibbonClass(rental)">
                            @if (rental.IsOverdue)
                            {
                                <i class="ti ti-alert-triangle me-1"></i>
                                <span>@Localizer["OverdueLabel", rental.DaysOverdue]</span>
                            }
                            else if (rental.IsDueToday)
                            {
                                <i class="ti ti-clock me-1"></i>
                                <span>@Localizer["DueToday"]</span>
                            }
                            else
                            {
                                <span>@Localizer[rental.Rental.Status ?? ""]</span>
                            }
                        </div>

                        <div class="rental-card-body">
                            @* Main Info Row *@
                            <div class="rental-main-info">
                                <div class="renter-info">
                                    <div class="renter-avatar">
                                        <i class="ti ti-user"></i>
                                    </div>
                                    <div class="renter-details">
                                        <h4 class="renter-name">@rental.RenterName</h4>
                                        <span class="renter-phone">
                                            <i class="ti ti-phone me-1"></i>
                                            @rental.RenterPhone
                                        </span>
                                    </div>
                                </div>
                                <div class="rental-amount">
                                    <span class="amount-value">@FormatCurrency(rental.Rental.TotalAmount)</span>
                                    <span class="amount-label">@rental.Days @Localizer["Days"]</span>
                                </div>
                            </div>

                            @* Vehicle Info *@
                            <div class="vehicle-info">
                                <div class="vehicle-icon">
                                    <i class="ti ti-motorbike"></i>
                                </div>
                                <div class="vehicle-details">
                                    <span class="vehicle-model">@rental.VehicleBrandModel</span>
                                    <span class="vehicle-plate">@rental.VehicleLicensePlate</span>
                                </div>
                            </div>

                            @* Period Info *@
                            <div class="period-info">
                                <div class="period-dates">
                                    <div class="period-start">
                                        <span class="period-label">@Localizer["From"]</span>
                                        <span class="period-value">@FormatDateShort(rental.Rental.StartDate)</span>
                                    </div>
                                    <div class="period-arrow">
                                        <i class="ti ti-arrow-right"></i>
                                    </div>
                                    <div class="period-end">
                                        <span class="period-label">@Localizer["To"]</span>
                                        <span class="period-value">@FormatDateShort(rental.Rental.ExpectedEndDate)</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Action Buttons *@
                        <div class="rental-card-actions" @onclick:stopPropagation="true">
                            @if (rental.Rental.Status == "Active")
                            {
                                <button type="button" class="action-btn action-btn-checkout"
                                        @onclick="@(() => OpenCheckOutDialog(rental))">
                                    <i class="ti ti-logout"></i>
                                    <span>@Localizer["CheckOut"]</span>
                                </button>
                                <button type="button" class="action-btn action-btn-extend"
                                        @onclick="@(() => ExtendRental(rental))">
                                    <i class="ti ti-calendar-plus"></i>
                                    <span>@Localizer["Extend"]</span>
                                </button>
                                <button type="button" class="action-btn action-btn-cancel"
                                        @onclick="@(() => CancelRental(rental))">
                                    <i class="ti ti-x"></i>
                                    <span>@Localizer["Cancel"]</span>
                                </button>
                            }
                            @if (rental.Rental.Status == "Reserved")
                            {
                                <button type="button" class="action-btn action-btn-start"
                                        @onclick="@(() => StartRental(rental))">
                                    <i class="ti ti-player-play"></i>
                                    <span>@Localizer["Start"]</span>
                                </button>
                                <button type="button" class="action-btn action-btn-cancel"
                                        @onclick="@(() => CancelRental(rental))">
                                    <i class="ti ti-x"></i>
                                    <span>@Localizer["Cancel"]</span>
                                </button>
                            }
                            <button type="button" class="action-btn action-btn-invoice"
                                    @onclick="@(() => ViewInvoice(rental))">
                                <i class="ti ti-receipt"></i>
                                <span>@Localizer["Invoice"]</span>
                            </button>
                        </div>
                    </div>
                }
            </div>

            <div class="results-count text-center text-secondary py-3">
                @Localizer["ShowingRentals", m_filteredRentals.Count]
            </div>
        }
    </LoadingSkeleton>
</div>

<style>
    .rentals-page {
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--tblr-body-color);
    }

    /* Stat Cards */
    .stat-card {
        background: var(--tblr-bg-surface);
        border-radius: 16px;
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: var(--tblr-box-shadow-card);
        border: 2px solid var(--tblr-border-color);
        position: relative;
        overflow: hidden;
    }

    .stat-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--tblr-box-shadow);
    }

    .stat-card.active {
        border-color: currentColor;
    }

    .stat-card-active { color: var(--tblr-primary); }
    .stat-card-active .stat-icon { background: rgba(var(--tblr-primary-rgb), 0.15); }
    .stat-card-warning { color: var(--tblr-warning); }
    .stat-card-warning .stat-icon { background: rgba(var(--tblr-warning-rgb), 0.15); }
    .stat-card-danger { color: var(--tblr-danger); }
    .stat-card-danger .stat-icon { background: rgba(var(--tblr-danger-rgb), 0.15); }
    .stat-card-success { color: var(--tblr-success); }
    .stat-card-success .stat-icon { background: rgba(var(--tblr-success-rgb), 0.15); }

    .stat-card.has-items {
        animation: attention-pulse 2s infinite;
    }

    .stat-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
    }

    .stat-value {
        font-size: 1.75rem;
        font-weight: 700;
        line-height: 1;
    }

    .stat-label {
        font-size: 0.875rem;
        opacity: 0.8;
    }

    .stat-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        width: 12px;
        height: 12px;
        background: currentColor;
        border-radius: 50%;
    }

    .stat-badge.pulse {
        animation: pulse-ring 1.5s infinite;
    }

    @@keyframes pulse-ring {
        0% { box-shadow: 0 0 0 0 currentColor; opacity: 1; }
        100% { box-shadow: 0 0 0 12px currentColor; opacity: 0; }
    }

    @@keyframes attention-pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.02); }
    }

    /* Search Container */
    .search-container .input-group {
        background: var(--tblr-bg-surface);
    }

    .search-container .form-control:focus {
        box-shadow: none;
    }

    /* Filter Pills */
    .filter-pills-container {
        overflow-x: auto;
        -webkit-overflow-scrolling: touch;
        scrollbar-width: none;
    }

    .filter-pills-container::-webkit-scrollbar {
        display: none;
    }

    .filter-pill {
        display: inline-flex;
        align-items: center;
        padding: 0.625rem 1.25rem;
        border-radius: 50px;
        border: 2px solid var(--tblr-border-color);
        background: var(--tblr-bg-surface);
        color: var(--tblr-body-color);
        font-weight: 500;
        font-size: 0.9rem;
        white-space: nowrap;
        transition: all 0.2s ease;
        cursor: pointer;
    }

    .filter-pill:hover {
        border-color: var(--tblr-border-color-active);
        background: var(--tblr-bg-surface-secondary);
    }

    .filter-pill.active {
        background: var(--tblr-primary);
        border-color: var(--tblr-primary);
        color: white;
    }

    .filter-pill-primary.active { background: var(--tblr-primary); border-color: var(--tblr-primary); }
    .filter-pill-warning.active { background: var(--tblr-warning); border-color: var(--tblr-warning); color: #000; }
    .filter-pill-danger.active { background: var(--tblr-danger); border-color: var(--tblr-danger); }
    .filter-pill-success.active { background: var(--tblr-success); border-color: var(--tblr-success); }

    /* Rental Cards */
    .rental-cards {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .rental-card {
        background: var(--tblr-bg-surface);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--tblr-box-shadow-card);
        transition: all 0.2s ease;
        cursor: pointer;
        border: 2px solid var(--tblr-border-color);
    }

    .rental-card:hover {
        transform: translateY(-2px);
        box-shadow: var(--tblr-box-shadow);
    }

    .rental-card.card-overdue {
        border-color: var(--tblr-danger);
    }

    .rental-card.card-due-today {
        border-color: var(--tblr-warning);
    }

    /* Status Ribbon */
    .rental-status-ribbon {
        padding: 0.5rem 1rem;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .ribbon-active { background: var(--tblr-primary); color: white; }
    .ribbon-overdue { background: var(--tblr-danger); color: white; }
    .ribbon-due-today { background: var(--tblr-warning); color: #000; }
    .ribbon-completed { background: var(--tblr-success); color: white; }
    .ribbon-reserved { background: var(--tblr-info); color: white; }
    .ribbon-cancelled { background: var(--tblr-secondary); color: white; }

    .rental-card-body {
        padding: 1.25rem;
    }

    /* Main Info */
    .rental-main-info {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }

    .renter-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .renter-avatar {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, var(--tblr-primary), var(--tblr-azure));
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.25rem;
    }

    .renter-name {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
    }

    .renter-phone {
        font-size: 0.85rem;
        color: var(--tblr-secondary);
    }

    .rental-amount {
        text-align: right;
    }

    .amount-value {
        display: block;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--tblr-primary);
    }

    .amount-label {
        font-size: 0.8rem;
        color: var(--tblr-secondary);
    }

    /* Vehicle Info */
    .vehicle-info {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.875rem;
        background: var(--tblr-bg-surface-secondary);
        border-radius: 12px;
        margin-bottom: 1rem;
    }

    .vehicle-icon {
        width: 40px;
        height: 40px;
        background: var(--tblr-bg-surface);
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--tblr-primary);
        font-size: 1.25rem;
        box-shadow: var(--tblr-box-shadow-card);
    }

    .vehicle-model {
        display: block;
        font-weight: 600;
    }

    .vehicle-plate {
        display: block;
        font-size: 0.85rem;
        color: var(--tblr-primary);
        font-weight: 500;
    }

    /* Period Info */
    .period-dates {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 0.5rem;
    }

    .period-start, .period-end {
        text-align: center;
        flex: 1;
    }

    .period-label {
        display: block;
        font-size: 0.75rem;
        color: var(--tblr-secondary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .period-value {
        display: block;
        font-weight: 600;
        font-size: 0.9rem;
    }

    .period-arrow {
        color: var(--tblr-secondary);
    }

    /* Action Buttons */
    .rental-card-actions {
        display: flex;
        border-top: 1px solid var(--tblr-border-color);
        background: var(--tblr-bg-surface-secondary);
    }

    .action-btn {
        flex: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 1rem 0.5rem;
        border: none;
        background: transparent;
        cursor: pointer;
        transition: all 0.2s ease;
        gap: 0.25rem;
    }

    .action-btn:not(:last-child) {
        border-right: 1px solid var(--tblr-border-color);
    }

    .action-btn:hover {
        background: var(--tblr-bg-surface-tertiary, rgba(0,0,0,0.05));
    }

    .action-btn i {
        font-size: 1.25rem;
    }

    .action-btn span {
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--tblr-body-color);
    }

    .action-btn-checkout { color: var(--tblr-success); }
    .action-btn-checkout:hover { background: rgba(var(--tblr-success-rgb), 0.15); }
    .action-btn-extend { color: var(--tblr-warning); }
    .action-btn-extend:hover { background: rgba(var(--tblr-warning-rgb), 0.15); }
    .action-btn-cancel { color: var(--tblr-danger); }
    .action-btn-cancel:hover { background: rgba(var(--tblr-danger-rgb), 0.15); }
    .action-btn-start { color: var(--tblr-primary); }
    .action-btn-start:hover { background: rgba(var(--tblr-primary-rgb), 0.15); }
    .action-btn-invoice { color: var(--tblr-secondary); }
    .action-btn-invoice:hover { background: rgba(var(--tblr-secondary-rgb), 0.15); }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
    }

    .empty-state-icon {
        width: 100px;
        height: 100px;
        background: var(--tblr-bg-surface-secondary);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.5rem;
        font-size: 2.5rem;
        color: var(--tblr-secondary);
    }

    .empty-state h3 {
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: var(--tblr-body-color);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .rentals-page {
            padding: 0.75rem;
        }

        .stat-card {
            padding: 1rem;
        }

        .stat-icon {
            width: 40px;
            height: 40px;
            font-size: 1.25rem;
        }

        .stat-value {
            font-size: 1.5rem;
        }

        .rental-card-body {
            padding: 1rem;
        }

        .action-btn {
            padding: 0.75rem 0.25rem;
        }
    }
</style>

