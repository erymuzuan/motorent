@page "/bookings"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Entities
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<BookingList>
@inject BookingService BookingService
@inject ShopService ShopService

<MotoRentPageTitle>@Localizer["PageTitle"]</MotoRentPageTitle>

<div class="bookings-page mr-theme-transition">
    @* Page Header *@
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3 mb-4">
        <div>
            <h1 class="page-title mb-1">
                <i class="ti ti-calendar-event me-2 text-primary"></i>@Localizer["Header"]
            </h1>
            <p class="text-secondary mb-0">@Localizer["SubHeader"]</p>
        </div>
        <a href="/bookings/create" class="mr-btn-primary-action">
            <i class="ti ti-plus"></i>
            @Localizer["NewBooking"]
        </a>
    </div>

    @* Quick Stats Cards *@
    <div class="mr-summary-cards mr-animate-in mr-animate-delay-1">
        <div class="mr-summary-card @(m_activeTab == "TodayArrivals" ? "active" : "")" style="cursor:pointer" @onclick="@(() => SetActiveTab("TodayArrivals"))">
            <div class="mr-summary-icon pending">
                <i class="ti ti-calendar-due"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["TodayArrivals"]</h4>
                <div class="mr-value">@m_todayArrivalsCount</div>
            </div>
        </div>
        <div class="mr-summary-card @(m_activeTab == "Pending" ? "active" : "")" style="cursor:pointer" @onclick="@(() => SetActiveTab("Pending"))">
            <div class="mr-summary-icon total">
                <i class="ti ti-hourglass"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["Pending"]</h4>
                <div class="mr-value">@(m_statusCounts.GetValueOrDefault(BookingStatus.Pending, 0))</div>
            </div>
        </div>
        <div class="mr-summary-card @(m_activeTab == "Confirmed" ? "active" : "")" style="cursor:pointer" @onclick="@(() => SetActiveTab("Confirmed"))">
            <div class="mr-summary-icon success">
                <i class="ti ti-circle-check"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["Confirmed"]</h4>
                <div class="mr-value">@(m_statusCounts.GetValueOrDefault(BookingStatus.Confirmed, 0))</div>
            </div>
        </div>
        <div class="mr-summary-card @(m_activeTab == "CheckedIn" ? "active" : "")" style="cursor:pointer" @onclick="@(() => SetActiveTab("CheckedIn"))">
            <div class="mr-summary-icon info">
                <i class="ti ti-login"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["CheckedIn"]</h4>
                <div class="mr-value">@(m_statusCounts.GetValueOrDefault(BookingStatus.CheckedIn, 0))</div>
            </div>
        </div>
    </div>

    @* Search and Filters Row *@
    <div class="row g-3 mb-4 mr-animate-in mr-animate-delay-2">
        <div class="col-md-6">
            <div class="mr-search-box" style="max-width:100%">
                <i class="ti ti-search"></i>
                <input type="text"
                       placeholder="@Localizer["SearchPlaceholder"]"
                       @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
            </div>
        </div>
        <div class="col-md-3">
            <select class="form-select" @bind="m_selectedShopId" @bind:after="OnShopFilterChanged">
                <option value="0">@Localizer["AllShops"]</option>
                @foreach (var shop in m_shops)
                {
                    <option value="@shop.ShopId">@shop.Name</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <input type="date" class="form-control" @bind="m_dateFilter" @bind:after="OnDateFilterChanged" />
        </div>
    </div>

    @* Filter Tabs *@
    <div class="d-flex gap-3 mb-4 flex-wrap align-items-center mr-animate-in mr-animate-delay-2">
        <div class="mr-filter-tabs">
            <button type="button" class="mr-filter-tab @(m_activeTab == "All" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("All"))">
                @Localizer["All"]
            </button>
            <button type="button" class="mr-filter-tab @(m_activeTab == "TodayArrivals" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("TodayArrivals"))">
                <i class="ti ti-calendar-due me-1"></i>
                @Localizer["TodayArrivals"]
            </button>
            <button type="button" class="mr-filter-tab @(m_activeTab == "Pending" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Pending"))">
                <i class="ti ti-hourglass me-1"></i>
                @Localizer["Pending"]
            </button>
            <button type="button" class="mr-filter-tab @(m_activeTab == "Confirmed" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Confirmed"))">
                <i class="ti ti-circle-check me-1"></i>
                @Localizer["Confirmed"]
            </button>
            <button type="button" class="mr-filter-tab @(m_activeTab == "Cancelled" ? "active" : "")"
                    @onclick="@(() => SetActiveTab("Cancelled"))">
                <i class="ti ti-x me-1"></i>
                @Localizer["Cancelled"]
            </button>
        </div>
    </div>

    @* Booking Cards *@
    <LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card" Rows="4">
        @if (m_bookings.Count == 0)
        {
            <div class="mr-empty-state mr-animate-in mr-animate-delay-3">
                <div class="mr-empty-state-icon">
                    <i class="ti ti-calendar-event"></i>
                </div>
                <h3>@Localizer["NoBookingsFound"]</h3>
                <p>@GetEmptyStateMessage()</p>
                <a href="/bookings/create" class="mr-btn-primary-action">
                    <i class="ti ti-plus"></i>
                    @Localizer["CreateNewBooking"]
                </a>
            </div>
        }
        else
        {
            <div class="d-flex flex-column gap-3">
                @{ var delay = 2; }
                @foreach (var booking in m_bookings)
                {
                    <div class="mr-card mr-animate-in mr-animate-delay-@(Math.Min(delay++, 4))" @onclick="@(() => ViewBookingDetails(booking))" style="cursor:pointer">
                        @* Card Header *@
                        <div class="mr-card-header">
                            <div class="d-flex align-items-center gap-3">
                                <span class="mr-card-id mr-booking-ref">@booking.BookingRef</span>
                                <span class="mr-card-date">
                                    <i class="ti ti-calendar"></i>
                                    @FormatDateShort(booking.StartDate)
                                </span>
                                @if (IsArrivingToday(booking))
                                {
                                    <span class="mr-status-badge pending">
                                        <i class="ti ti-clock"></i>
                                        @Localizer["ArrivingToday"]
                                    </span>
                                }
                                else
                                {
                                    <span class="mr-status-badge @GetStatusBadgeClass(booking)">
                                        <i class="ti @GetStatusIcon(booking)"></i>
                                        @Localizer[booking.Status ?? ""]
                                    </span>
                                }
                                @if (booking.PaymentStatus == BookingPaymentStatus.FullyPaid)
                                {
                                    <span class="mr-badge-payment-paid">
                                        <i class="ti ti-check"></i>
                                        @Localizer["Paid"]
                                    </span>
                                }
                                else if (booking.PaymentStatus == BookingPaymentStatus.PartiallyPaid)
                                {
                                    <span class="mr-badge-payment-partial">
                                        <i class="ti ti-coin"></i>
                                        @Localizer["PartiallyPaid"]
                                    </span>
                                }
                            </div>
                            <div class="mr-card-amount">@FormatCurrency(booking.TotalAmount)</div>
                        </div>

                        @* Card Body *@
                        <div class="mr-card-body">
                            <div class="mr-field-grid">
                                <div class="mr-field">
                                    <span class="mr-field-label">@Localizer["Customer"]</span>
                                    <span class="mr-field-value">@booking.CustomerName</span>
                                </div>
                                <div class="mr-field">
                                    <span class="mr-field-label">@Localizer["Phone"]</span>
                                    <span class="mr-field-value mr-mono">@booking.CustomerPhone</span>
                                </div>
                                <div class="mr-field">
                                    <span class="mr-field-label">@Localizer["Vehicles"]</span>
                                    <span class="mr-field-value">@booking.Items.Count @Localizer[booking.Items.Count == 1 ? "Vehicle" : "Vehicles"]</span>
                                </div>
                                <div class="mr-field">
                                    <span class="mr-field-label">@Localizer["Duration"]</span>
                                    <span class="mr-field-value">@booking.Days @Localizer["Days"]</span>
                                </div>
                            </div>
                            @* Vehicle list preview *@
                            @if (booking.Items.Count > 0)
                            {
                                <div class="mt-2 d-flex gap-2 flex-wrap">
                                    @foreach (var item in booking.Items.Take(3))
                                    {
                                        <span class="mr-vehicle-tag">
                                            <i class="ti ti-motorbike"></i>
                                            @item.VehicleDisplayName
                                        </span>
                                    }
                                    @if (booking.Items.Count > 3)
                                    {
                                        <span class="mr-vehicle-tag-more">+@(booking.Items.Count - 3)</span>
                                    }
                                </div>
                            }
                        </div>

                        @* Card Footer *@
                        <div class="mr-card-footer" @onclick:stopPropagation="true">
                            <div class="mr-note-preview">
                                @if (booking.PreferredShopName != null)
                                {
                                    <i class="ti ti-building-store"></i>
                                    <span>@booking.PreferredShopName</span>
                                }
                                else
                                {
                                    <i class="ti ti-calendar-event"></i>
                                    <span>@FormatDateShort(booking.StartDate) - @FormatDateShort(booking.EndDate)</span>
                                }
                            </div>
                            <div class="d-flex gap-2">
                                @if (booking.CanCheckIn)
                                {
                                    <a href="/rentals/checkin/@booking.BookingRef" class="mr-btn-action success" @onclick:stopPropagation="true">
                                        <i class="ti ti-login"></i>
                                        @Localizer["CheckIn"]
                                    </a>
                                }
                                @if (booking.Status == BookingStatus.Pending)
                                {
                                    <button type="button" class="mr-btn-action primary" @onclick="@(() => ConfirmBooking(booking))" @onclick:stopPropagation="true">
                                        <i class="ti ti-check"></i>
                                        @Localizer["Confirm"]
                                    </button>
                                }
                                <a href="/bookings/@booking.BookingRef" class="mr-btn-action view" @onclick:stopPropagation="true">
                                    <i class="ti ti-eye"></i>
                                    @Localizer["View"]
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center mr-text-muted py-3">
                @Localizer["ShowingBookings", m_bookings.Count, m_totalCount]
            </div>

            @* Pagination *@
            @if (m_totalPages > 1)
            {
                <nav class="d-flex justify-content-center">
                    <ul class="pagination">
                        <li class="page-item @(m_currentPage == 1 ? "disabled" : "")">
                            <button class="page-link" @onclick="@(() => GoToPage(m_currentPage - 1))" disabled="@(m_currentPage == 1)">
                                <i class="ti ti-chevron-left"></i>
                            </button>
                        </li>
                        @for (var i = 1; i <= m_totalPages && i <= 5; i++)
                        {
                            var pageNum = i;
                            <li class="page-item @(m_currentPage == pageNum ? "active" : "")">
                                <button class="page-link" @onclick="@(() => GoToPage(pageNum))">@pageNum</button>
                            </li>
                        }
                        <li class="page-item @(m_currentPage == m_totalPages ? "disabled" : "")">
                            <button class="page-link" @onclick="@(() => GoToPage(m_currentPage + 1))" disabled="@(m_currentPage == m_totalPages)">
                                <i class="ti ti-chevron-right"></i>
                            </button>
                        </li>
                    </ul>
                </nav>
            }
        }
    </LoadingSkeleton>
</div>

<style>
    .bookings-page {
        padding: 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--mr-text-primary);
    }

    /* Active state for summary cards */
    .mr-summary-card.active {
        border-color: var(--mr-accent-primary);
        border-width: 2px;
    }

    .mr-booking-ref {
        font-family: var(--mr-font-mono);
        font-weight: 700;
        font-size: 1rem;
        background: var(--mr-surface-secondary);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
    }

    .mr-badge-payment-paid {
        background: rgba(var(--tblr-success-rgb), 0.15);
        color: var(--tblr-success);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .mr-badge-payment-partial {
        background: rgba(var(--tblr-warning-rgb), 0.15);
        color: var(--tblr-warning);
        padding: 0.2rem 0.5rem;
        border-radius: 4px;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .mr-vehicle-tag {
        background: var(--mr-surface-secondary);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
    }

    .mr-vehicle-tag-more {
        background: var(--mr-accent-primary);
        color: white;
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.8rem;
    }
</style>

@code {
    private List<Booking> m_bookings = [];
    private List<Shop> m_shops = [];
    private Dictionary<string, int> m_statusCounts = new();
    private int m_todayArrivalsCount;
    private bool m_loading = true;
    private string? m_searchTerm;
    private string m_activeTab = "TodayArrivals";
    private string? m_statusFilter;
    private int m_selectedShopId;
    private DateOnly? m_dateFilter;
    private int m_currentPage = 1;
    private int m_pageSize = 20;
    private int m_totalCount;
    private int m_totalPages;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadShopsAsync();
        await LoadDataAsync();
    }

    private async Task LoadShopsAsync()
    {
        try
        {
            var result = await ShopService.GetShopsAsync(page: 1, pageSize: 100);
            m_shops = result.ItemCollection.ToList();
        }
        catch
        {
            m_shops = [];
        }
    }

    private async Task SetActiveTab(string tab)
    {
        m_activeTab = tab;
        m_statusFilter = tab switch
        {
            "All" => null,
            "TodayArrivals" => null, // Special filter
            "Pending" => BookingStatus.Pending,
            "Confirmed" => BookingStatus.Confirmed,
            "CheckedIn" => BookingStatus.CheckedIn,
            "Cancelled" => BookingStatus.Cancelled,
            _ => null
        };
        m_currentPage = 1;
        await LoadDataAsync();
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        m_debounceTimer?.Stop();
        m_debounceTimer?.Dispose();
        m_debounceTimer = new System.Timers.Timer(300);
        m_debounceTimer.Elapsed += async (_, _) =>
        {
            m_debounceTimer?.Stop();
            await InvokeAsync(async () =>
            {
                m_currentPage = 1;
                await LoadDataAsync();
                StateHasChanged();
            });
        };
        m_debounceTimer.Start();
    }

    private async Task OnShopFilterChanged() => await LoadDataAsync();
    private async Task OnDateFilterChanged() => await LoadDataAsync();
    private async Task GoToPage(int page)
    {
        m_currentPage = page;
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        m_loading = true;
        try
        {
            DateTimeOffset? fromDate = null;
            DateTimeOffset? toDate = null;

            // Handle today arrivals filter
            if (m_activeTab == "TodayArrivals")
            {
                var today = DateTimeOffset.Now.Date;
                fromDate = today;
                toDate = today.AddDays(1);
            }
            else if (m_dateFilter.HasValue)
            {
                fromDate = m_dateFilter.Value.ToDateTime(TimeOnly.MinValue);
                toDate = m_dateFilter.Value.ToDateTime(TimeOnly.MaxValue);
            }

            var result = await BookingService.GetBookingsAsync(
                preferredShopId: m_selectedShopId > 0 ? m_selectedShopId : null,
                status: m_statusFilter,
                fromDate: fromDate,
                toDate: toDate,
                searchTerm: m_searchTerm,
                page: m_currentPage,
                pageSize: m_pageSize);

            m_bookings = result.ItemCollection.ToList();
            m_totalCount = result.TotalRows;
            m_totalPages = result.TotalPages;

            // Load status counts
            await LoadStatusCountsAsync();
        }
        catch (Exception ex)
        {
            ShowError(Localizer["ErrorLoadingData", ex.Message]);
        }
        finally
        {
            m_loading = false;
        }
    }

    private async Task LoadStatusCountsAsync()
    {
        try
        {
            // Get counts for each status
            var pendingResult = await BookingService.GetBookingsAsync(status: BookingStatus.Pending, pageSize: 1);
            var confirmedResult = await BookingService.GetBookingsAsync(status: BookingStatus.Confirmed, pageSize: 1);
            var checkedInResult = await BookingService.GetBookingsAsync(status: BookingStatus.CheckedIn, pageSize: 1);

            m_statusCounts = new Dictionary<string, int>
            {
                [BookingStatus.Pending] = pendingResult.TotalRows,
                [BookingStatus.Confirmed] = confirmedResult.TotalRows,
                [BookingStatus.CheckedIn] = checkedInResult.TotalRows
            };

            // Today arrivals
            var today = DateTimeOffset.Now.Date;
            var todayResult = await BookingService.GetUpcomingBookingsAsync(today);
            m_todayArrivalsCount = todayResult.Count;
        }
        catch
        {
            m_statusCounts = new();
            m_todayArrivalsCount = 0;
        }
    }

    private void ViewBookingDetails(Booking booking)
    {
        NavigationManager.NavigateTo($"/bookings/{booking.BookingRef}");
    }

    private async Task ConfirmBooking(Booking booking)
    {
        if (!await DialogService.ConfirmAsync(Localizer["ConfirmBookingQuestion", booking.CustomerName]))
            return;

        var result = await BookingService.ConfirmBookingAsync(booking.BookingId, UserName);
        if (result.Success)
        {
            ShowSuccess(Localizer["BookingConfirmed"]);
            await LoadDataAsync();
        }
        else
        {
            ShowError(result.Message ?? Localizer["ErrorConfirmingBooking"]);
        }
    }

    private bool IsArrivingToday(Booking booking)
    {
        return booking.StartDate.Date == DateTimeOffset.Now.Date &&
               (booking.Status == BookingStatus.Pending || booking.Status == BookingStatus.Confirmed);
    }

    private static string GetStatusBadgeClass(Booking booking) => booking.Status switch
    {
        BookingStatus.Pending => "pending",
        BookingStatus.Confirmed => "success",
        BookingStatus.CheckedIn => "info",
        BookingStatus.Completed => "success",
        BookingStatus.Cancelled => "danger",
        _ => "pending"
    };

    private static string GetStatusIcon(Booking booking) => booking.Status switch
    {
        BookingStatus.Pending => "ti-hourglass",
        BookingStatus.Confirmed => "ti-circle-check",
        BookingStatus.CheckedIn => "ti-login",
        BookingStatus.Completed => "ti-check",
        BookingStatus.Cancelled => "ti-x",
        _ => "ti-hourglass"
    };

    private string GetEmptyStateMessage() => m_activeTab switch
    {
        "TodayArrivals" => Localizer["EmptyStateTodayArrivals"],
        "Pending" => Localizer["EmptyStatePending"],
        "Confirmed" => Localizer["EmptyStateConfirmed"],
        "CheckedIn" => Localizer["EmptyStateCheckedIn"],
        "Cancelled" => Localizer["EmptyStateCancelled"],
        _ => Localizer["EmptyStateDefault"]
    };

    private string FormatDateShort(DateTimeOffset date) => date.ToString("MMM d");

    public void Dispose()
    {
        m_debounceTimer?.Dispose();
    }
}
