@using MotoRent.Domain.Entities
@using MotoRent.Services
@inherits MotoRent.Client.Controls.LocalizedDialogBase<ServiceType, ServiceTypeDialog>
@inject MaintenanceService MaintenanceService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label required">Service Name</label>
                <input type="text" class="form-control" @bind="Entity.Name" required
                       placeholder="e.g., Oil Change, Brake Check" />
            </div>

            <div class="col-12">
                <label class="form-label">Description</label>
                <textarea class="form-control" @bind="Entity.Description" rows="2"
                          placeholder="What does this service include..."></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label required">Days Interval</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="Entity.DaysInterval" required
                           min="1" max="365" />
                    <span class="input-group-text">days</span>
                </div>
                <small class="form-hint">Service due every X days</small>
            </div>

            <div class="col-md-6">
                <label class="form-label required">Mileage Interval</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="Entity.KmInterval" required
                           min="100" max="50000" step="100" />
                    <span class="input-group-text">km</span>
                </div>
                <small class="form-hint">Service due every X kilometers</small>
            </div>

            <div class="col-md-6">
                <label class="form-label">Sort Order</label>
                <input type="number" class="form-control" @bind="Entity.SortOrder" min="1" />
            </div>

            <div class="col-md-6">
                <label class="form-label d-block">&nbsp;</label>
                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="Entity.IsActive" />
                    <span class="form-check-label">Active</span>
                </label>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">Cancel</button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        FormValid = true;
    }

    private async Task SaveAsync()
    {
        Saving = true;

        try
        {
            var result = IsNew
                ? await MaintenanceService.CreateServiceTypeAsync(Entity, UserName)
                : await MaintenanceService.UpdateServiceTypeAsync(Entity, UserName);

            if (result.Success)
            {
                Close();
            }
            else
            {
                ShowError($"Save failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error: {ex.Message}");
        }
        finally
        {
            Saving = false;
        }
    }
}
