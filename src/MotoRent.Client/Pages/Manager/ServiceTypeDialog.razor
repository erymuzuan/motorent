@using MotoRent.Domain.Entities
@using MotoRent.Services
@inherits MotoRent.Client.Controls.LocalizedDialogBase<ServiceType, ServiceTypeDialog>
@inject MaintenanceService MaintenanceService

<form id="@this.FormId" @onsubmit="this.SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label required">@this.Localizer["ServiceName"]</label>
                <input type="text" class="form-control" @bind="this.Entity.Name" required
                       placeholder="@this.Localizer["ServiceNamePlaceholder"]" />
            </div>

            <div class="col-12">
                <label class="form-label">@this.Localizer["Description"]</label>
                <textarea class="form-control" @bind="this.Entity.Description" rows="2"
                          placeholder="@this.Localizer["DescriptionPlaceholder"]"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@this.Localizer["DaysInterval"]</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="this.Entity.DaysInterval" required
                           min="1" max="365" />
                    <span class="input-group-text">@this.Localizer["DaysSuffix"]</span>
                </div>
                <small class="form-hint">@this.Localizer["DaysIntervalHint"]</small>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@this.Localizer["MileageInterval"]</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="this.Entity.KmInterval" required
                           min="100" max="50000" step="100" />
                    <span class="input-group-text">@this.Localizer["KmSuffix"]</span>
                </div>
                <small class="form-hint">@this.Localizer["MileageIntervalHint"]</small>
            </div>

            <div class="col-md-6">
                <label class="form-label">@this.Localizer["SortOrder"]</label>
                <input type="number" class="form-control" @bind="this.Entity.SortOrder" min="1" />
            </div>

            <div class="col-md-6">
                <label class="form-label d-block">&nbsp;</label>
                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="this.Entity.IsActive" />
                    <span class="form-check-label">@this.Localizer["IsActive"]</span>
                </label>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="this.Cancel">@this.CommonLocalizer["Cancel"]</button>
    <button type="submit" form="@this.FormId" class="btn btn-primary" disabled="@this.Saving">
        @if (this.Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @this.SaveButtonText
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        this.FormValid = true;
    }

    private async Task SaveAsync()
    {
        this.Saving = true;

        try
        {
            var result = this.IsNew
                ? await this.MaintenanceService.CreateServiceTypeAsync(this.Entity, this.UserName)
                : await this.MaintenanceService.UpdateServiceTypeAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError(this.Localizer["SaveFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError(this.Localizer["SaveError", ex.Message]);
        }
        finally
        {
            this.Saving = false;
        }
    }
}
