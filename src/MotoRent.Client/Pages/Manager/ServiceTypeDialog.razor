@using MotoRent.Domain.Entities
@using MotoRent.Services
@inherits MotoRent.Client.Controls.LocalizedDialogBase<ServiceType, ServiceTypeDialog>
@inject MaintenanceService MaintenanceService

<form id="@base.FormId" @onsubmit="this.SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label required">@base.Localizer["ServiceName"]</label>
                <input type="text" class="form-control" @bind="base.Entity.Name" required
                       placeholder="@base.Localizer["ServiceNamePlaceholder"]" />
            </div>

            <div class="col-12">
                <label class="form-label">@base.Localizer["Description"]</label>
                <textarea class="form-control" @bind="base.Entity.Description" rows="2"
                          placeholder="@base.Localizer["DescriptionPlaceholder"]"></textarea>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@base.Localizer["DaysInterval"]</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="base.Entity.DaysInterval" required
                           min="1" max="365" />
                    <span class="input-group-text">@base.Localizer["DaysSuffix"]</span>
                </div>
                <small class="form-hint">@base.Localizer["DaysIntervalHint"]</small>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@base.Localizer["MileageInterval"]</label>
                <div class="input-group">
                    <input type="number" class="form-control" @bind="base.Entity.KmInterval" required
                           min="100" max="50000" step="100" />
                    <span class="input-group-text">@base.Localizer["KmSuffix"]</span>
                </div>
                <small class="form-hint">@base.Localizer["MileageIntervalHint"]</small>
            </div>

            <div class="col-md-6">
                <label class="form-label">@base.Localizer["SortOrder"]</label>
                <input type="number" class="form-control" @bind="base.Entity.SortOrder" min="1" />
            </div>

            <div class="col-md-6">
                <label class="form-label d-block">&nbsp;</label>
                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="base.Entity.IsActive" />
                    <span class="form-check-label">@base.Localizer["IsActive"]</span>
                </label>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="base.Cancel">@base.CommonLocalizer["Cancel"]</button>
    <button type="submit" form="@base.FormId" class="btn btn-primary" disabled="@base.Saving">
        @if (base.Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @base.SaveButtonText
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        base.FormValid = true;
    }

    private async Task SaveAsync()
    {
        base.Saving = true;

        try
        {
            var result = base.IsNew
                ? await this.MaintenanceService.CreateServiceTypeAsync(base.Entity, base.UserName)
                : await this.MaintenanceService.UpdateServiceTypeAsync(base.Entity, base.UserName);

            if (result.Success)
            {
                base.Close();
            }
            else
            {
                base.ShowError(base.Localizer["SaveFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            base.ShowError(base.Localizer["SaveError", ex.Message]);
        }
        finally
        {
            base.Saving = false;
        }
    }
}
