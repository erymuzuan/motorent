@inherits LocalizedComponentBase<ApplyPresetDialog>
@inject RegionalPresetService PresetService
@using MotoRent.Services
@using static MotoRent.Services.RegionalPresetService

<div class="modal-body">
    <p class="text-secondary mb-4">@Localizer["SelectRegionalPresetDescription"]</p>

    <div class="row g-3">
        @foreach (var category in m_presetsByCategory)
        {
            <div class="col-12">
                <h6 class="text-secondary mb-2">
                    <i class="ti @GetCategoryIcon(category.Key) me-1"></i>
                    @Localizer[category.Key]
                </h6>
            </div>

            @foreach (var preset in category.Value.Where(p => p.Preset != RegionalPreset.None))
            {
                <div class="col-12">
                    <label class="form-selectgroup-item">
                        <input type="radio" name="preset" class="form-selectgroup-input"
                               checked="@(m_selectedPreset == preset.Preset)"
                               @onchange="@(() => SelectPreset(preset.Preset))" />
                        <span class="form-selectgroup-label d-flex justify-content-between align-items-start w-100 p-3">
                            <span class="d-flex flex-column">
                                <span class="fw-medium">@preset.Name</span>
                                <small class="text-secondary">@preset.Description</small>
                                <small class="text-muted mt-1">
                                    <i class="ti ti-users me-1"></i>
                                    @string.Join(", ", preset.PrimaryDemographics)
                                </small>
                            </span>
                            <span class="badge bg-azure-lt text-azure">
                                @preset.RulesCount @Localizer["Rules"]
                            </span>
                        </span>
                    </label>
                </div>
            }
        }
    </div>

    @if (m_selectedPreset != RegionalPreset.None)
    {
        <div class="alert alert-info mt-4">
            <div class="d-flex">
                <div class="me-3">
                    <i class="ti ti-info-circle ti-lg"></i>
                </div>
                <div>
                    <h4 class="alert-title">@Localizer["WhatHappensNext"]</h4>
                    <div class="text-secondary">@Localizer["ApplyPresetExplanation"]</div>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-link link-secondary" @onclick="Cancel">
        @CommonLocalizer["Cancel"]
    </button>
    <button type="button" class="btn btn-primary" @onclick="ApplyAsync"
            disabled="@(m_selectedPreset == RegionalPreset.None || m_applying)">
        @if (m_applying)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-check me-1"></i>
        @Localizer["ApplyPreset"]
    </button>
</div>

@code {
    [CascadingParameter] private ModalInstance? ModalInstance { get; set; }

    private Dictionary<string, List<PresetInfo>> m_presetsByCategory = [];
    private RegionalPreset m_selectedPreset = RegionalPreset.None;
    private bool m_applying;

    protected override void OnInitialized()
    {
        var allPresets = this.PresetService.GetAllPresetInfo();
        this.m_presetsByCategory = allPresets
            .Where(p => !string.IsNullOrEmpty(p.Category))
            .GroupBy(p => p.Category)
            .ToDictionary(g => g.Key, g => g.ToList());
    }

    private void SelectPreset(RegionalPreset preset)
    {
        this.m_selectedPreset = preset;
    }

    private async Task ApplyAsync()
    {
        if (this.m_selectedPreset == RegionalPreset.None)
            return;

        this.m_applying = true;
        try
        {
            var rules = this.PresetService.GetPresetRules(this.m_selectedPreset);

            using var session = this.DataContext.OpenSession(this.UserName);

            foreach (var rule in rules)
            {
                session.Attach(rule);
            }

            var result = await session.SubmitChanges($"Apply {this.m_selectedPreset} preset");

            if (result.Success)
            {
                var presetInfo = this.PresetService.GetPresetInfo(this.m_selectedPreset);
                this.ModalInstance?.Close(new ApplyPresetResult
                {
                    PresetName = presetInfo.Name,
                    RulesCreated = rules.Count
                });
            }
            else
            {
                this.ShowError($"Failed to apply preset: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"Error applying preset: {ex.Message}");
        }
        finally
        {
            this.m_applying = false;
        }
    }

    private void Cancel() => this.ModalInstance?.Cancel();

    private static string GetCategoryIcon(string category) => category switch
    {
        "Beach Destinations" => "ti-beach",
        "Border & Regional" => "ti-map-pin",
        "Metropolitan" => "ti-building",
        "Custom" => "ti-settings",
        _ => "ti-map"
    };

    /// <summary>
    /// Result of applying a preset.
    /// </summary>
    public record ApplyPresetResult
    {
        public string PresetName { get; init; } = "";
        public int RulesCreated { get; init; }
    }
}
