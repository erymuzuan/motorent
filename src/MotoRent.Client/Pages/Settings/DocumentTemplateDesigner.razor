@page "/settings/templates/designer"
@page "/settings/templates/designer/{TemplateId:int}"
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.Entities
@using MotoRent.Domain.Models
@using MotoRent.Services
@using MotoRent.Services.Core
@using MotoRent.Client.Components.Templates
@using MotoRent.Client.Services
@implements IDisposable
@attribute [Authorize(Policy = "RequireTenantOrgAdmin")]
@inherits MotoRentComponentBase
@inject DocumentTemplateService TemplateService
@inject DocumentTemplateAiService AiService
@inject DesignerState DesignerState
@inject ITemplateDataResolver DataResolver
@inject IHtmlTemplateRenderer HtmlRenderer
@inject OrganizationService OrganizationService

<MotoRentPageTitle>Document Template Designer</MotoRentPageTitle>

<TablerHeader Title="Template Designer" PreTitle="@(m_template.DocumentTemplateId == 0 ? "Create New Template" : "Edit Template")">
    <div class="btn-list">
        <button type="button" class="btn btn-outline-secondary" @onclick="() => m_showAiSidebar = !m_showAiSidebar">
            <i class="ti ti-sparkles me-1 text-accent"></i>
            AI Suggester
        </button>
        <button type="button" class="btn btn-outline-primary" @onclick="TogglePreview">
            <i class="ti ti-eye me-1"></i>
            Preview
        </button>
        <button type="button" class="btn btn-primary" @onclick="SaveTemplateAsync" disabled="@m_saving">
            @if (m_saving)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
            }
            else
            {
                <i class="ti ti-device-floppy me-1"></i>
            }
            Save Template
        </button>
    </div>
</TablerHeader>

<div class="container-fluid mt-4">
    <LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card">
        <div class="row g-4">
            @* Left Sidebar - Template Info & Block Library *@
            <div class="col-lg-2">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">Template Info</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" @bind="m_template.Name" placeholder="e.g., Standard Receipt" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Document Type</label>
                            <select class="form-select" @bind="m_template.Type">
                                @foreach (DocumentType type in Enum.GetValues(typeof(DocumentType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Block Library</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("heading")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "heading"'>
                                <i class="ti ti-heading me-2"></i> Heading
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("text")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "text"'>
                                <i class="ti ti-type me-2"></i> Text Block
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("table")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "table"'>
                                <i class="ti ti-table me-2"></i> Data Table
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("image")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "image"'>
                                <i class="ti ti-photo me-2"></i> Image/Logo
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("divider")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "divider"'>
                                <i class="ti ti-minus me-2"></i> Divider Line
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("signature")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "signature"'>
                                <i class="ti ti-pencil me-2"></i> Signature
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("two-columns")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "two-columns"'>
                                <i class="ti ti-columns me-2"></i> Two Columns
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("spacer")' draggable="true" @ondragstart='() => DesignerState.DraggingBlockType = "spacer"'>
                                <i class="ti ti-separator-horizontal me-2"></i> Spacer
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            @* Main Canvas Editor *@
            <div class="col-lg-7">
                <DocumentCanvas Layout="m_layout" 
                                SelectedBlock="DesignerState.SelectedBlock" 
                                OnBlockSelected="b => DesignerState.SetSelectedBlock(b)"
                                OnBlockAdded="AddBlock" />
            </div>

            @* Right Sidebar - Properties & AI *@
            <div class="col-lg-3">
                <BlockPropertyEditor Block="DesignerState.SelectedBlock" 
                                     OnDeleteRequested="DeleteSelectedBlock" />

                @if (m_showAiSidebar)
                {
                    <div class="card mt-3">
                        <div class="card-header bg-primary-lt">
                            <h3 class="card-title">
                                <i class="ti ti-sparkles me-2"></i>
                                AI Suggester
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Context / Keywords</label>
                                <textarea class="form-control" @bind="m_aiContext" rows="3" placeholder="e.g. insurance, fuel policy..."></textarea>
                            </div>
                            <button class="btn btn-primary w-100 mb-3" @onclick="GetAiSuggestions" disabled="@m_loadingAi">
                                @if (m_loadingAi)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Suggest Clauses
                            </button>

                            <div class="list-group list-group-flush border-top overflow-auto" style="max-height: 400px;">
                                @foreach (var suggestion in m_aiSuggestions)
                                {
                                    <div class="list-group-item p-3 border-bottom cursor-pointer hover-bg-light"
                                         @onclick="() => AddClauseToLayout(suggestion)">
                                        <div class="text-secondary small mb-2">Click to add</div>
                                        <div class="fw-medium text-wrap">@suggestion</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </LoadingSkeleton>
</div>

@* Preview Modal *@
@if (m_showPreview)
{
    <div class="modal modal-blur fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Live Preview (HTML)</h5>
                    <button type="button" class="btn-close" @onclick="TogglePreview"></button>
                </div>
                <div class="modal-body p-0" style="height: 600px; overflow-y: auto;">
                    <iframe srcdoc="@m_previewHtml" style="width: 100%; height: 100%; border: none;"></iframe>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="TogglePreview">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public int? TemplateId { get; set; }
    [SupplyParameterFromQuery] public string? Type { get; set; }

    private DocumentTemplate m_template = new();
    private DocumentLayout m_layout = new();
    private bool m_loading = true;
    private bool m_saving;
    private bool m_showPreview;
    private string? m_previewHtml;

    // AI Features
    private bool m_showAiSidebar = true;
    private string m_aiContext = "";
    private List<string> m_aiSuggestions = new();
    private bool m_loadingAi;

    protected override async Task OnInitializedAsync()
    {
        DesignerState.OnStateChanged += StateHasChanged;
        await LoadDataAsync();
    }

    public void Dispose()
    {
        DesignerState.OnStateChanged -= StateHasChanged;
    }

    private async Task GetAiSuggestions()
    {
        m_loadingAi = true;
        try
        {
            m_aiSuggestions = await AiService.GetSuggestedClausesAsync(m_template.Type, m_aiContext);
        }
        catch (Exception ex)
        {
            ShowError($"AI Suggestion failed: {ex.Message}");
        }
        finally
        {
            m_loadingAi = false;
        }
    }

    private void AddClauseToLayout(string clause)
    {
        if (!m_layout.Sections.Any()) m_layout.Sections.Add(new LayoutSection { Name = "Main Content" });
        var section = m_layout.Sections.Last();
        var block = new TextBlock { Content = clause };
        section.Blocks.Add(block);
        DesignerState.SetSelectedBlock(block);
        ShowSuccess("Clause added to layout");
    }

    private async Task LoadDataAsync()
    {
        m_loading = true;
        try
        {
            if (TemplateId > 0)
            {
                var template = await TemplateService.GetTemplateByIdAsync(TemplateId.Value);
                if (template != null)
                {
                    m_template = template;
                    var layout = await TemplateService.GetTemplateLayoutAsync(m_template.StoreId);
                    if (layout != null) m_layout = layout;
                }
            }
            else
            {
                m_template = new DocumentTemplate
                {
                    Type = Enum.TryParse<DocumentType>(Type, true, out var t) ? t : DocumentType.Receipt,
                    Status = DocumentTemplateStatus.Draft
                };
                m_layout = new DocumentLayout
                {
                    Sections = new List<LayoutSection> { new LayoutSection { Name = "Main Content" } }
                } ;
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error loading template: {ex.Message}");
        }
        finally
        {
            m_loading = false;
        }
    }

    private void DeleteSelectedBlock()
    {
        if (DesignerState.SelectedBlock == null) return;

        foreach (var section in m_layout.Sections)
        {
            if (section.Blocks.Contains(DesignerState.SelectedBlock))
            {
                section.Blocks.Remove(DesignerState.SelectedBlock);
                DesignerState.SetSelectedBlock(null);
                return;
            }
        }
    }

    private void AddBlock(string type)
    {
        if (!m_layout.Sections.Any()) m_layout.Sections.Add(new LayoutSection { Name = "Main Content" });
        
        var section = m_layout.Sections.Last();
        LayoutBlock block = type switch
        {
            "heading" => new HeadingBlock { Content = "New Heading", Level = 2, HorizontalAlignment = "Center", IsBold = true },
            "text" => new TextBlock { Content = "New Text Block", HorizontalAlignment = "Left" },
            "image" => new ImageBlock { Width = 200 },
            "table" => new TableBlock { 
                Columns = new List<TableColumn> { 
                    new TableColumn { Header = "Item", BindingPath = "Description" },
                    new TableColumn { Header = "Qty", BindingPath = "Quantity" },
                    new TableColumn { Header = "Price", BindingPath = "Price" }
                } 
            },
            "divider" => new DividerBlock { Thickness = 1, Color = "#eeeeee" },
            "signature" => new SignatureBlock { Label = "Authorized Signature" },
            "two-columns" => new TwoColumnBlock(),
            "spacer" => new SpacerBlock { Height = 20 },
            _ => new TextBlock { Content = "New Block" }
        };
        
        section.Blocks.Add(block);
        DesignerState.SetSelectedBlock(block);
    }

    private async Task TogglePreview()
    {
        if (!m_showPreview)
        {
            // Prepare sample data for preview
            var sampleData = await GetSampleDataAsync();
            m_previewHtml = HtmlRenderer.RenderHtml(m_layout, sampleData);
        }
        m_showPreview = !m_showPreview;
    }

    private async Task<Dictionary<string, object?>> GetSampleDataAsync()
    {
        var org = await OrganizationService.GetOrganizationByAccountNoAsync(AccountNo);
        var staff = new User { FullName = UserName, UserName = UserName };
        var booking = new Booking { BookingRef = "PRV-001", CustomerName = "John Preview" };
        return DataResolver.Resolve(booking, org ?? new Organization { Name = "Preview Org" }, staff);
    }

    private async Task SaveTemplateAsync()
    {
        if (string.IsNullOrWhiteSpace(m_template.Name))
        {
            ShowError("Template name is required");
            return;
        }

        m_saving = true;
        try
        {
            var result = await TemplateService.SaveTemplateAsync(m_template, m_layout, UserName);
            if (result.Success)
            {
                ShowSuccess("Template saved successfully");
                if (TemplateId == null || TemplateId == 0)
                {
                    NavigationManager.NavigateTo($"/settings/templates/designer/{m_template.DocumentTemplateId}");
                }
            }
            else
            {
                ShowError(result.Message ?? "Failed to save template");
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error saving template: {ex.Message}");
        }
        finally
        {
            m_saving = false;
        }
    }
}