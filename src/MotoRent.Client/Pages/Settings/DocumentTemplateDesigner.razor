@page "/settings/templates/designer"
@page "/settings/templates/designer/{TemplateId:int}"
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.Entities
@using MotoRent.Domain.Models
@using MotoRent.Services
@using MotoRent.Services.Core
@attribute [Authorize(Policy = "RequireTenantOrgAdmin")]
@inherits MotoRentComponentBase
@inject DocumentTemplateService TemplateService
@inject DocumentTemplateAiService AiService
@inject ITemplateDataResolver DataResolver
@inject IHtmlTemplateRenderer HtmlRenderer
@inject OrganizationService OrganizationService

<MotoRentPageTitle>Document Template Designer</MotoRentPageTitle>

<TablerHeader Title="Template Designer" PreTitle="@(m_template.DocumentTemplateId == 0 ? "Create New Template" : "Edit Template")">
    <div class="btn-list">
        <button type="button" class="btn btn-outline-secondary" @onclick="() => m_showAiSidebar = !m_showAiSidebar">
            <i class="ti ti-sparkles me-1 text-accent"></i>
            AI Suggester
        </button>
        <button type="button" class="btn btn-outline-primary" @onclick="TogglePreview">
            <i class="ti ti-eye me-1"></i>
            Preview
        </button>
        <button type="button" class="btn btn-primary" @onclick="SaveTemplateAsync" disabled="@m_saving">
            @if (m_saving)
            {
                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
            }
            else
            {
                <i class="ti ti-device-floppy me-1"></i>
            }
            Save Template
        </button>
    </div>
</TablerHeader>

<div class="container-xl mt-4">
    <LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card">
        <div class="row">
            @* Sidebar - Template Info & Block Library *@
            <div class="@(m_showAiSidebar ? "col-lg-3" : "col-lg-4")">
                <div class="card mb-3">
                    <div class="card-header">
                        <h3 class="card-title">Template Info</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" @bind="m_template.Name" placeholder="e.g., Standard Receipt" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Document Type</label>
                            <select class="form-select" @bind="m_template.Type">
                                @foreach (DocumentType type in Enum.GetValues(typeof(DocumentType)))
                                {
                                    <option value="@type">@type</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Shop (Optional)</label>
                            <input type="number" class="form-control" @bind="m_template.ShopId" placeholder="All Shops" />
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" @bind="m_template.IsDefault">
                            <label class="form-check-label">Set as Default</label>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Block Library</h3>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("heading")'>
                                <i class="ti ti-heading me-2"></i> Heading
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("text")'>
                                <i class="ti ti-type me-2"></i> Text Block
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("table")'>
                                <i class="ti ti-table me-2"></i> Data Table
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("image")'>
                                <i class="ti ti-photo me-2"></i> Image/Logo
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("divider")'>
                                <i class="ti ti-minus me-2"></i> Divider Line
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("signature")'>
                                <i class="ti ti-pencil me-2"></i> Signature
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("two-columns")'>
                                <i class="ti ti-columns me-2"></i> Two Columns
                            </button>
                            <button class="list-group-item list-group-item-action" @onclick='() => AddBlock("spacer")'>
                                <i class="ti ti-separator-horizontal me-2"></i> Spacer
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            @* Main Editor *@
            <div class="@(m_showAiSidebar ? "col-lg-6" : "col-lg-8")">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <h3 class="card-title">Layout Editor</h3>
                        <button class="btn btn-sm btn-ghost-primary" @onclick="AddSection">
                            <i class="ti ti-plus me-1"></i> Add Section
                        </button>
                    </div>
                    <div class="card-body bg-light" style="min-height: 600px;">
                        @if (!m_layout.Sections.Any())
                        {
                            <div class="text-center py-5">
                                <div class="text-secondary mb-3">Your layout is empty</div>
                                <button class="btn btn-primary" @onclick="AddSection">Get Started by Adding a Section</button>
                            </div>
                        }

                        @foreach (var section in m_layout.Sections)
                        {
                            <div class="card mb-3 border-primary-subtle shadow-sm">
                                <div class="card-header py-2 bg-white d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-grip-vertical text-secondary me-2"></i>
                                        <input type="text" class="form-control form-control-sm border-0 fw-bold" 
                                               style="width: 150px;" @bind="section.Name" />
                                    </div>
                                    <div class="btn-list">
                                        <button class="btn btn-sm btn-icon btn-ghost-danger" @onclick="() => m_layout.Sections.Remove(section)">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body p-3">
                                    @foreach (var block in section.Blocks)
                                    {
                                        <div class="card mb-2 border-dashed bg-white">
                                            <div class="card-body p-2">
                                                <div class="d-flex justify-content-between mb-2">
                                                    <span class="badge bg-blue-lt">@block.GetType().Name.Replace("Block", "")</span>
                                                    <div class="btn-list flex-nowrap">
                                                        <button class="btn btn-sm btn-icon btn-ghost-secondary border-0" @onclick="() => MoveBlockUp(section, block)">
                                                            <i class="ti ti-arrow-up"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-icon btn-ghost-secondary border-0" @onclick="() => MoveBlockDown(section, block)">
                                                            <i class="ti ti-arrow-down"></i>
                                                        </button>
                                                        <button class="btn btn-sm btn-icon btn-ghost-danger border-0" 
                                                                @onclick="() => section.Blocks.Remove(block)">
                                                            <i class="ti ti-x"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                                
                                                @if (block is HeadingBlock hb)
                                                {
                                                    <input type="text" class="form-control form-control-sm mb-2 fw-bold" @bind="hb.Content" placeholder="Heading Text" />
                                                    <div class="row g-2">
                                                        <div class="col-auto">
                                                            <select class="form-select form-select-sm" @bind="hb.Level">
                                                                <option value="1">H1</option>
                                                                <option value="2">H2</option>
                                                                <option value="3">H3</option>
                                                            </select>
                                                        </div>
                                                        <div class="col-auto">
                                                            <select class="form-select form-select-sm" @bind="hb.HorizontalAlignment">
                                                                <option value="Left">Left</option>
                                                                <option value="Center">Center</option>
                                                                <option value="Right">Right</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is TextBlock tb)
                                                {
                                                    <textarea class="form-control form-control-sm mb-2" @bind="tb.Content" placeholder="Enter text or {{Tokens}}" rows="3"></textarea>
                                                    <div class="row g-2">
                                                        <div class="col-auto">
                                                            <button class="btn btn-sm @(tb.IsBold ? "btn-primary" : "btn-outline-secondary")" @onclick="() => tb.IsBold = !tb.IsBold">
                                                                <i class="ti ti-bold"></i>
                                                            </button>
                                                        </div>
                                                        <div class="col-auto">
                                                            <select class="form-select form-select-sm" @bind="tb.HorizontalAlignment">
                                                                <option value="Left">Left</option>
                                                                <option value="Center">Center</option>
                                                                <option value="Right">Right</option>
                                                            </select>
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is DividerBlock db)
                                                {
                                                    <div class="row g-2 align-items-center">
                                                        <div class="col-auto">Thickness:</div>
                                                        <div class="col-auto">
                                                            <input type="number" class="form-control form-control-sm" @bind="db.Thickness" style="width: 60px;" />
                                                        </div>
                                                        <div class="col-auto">Color:</div>
                                                        <div class="col-auto">
                                                            <input type="color" class="form-control form-control-color" @bind="db.Color" />
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is SignatureBlock sig)
                                                {
                                                    <div class="row g-2">
                                                        <div class="col">
                                                            <input type="text" class="form-control form-control-sm" @bind="sig.Label" placeholder="Signature Label" />
                                                        </div>
                                                        <div class="col">
                                                            <input type="text" class="form-control form-control-sm" @bind="sig.BindingPath" placeholder="Data Path (optional)" />
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is TwoColumnBlock twoCol)
                                                {
                                                    <div class="row g-3">
                                                        <div class="col-6">
                                                            <div class="small fw-bold mb-2">Left Column</div>
                                                            <div class="bg-light p-2 rounded">
                                                                @foreach (var leftBlock in twoCol.LeftColumn)
                                                                {
                                                                    <div class="badge bg-white text-dark border w-100 mb-1 d-flex justify-content-between">
                                                                        <span>@leftBlock.GetType().Name.Replace("Block", "")</span>
                                                                        <i class="ti ti-x cursor-pointer" @onclick="() => twoCol.LeftColumn.Remove(leftBlock)"></i>
                                                                    </div>
                                                                }
                                                                <button class="btn btn-xs btn-ghost-primary w-100 mt-1" @onclick='() => AddBlockToColumn(twoCol.LeftColumn)'>+ Add</button>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="small fw-bold mb-2">Right Column</div>
                                                            <div class="bg-light p-2 rounded">
                                                                @foreach (var rightBlock in twoCol.RightColumn)
                                                                {
                                                                    <div class="badge bg-white text-dark border w-100 mb-1 d-flex justify-content-between">
                                                                        <span>@rightBlock.GetType().Name.Replace("Block", "")</span>
                                                                        <i class="ti ti-x cursor-pointer" @onclick="() => twoCol.RightColumn.Remove(rightBlock)"></i>
                                                                    </div>
                                                                }
                                                                <button class="btn btn-xs btn-ghost-primary w-100 mt-1" @onclick='() => AddBlockToColumn(twoCol.RightColumn)'>+ Add</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is SpacerBlock sb)
                                                {
                                                    <div class="row align-items-center">
                                                        <div class="col-auto">Height (pt):</div>
                                                        <div class="col">
                                                            <input type="number" class="form-control form-control-sm" @bind="sb.Height" />
                                                        </div>
                                                    </div>
                                                }
                                                else if (block is TableBlock table)
                                                {
                                                    <div class="mb-2">
                                                        <label class="small fw-bold">Data Binding Path (e.g., Booking.Items)</label>
                                                        <input type="text" class="form-control form-control-sm" @bind="table.BindingPath" />
                                                    </div>
                                                    <div class="table-responsive">
                                                        <table class="table table-sm table-borderless mb-0">
                                                            <thead>
                                                                <tr>
                                                                    <th>Header</th>
                                                                    <th>Field Path</th>
                                                                    <th></th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var col in table.Columns)
                                                                {
                                                                    <tr>
                                                                        <td><input type="text" class="form-control form-control-sm" @bind="col.Header" /></td>
                                                                        <td><input type="text" class="form-control form-control-sm" @bind="col.BindingPath" /></td>
                                                                        <td>
                                                                            <button class="btn btn-sm btn-icon btn-ghost-danger" @onclick="() => table.Columns.Remove(col)">
                                                                                <i class="ti ti-minus"></i>
                                                                            </button>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>
                                                        </table>
                                                        <button class="btn btn-sm btn-ghost-primary mt-1" @onclick="() => table.Columns.Add(new TableColumn())">
                                                            <i class="ti ti-plus me-1"></i> Add Column
                                                        </button>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                    }
                                    
                                    @if (!section.Blocks.Any())
                                    {
                                        <div class="text-center p-3 text-secondary border-dashed rounded">
                                            Click a block in the library to add content here
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            @* AI Sidebar *@
            @if (m_showAiSidebar)
            {
                <div class="col-lg-3">
                    <div class="card">
                        <div class="card-header bg-primary-lt">
                            <h3 class="card-title">
                                <i class="ti ti-sparkles me-2"></i>
                                AI Clause Suggester
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label class="form-label">Context / Keywords</label>
                                <textarea class="form-control" @bind="m_aiContext" rows="3" placeholder="e.g. insurance, fuel policy, late return fees..."></textarea>
                            </div>
                            <button class="btn btn-primary w-100 mb-3" @onclick="GetAiSuggestions" disabled="@m_loadingAi">
                                @if (m_loadingAi)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Suggest Clauses
                            </button>

                            <div class="list-group list-group-flush border-top">
                                @foreach (var suggestion in m_aiSuggestions)
                                {
                                    <div class="list-group-item p-3 border-bottom cursor-pointer hover-bg-light"
                                         @onclick="() => AddClauseToLayout(suggestion)">
                                        <div class="text-secondary small mb-2">Click to add</div>
                                        <div class="fw-medium text-wrap">@suggestion</div>
                                    </div>
                                }
                                @if (!m_aiSuggestions.Any() && !m_loadingAi)
                                {
                                    <div class="text-center py-4 text-secondary">
                                        Describe what clauses you need and click suggest.
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </LoadingSkeleton>
</div>

@* Preview Modal *@
@if (m_showPreview)
{
    <div class="modal modal-blur fade show d-block" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Live Preview (HTML)</h5>
                    <button type="button" class="btn-close" @onclick="TogglePreview"></button>
                </div>
                <div class="modal-body p-0" style="height: 600px; overflow-y: auto;">
                    <iframe srcdoc="@m_previewHtml" style="width: 100%; height: 100%; border: none;"></iframe>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="TogglePreview">Close</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    [Parameter] public int? TemplateId { get; set; }
    [SupplyParameterFromQuery] public string? Type { get; set; }

    private DocumentTemplate m_template = new();
    private DocumentLayout m_layout = new();
    private bool m_loading = true;
    private bool m_saving;
    private bool m_showPreview;
    private string? m_previewHtml;

    // AI Features
    private bool m_showAiSidebar = true;
    private string m_aiContext = "";
    private List<string> m_aiSuggestions = new();
    private bool m_loadingAi;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task GetAiSuggestions()
    {
        m_loadingAi = true;
        try
        {
            m_aiSuggestions = await AiService.GetSuggestedClausesAsync(m_template.Type, m_aiContext);
        }
        catch (Exception ex)
        {
            ShowError($"AI Suggestion failed: {ex.Message}");
        }
        finally
        {
            m_loadingAi = false;
        }
    }

    private void AddBlockToColumn(List<LayoutBlock> column)
    {
        column.Add(new TextBlock { Content = "New Block in Column" });
    }

    private void AddClauseToLayout(string clause)
    {
        if (!m_layout.Sections.Any()) AddSection();
        var section = m_layout.Sections.Last();
        section.Blocks.Add(new TextBlock { Content = clause });
        ShowSuccess("Clause added to layout");
    }

    private void MoveBlockUp(LayoutSection section, LayoutBlock block)
    {
        var index = section.Blocks.IndexOf(block);
        if (index > 0)
        {
            section.Blocks.RemoveAt(index);
            section.Blocks.Insert(index - 1, block);
        }
    }

    private void MoveBlockDown(LayoutSection section, LayoutBlock block)
    {
        var index = section.Blocks.IndexOf(block);
        if (index < section.Blocks.Count - 1)
        {
            section.Blocks.RemoveAt(index);
            section.Blocks.Insert(index + 1, block);
        }
    }

    private async Task LoadDataAsync()
    {
        m_loading = true;
        try
        {
            if (TemplateId > 0)
            {
                var template = await TemplateService.GetTemplateByIdAsync(TemplateId.Value);
                if (template != null)
                {
                    m_template = template;
                    var layout = await TemplateService.GetTemplateLayoutAsync(m_template.StoreId);
                    if (layout != null) m_layout = layout;
                }
            }
            else
            {
                m_template = new DocumentTemplate
                {
                    Type = Enum.TryParse<DocumentType>(Type, true, out var t) ? t : DocumentType.Receipt,
                    Status = DocumentTemplateStatus.Draft
                };
                m_layout = new DocumentLayout
                {
                    Sections = new List<LayoutSection> { new LayoutSection { Name = "Main Content" } }
                };
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error loading template: {ex.Message}");
        }
        finally
        {
            m_loading = false;
        }
    }

    private void AddSection()
    {
        m_layout.Sections.Add(new LayoutSection { Name = "New Section" });
    }

    private void AddBlock(string type)
    {
        if (!m_layout.Sections.Any()) AddSection();
        
        var section = m_layout.Sections.Last();
        LayoutBlock block = type switch
        {
            "heading" => new HeadingBlock { Content = "Heading", Level = 2 },
            "text" => new TextBlock { Content = "New Text Block" },
            "image" => new ImageBlock { Width = 100 },
            "table" => new TableBlock { Columns = new List<TableColumn> { new TableColumn { Header = "Column 1" } } },
            "divider" => new DividerBlock { Thickness = 1, Color = "#eeeeee" },
            "signature" => new SignatureBlock { Label = "Authorized Signature" },
            "two-columns" => new TwoColumnBlock(),
            "spacer" => new SpacerBlock { Height = 20 },
            _ => throw new ArgumentException("Invalid block type")
        };
        
        section.Blocks.Add(block);
    }

    private async Task TogglePreview()
    {
        if (!m_showPreview)
        {
            // Prepare sample data for preview
            var sampleData = await GetSampleDataAsync();
            m_previewHtml = HtmlRenderer.RenderHtml(m_layout, sampleData);
        }
        m_showPreview = !m_showPreview;
    }

    private async Task<Dictionary<string, object?>> GetSampleDataAsync()
    {
        var org = await OrganizationService.GetOrganizationByAccountNoAsync(AccountNo);
        var staff = new User { FullName = UserName, UserName = UserName };
        var booking = new Booking { BookingRef = "PRV-001", CustomerName = "John Preview" };
        return DataResolver.Resolve(booking, org ?? new Organization { Name = "Preview Org" }, staff);
    }

    private async Task SaveTemplateAsync()
    {
        if (string.IsNullOrWhiteSpace(m_template.Name))
        {
            ShowError("Template name is required");
            return;
        }

        m_saving = true;
        try
        {
            var result = await TemplateService.SaveTemplateAsync(m_template, m_layout, UserName);
            if (result.Success)
            {
                ShowSuccess("Template saved successfully");
                if (TemplateId == null || TemplateId == 0)
                {
                    NavigationManager.NavigateTo($"/settings/templates/designer/{m_template.DocumentTemplateId}");
                }
            }
            else
            {
                ShowError(result.Message ?? "Failed to save template");
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error saving template: {ex.Message}");
        }
        finally
        {
            m_saving = false;
        }
    }
}