@page "/settings/users"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.DataContext
@attribute [Authorize(Policy = "RequireTenantOrgAdmin")]
@inherits LocalizedComponentBase<ShopUsers>
@inject CoreDataContext CoreContext
@inject ISubscriptionService SubscriptionService
@inject IDirectoryService DirectoryService

<MotoRentPageTitle>@Localizer["Title"]</MotoRentPageTitle>

<TablerHeader Title="@Localizer["Title"]" PreTitle="@Localizer["PreTitle"]">
    <button type="button" class="btn btn-primary" @onclick="OpenAddDialog">
        <i class="ti ti-user-plus me-1"></i>
        @Localizer["AddTeamMember"]
    </button>
</TablerHeader>

<!-- Search and Filter -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3 align-items-end">
            <div class="col-12 col-md-5">
                <label class="form-label">@CommonLocalizer["Search"]</label>
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="@Localizer["SearchPlaceholder"]"
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyup" />
                </div>
            </div>

            <div class="col-12 col-md-3">
                <label class="form-label">@Localizer["Roles"]</label>
                <select class="form-select" @bind="m_roleFilter" @bind:after="ApplyFilters">
                    <option value="">@Localizer["AllRoles"]</option>
                    <option value="@UserAccount.ORG_ADMIN">@Localizer["RoleOrgAdmin"]</option>
                    <option value="@UserAccount.SHOP_MANAGER">@Localizer["RoleShopManager"]</option>
                    <option value="@UserAccount.STAFF">@Localizer["RoleStaff"]</option>
                    <option value="@UserAccount.MECHANIC">@Localizer["RoleMechanic"]</option>
                </select>
            </div>

            <div class="col-12 col-md-2">
                <label class="form-label">@Localizer["Status"]</label>
                <select class="form-select" @bind="m_statusFilter" @bind:after="ApplyFilters">
                    <option value="">@Localizer["AllStatus"]</option>
                    <option value="active">@Localizer["Active"]</option>
                    <option value="locked">@Localizer["Locked"]</option>
                </select>
            </div>

            <div class="col-12 col-md-2 text-end">
                <span class="badge bg-primary-lt fs-6">@Localizer["UserCount", m_filteredUsers.Count]</span>
            </div>
        </div>
    </div>
</div>

@if (m_loading)
{
    <div class="progress progress-sm mb-4">
        <div class="progress-bar progress-bar-indeterminate"></div>
    </div>
}

<!-- Users Table -->
<div class="card">
    <div class="card-header">
        <h3 class="card-title">@Localizer["Title"]</h3>
    </div>
    <div class="table-responsive" style="@(m_openDropdown != null ? "overflow: visible;" : "")">
        <table class="table table-vcenter card-table table-striped">
            <thead>
                <tr>
                    <th>@Localizer["Username"]</th>
                    <th>@Localizer["FullName"]</th>
                    <th>@Localizer["Email"]</th>
                    <th>@Localizer["Roles"]</th>
                    <th>@Localizer["Status"]</th>
                    <th class="w-1"></th>
                </tr>
            </thead>
            <tbody>
                @if (m_filteredUsers.Count == 0 && !m_loading)
                {
                    <tr>
                        <td colspan="6" class="text-center text-secondary py-4">
                            <i class="ti ti-users-group mb-2" style="font-size: 2rem;"></i>
                            <div>@Localizer["NoUsersFound"]</div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var user in m_filteredUsers)
                    {
                        var userAccount = user.AccountCollection.FirstOrDefault(a => a.AccountNo == this.AccountNo);
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="avatar avatar-sm me-2 @(user.IsLockedOut ? "bg-danger-lt" : "bg-primary-lt")">
                                        @(user.FullName?.FirstOrDefault().ToString().ToUpperInvariant() ?? "U")
                                    </span>
                                    @user.UserName
                                </div>
                            </td>
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>
                                <div class="d-flex flex-wrap gap-1">
                                    @if (userAccount != null)
                                    {
                                        @foreach (var role in userAccount.Roles)
                                        {
                                            <span class="badge @GetRoleBadgeClass(role)">@GetRoleDisplayName(role)</span>
                                        }
                                    }
                                </div>
                            </td>
                            <td>
                                @if (user.IsLockedOut)
                                {
                                    <span class="badge bg-danger">@Localizer["Locked"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Localizer["Active"]</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown @(m_openDropdown == user.UserName ? "show" : "")">
                                    <button type="button" class="btn btn-ghost-secondary btn-icon"
                                            @onclick="@(() => ToggleDropdown(user.UserName))" @onclick:stopPropagation="true">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    <div class="dropdown-menu dropdown-menu-end @(m_openDropdown == user.UserName ? "show" : "")"
                                         style="@(m_openDropdown == user.UserName ? "position: absolute; inset: 0px 0px auto auto; margin: 0px; transform: translate(0px, 34px);" : "")">
                                        <a class="dropdown-item" href="#"
                                           @onclick="@(() => { CloseDropdown(); EditRoles(user); })" @onclick:preventDefault>
                                            <i class="ti ti-edit me-2"></i>
                                            @Localizer["EditRoles"]
                                        </a>
                                        @if (user.IsLockedOut)
                                        {
                                            <a class="dropdown-item text-success" href="#"
                                               @onclick="@(() => { CloseDropdown(); UnlockUser(user); })" @onclick:preventDefault>
                                                <i class="ti ti-lock-open me-2"></i>
                                                @Localizer["UnlockUser"]
                                            </a>
                                        }
                                        else if (user.UserName != this.UserName)
                                        {
                                            <a class="dropdown-item text-warning" href="#"
                                               @onclick="@(() => { CloseDropdown(); LockUser(user); })" @onclick:preventDefault>
                                                <i class="ti ti-lock me-2"></i>
                                                @Localizer["LockUser"]
                                            </a>
                                        }
                                        @if (user.UserName != this.UserName)
                                        {
                                            <div class="dropdown-divider"></div>
                                            <a class="dropdown-item text-danger" href="#"
                                               @onclick="@(() => { CloseDropdown(); RemoveUser(user); })" @onclick:preventDefault>
                                                <i class="ti ti-user-minus me-2"></i>
                                                @Localizer["RemoveUser"]
                                            </a>
                                        }
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<User> m_users = [];
    private List<User> m_filteredUsers = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private string? m_roleFilter;
    private string? m_statusFilter;
    private string? m_openDropdown;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private void ToggleDropdown(string? userName)
    {
        this.m_openDropdown = this.m_openDropdown == userName ? null : userName;
    }

    private void CloseDropdown()
    {
        this.m_openDropdown = null;
    }

    private async Task LoadDataAsync()
    {
        if (string.IsNullOrEmpty(this.AccountNo))
        {
            return;
        }

        this.m_loading = true;
        try
        {
            // Load users in this organization
            var users = await this.SubscriptionService.GetUsersAsync(this.AccountNo);
            this.m_users = users.ToList();

            this.ApplyFilters();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyup()
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();

        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += (sender, args) =>
        {
            this.m_debounceTimer?.Stop();
            InvokeAsync(() =>
            {
                ApplyFilters();
                StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private void ApplyFilters()
    {
        this.m_filteredUsers = this.m_users
            .Where(MatchesSearch)
            .Where(MatchesRole)
            .Where(MatchesStatus)
            .OrderBy(u => u.FullName ?? u.UserName)
            .ToList();
    }

    private bool MatchesSearch(User user)
    {
        if (string.IsNullOrWhiteSpace(this.m_searchTerm)) return true;
        var term = this.m_searchTerm.ToLowerInvariant();
        return (user.UserName?.ToLowerInvariant().Contains(term) ?? false) ||
               (user.FullName?.ToLowerInvariant().Contains(term) ?? false) ||
               (user.Email?.ToLowerInvariant().Contains(term) ?? false);
    }

    private bool MatchesRole(User user)
    {
        if (string.IsNullOrWhiteSpace(this.m_roleFilter)) return true;
        var account = user.AccountCollection.FirstOrDefault(a => a.AccountNo == this.AccountNo);
        return account?.Roles.Contains(this.m_roleFilter) ?? false;
    }

    private bool MatchesStatus(User user)
    {
        if (string.IsNullOrWhiteSpace(this.m_statusFilter)) return true;
        return this.m_statusFilter switch
        {
            "active" => !user.IsLockedOut,
            "locked" => user.IsLockedOut,
            _ => true
        };
    }

    private async Task OpenAddDialog()
    {
        var result = await this.DialogService
            .Create<ShopUserDialog>(Localizer["AddTeamMember"])
            .WithParameter(x => x.AccountNo, this.AccountNo!)
            .WithParameter(x => x.IsNew, true)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
        }
    }

    private async Task EditRoles(User user)
    {
        var result = await this.DialogService
            .Create<ShopUserDialog>(Localizer["EditRolesFor", user.FullName ?? user.UserName])
            .WithParameter(x => x.AccountNo, this.AccountNo!)
            .WithParameter(x => x.IsNew, false)
            .WithParameter(x => x.Entity, user.Clone())
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await LoadDataAsync();
            this.ShowSuccess(Localizer["RolesUpdated", user.FullName ?? user.UserName]);
        }
    }

    private async Task LockUser(User user)
    {
        var confirmed = await this.DialogService.ConfirmYesNoAsync(
            Localizer["ConfirmLock", user.FullName ?? user.UserName],
            Localizer["LockUser"]);

        if (confirmed)
        {
            user.IsLockedOut = true;
            await this.DirectoryService.SaveUserProfileAsync(user);
            this.ShowWarning(Localizer["UserLocked", user.FullName ?? user.UserName]);
            StateHasChanged();
        }
    }

    private async Task UnlockUser(User user)
    {
        user.IsLockedOut = false;
        await this.DirectoryService.SaveUserProfileAsync(user);
        this.ShowSuccess(Localizer["UserUnlocked", user.FullName ?? user.UserName]);
        StateHasChanged();
    }

    private async Task RemoveUser(User user)
    {
        var confirmed = await this.DialogService.ConfirmYesNoAsync(
            Localizer["ConfirmRemove", user.FullName ?? user.UserName],
            Localizer["RemoveUser"]);

        if (confirmed)
        {
            await this.SubscriptionService.RemoveUserFromOrganizationAsync(user, this.AccountNo!);
            this.ShowSuccess(Localizer["UserRemoved", user.FullName ?? user.UserName]);
            await this.LoadDataAsync();
        }
    }

    private string GetRoleDisplayName(string role) => role switch
    {
        UserAccount.ORG_ADMIN => Localizer["RoleOrgAdmin"],
        UserAccount.SHOP_MANAGER => Localizer["RoleShopManager"],
        UserAccount.STAFF => Localizer["RoleStaff"],
        UserAccount.MECHANIC => Localizer["RoleMechanic"],
        _ => role
    };

    private static string GetRoleBadgeClass(string role) => role switch
    {
        UserAccount.ORG_ADMIN => "bg-primary",
        UserAccount.SHOP_MANAGER => "bg-purple",
        UserAccount.STAFF => "bg-info",
        UserAccount.MECHANIC => "bg-warning",
        _ => "bg-secondary"
    };

    public void Dispose()
    {
        this.m_debounceTimer?.Dispose();
    }
}
