@using MotoRent.Domain.Entities
@inherits LocalizedDialogBase<VehiclePool, VehiclePoolDialog>
@inject VehiclePoolService VehiclePoolService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label required">Pool Name</label>
                <input type="text" class="form-control" @bind="Entity.Name" required
                       placeholder="e.g., Phuket Beach Shops, Krabi Area Pool" />
            </div>

            <div class="col-12">
                <label class="form-label">Description</label>
                <textarea class="form-control" @bind="Entity.Description" rows="2"
                          placeholder="Optional description of this vehicle pool..."></textarea>
            </div>

            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="isActive" @bind="Entity.IsActive">
                    <label class="form-check-label" for="isActive">
                        Pool is active
                    </label>
                </div>
                <small class="text-secondary">
                    Inactive pools won't show pooled vehicles in shop availability
                </small>
            </div>

            @if (IsNew)
            {
                <div class="col-12">
                    <hr class="my-2" />
                    <label class="form-label">Initial Shops</label>
                    <div class="list-group list-group-flush" style="max-height: 200px; overflow-y: auto;">
                        @foreach (var shop in AvailableShops)
                        {
                            var isSelected = Entity.ShopIds.Contains(shop.ShopId);
                            <label class="list-group-item">
                                <input class="form-check-input me-2" type="checkbox"
                                       checked="@isSelected"
                                       @onchange="@(e => ToggleShop(shop.ShopId, (bool)(e.Value ?? false)))" />
                                <span>
                                    <i class="ti ti-building-store me-1 text-secondary"></i>
                                    @shop.Name
                                </span>
                                @if (!string.IsNullOrEmpty(shop.Address))
                                {
                                    <small class="text-secondary d-block ms-4">@shop.Address</small>
                                }
                            </label>
                        }
                    </div>
                    <small class="text-secondary">
                        Select at least 2 shops to create a pool. You can manage shops later.
                    </small>
                </div>
            }
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        Cancel
    </button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@(Saving || !CanSave())">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
    [Parameter]
    public List<Shop> AvailableShops { get; set; } = [];

    private void ToggleShop(int shopId, bool selected)
    {
        if (selected && !Entity.ShopIds.Contains(shopId))
        {
            Entity.ShopIds.Add(shopId);
        }
        else if (!selected && Entity.ShopIds.Contains(shopId))
        {
            Entity.ShopIds.Remove(shopId);
        }
    }

    private bool CanSave()
    {
        if (string.IsNullOrWhiteSpace(Entity.Name))
            return false;

        // New pools need at least 2 shops
        if (IsNew && Entity.ShopIds.Count < 2)
            return false;

        return true;
    }

    private async Task SaveAsync()
    {
        if (!CanSave())
        {
            if (IsNew && Entity.ShopIds.Count < 2)
            {
                this.ShowWarning("Please select at least 2 shops to create a pool");
                return;
            }
            return;
        }

        this.Saving = true;

        try
        {
            var result = this.IsNew
                ? await this.VehiclePoolService.CreatePoolAsync(this.Entity, this.UserName)
                : await this.VehiclePoolService.UpdatePoolAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError($"Save failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }
}
