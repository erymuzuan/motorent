@inherits LocalizedDialogBase<Payment, PaymentDialog>
@inject PaymentService PaymentService
@inject RentalService RentalService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            @if (!HideRentalSelector)
            {
                <div class="col-12">
                    <label class="form-label required">@Localizer["Rental"]</label>
                    <select class="form-select" @bind="m_selectedRentalId" required>
                        <option value="">@Localizer["SelectRental"]</option>
                        @foreach (var rental in m_rentals)
                        {
                            <option value="@rental.RentalId">#@rental.RentalId - @rental.RenterName</option>
                        }
                    </select>
                </div>
            }

            <div class="col-md-6">
                <label class="form-label required">@Localizer["PaymentType"]</label>
                <select class="form-select" @bind="Entity.PaymentType" required>
                    <option value="Rental">@Localizer["RentalPayment"]</option>
                    <option value="Insurance">@Localizer["Insurance"]</option>
                    <option value="Accessory">@Localizer["Accessory"]</option>
                    <option value="Deposit">@Localizer["Deposit"]</option>
                    <option value="Damage">@Localizer["DamageCharge"]</option>
                    <option value="Additional">@Localizer["AdditionalCharge"]</option>
                    <option value="Refund">@Localizer["Refund"]</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@Localizer["PaymentMethod"]</label>
                <select class="form-select" @bind="Entity.PaymentMethod" required>
                    <option value="Cash">@Localizer["Cash"]</option>
                    <option value="Card">@Localizer["Card"]</option>
                    <option value="PromptPay">@Localizer["PromptPay"]</option>
                    <option value="BankTransfer">@Localizer["BankTransfer"]</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@Localizer["Amount"]</label>
                <div class="input-group">
                    <span class="input-group-text">à¸¿</span>
                    <input type="number" class="form-control" @bind="Entity.Amount"
                           required min="0" step="0.01" placeholder="0.00" />
                </div>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@Localizer["Status"]</label>
                <select class="form-select" @bind="Entity.Status" required>
                    <option value="Completed">@Localizer["Completed"]</option>
                    <option value="Pending">@Localizer["Pending"]</option>
                    <option value="Refunded">@Localizer["Refund"]</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label required">@Localizer["PaymentDate"]</label>
                <input type="date" class="form-control" @bind="m_paidOnDate" required />
            </div>

            <div class="col-md-6">
                <label class="form-label">@Localizer["PaymentTime"]</label>
                <input type="time" class="form-control" @bind="m_paidOnTime" />
            </div>

            <div class="col-12">
                <label class="form-label">@Localizer["TransactionReference"]</label>
                <input type="text" class="form-control" @bind="Entity.TransactionRef"
                       placeholder="@Localizer["ReferencePlaceholder"]" />
            </div>

            <div class="col-12">
                <label class="form-label">@Localizer["Notes"]</label>
                <textarea class="form-control" @bind="Entity.Notes" rows="2"></textarea>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        @Localizer["Cancel"]
    </button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @(IsNew ? Localizer["RecordPayment"] : Localizer["Save"])
    </button>
</div>

@code {
    [Parameter] public bool HideRentalSelector { get; set; }

    private int? m_selectedRentalId;
    private List<Rental> m_rentals = [];
    private DateOnly m_paidOnDate = DateOnly.FromDateTime(DateTime.Today);
    private TimeOnly m_paidOnTime = TimeOnly.FromDateTime(DateTime.Now);

    protected override async Task OnParametersSetAsync()
    {
        if (Entity.RentalId > 0)
        {
            m_selectedRentalId = Entity.RentalId;
        }

        if (!HideRentalSelector)
        {
            var rentalsResult = await RentalService.GetRentalsAsync(ShopId, "Active", null);
            m_rentals = rentalsResult.ItemCollection.ToList();
        }

        if (Entity.PaidOn != default)
        {
            m_paidOnDate = DateOnly.FromDateTime(Entity.PaidOn.DateTime);
            m_paidOnTime = TimeOnly.FromDateTime(Entity.PaidOn.DateTime);
        }
    }

    private async Task SaveAsync()
    {
        this.Saving = true;
        try
        {
            if (m_selectedRentalId.HasValue)
            {
                Entity.RentalId = m_selectedRentalId.Value;
            }
            Entity.PaidOn = new DateTimeOffset(m_paidOnDate.ToDateTime(m_paidOnTime));

            var result = this.IsNew
                ? await this.PaymentService.CreatePaymentAsync(this.Entity, this.UserName)
                : await this.PaymentService.UpdatePaymentAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError(Localizer["SaveFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["Error", ex.Message]);
        }
        finally
        {
            this.Saving = false;
        }
    }
}
