@page "/renters"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<Renters>
@inject RenterService RenterService

<MotoRentPageTitle>Renters</MotoRentPageTitle>

<TablerHeader Title="Renter Management" PreTitle="Customer Records">
    <button type="button" class="btn btn-primary" @onclick="OpenAddDialog">
        <i class="ti ti-user-plus me-1"></i>
        Register Renter
    </button>
</TablerHeader>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-6">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search by name, phone, passport, email..."
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                </div>
            </div>
        </div>
    </div>
</div>

<LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Table" Rows="10" Columns="7">
    <div class="card">
        <div class="table-responsive">
            <table class="table table-vcenter card-table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Full Name</th>
                        <th>Nationality</th>
                        <th>Passport No.</th>
                        <th>Phone</th>
                        <th>Email</th>
                        <th>Hotel</th>
                        <th class="w-1">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (m_renters.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-secondary py-4">
                                <i class="ti ti-users mb-2" style="font-size: 2rem;"></i>
                                <div>No renters found</div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var renter in m_renters)
                        {
                            <tr class="cursor-pointer" @onclick="@(() => OpenEditDialog(renter))">
                                <td>
                                    <div class="d-flex align-items-center">
                                        <span class="avatar avatar-sm bg-primary-lt me-2">
                                            @(renter.FullName?.Length > 0 ? renter.FullName[0].ToString().ToUpper() : "?")
                                        </span>
                                        <strong>@renter.FullName</strong>
                                    </div>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(renter.Nationality))
                                    {
                                        <span class="badge bg-azure-lt">@renter.Nationality</span>
                                    }
                                </td>
                                <td>@renter.PassportNo</td>
                                <td>@renter.Phone</td>
                                <td>@renter.Email</td>
                                <td>@renter.HotelName</td>
                                <td @onclick:stopPropagation="true">
                                    <div class="btn-list flex-nowrap">
                                        <button type="button" class="btn btn-icon btn-ghost-primary"
                                                title="Edit" @onclick="@(() => OpenEditDialog(renter))">
                                            <i class="ti ti-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-icon btn-ghost-info"
                                                title="View Documents" @onclick="@(() => ViewDocuments(renter))">
                                            <i class="ti ti-folder"></i>
                                        </button>
                                        <button type="button" class="btn btn-icon btn-ghost-danger"
                                                title="Delete" @onclick="@(() => ConfirmDelete(renter))">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @if (m_renters.Count > 0)
        {
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-secondary">
                    Showing <strong>@m_renters.Count</strong> renters
                </p>
            </div>
        }
    </div>
</LoadingSkeleton>

@code {
    private List<Renter> m_renters = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            var result = await this.RenterService.GetRentersAsync(
                this.ShopId,
                this.m_searchTerm,
                page: 1,
                pageSize: 100);

            this.m_renters = result.ItemCollection;
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();
        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += async (_, _) =>
        {
            this.m_debounceTimer?.Stop();
            await this.InvokeAsync(async () =>
            {
                await this.LoadDataAsync();
                this.StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private async Task OpenAddDialog()
    {
        var renter = new Renter
        {
            ShopId = this.ShopId
        };

        var result = await this.DialogService
            .Create<RenterDialog>("Register Renter")
            .WithParameter(x => x.Entity, renter)
            .WithParameter(x => x.IsNew, true)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Renter registered successfully");
        }
    }

    private async Task OpenEditDialog(Renter renter)
    {
        var result = await this.DialogService
            .Create<RenterDialog>("Edit Renter")
            .WithParameter(x => x.Entity, renter.Clone())
            .WithParameter(x => x.IsNew, false)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Renter updated successfully");
        }
    }

    private Task ViewDocuments(Renter renter)
    {
        this.ShowInfo("Document viewer coming soon");
        return Task.CompletedTask;
    }

    private async Task ConfirmDelete(Renter renter)
    {
        var activeRentals = await this.RenterService.GetActiveRentalCountAsync(renter.RenterId);
        if (activeRentals > 0)
        {
            this.ShowWarning($"Cannot delete: {renter.FullName} has {activeRentals} active rental(s)");
            return;
        }

        if (!await this.ConfirmDeleteAsync(renter.FullName ?? "this renter"))
            return;

        var deleteResult = await this.RenterService.DeleteRenterAsync(renter, this.UserName);
        if (deleteResult.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Renter deleted successfully");
        }
        else
        {
            this.ShowError($"Delete failed: {deleteResult.Message}");
        }
    }

    public void Dispose()
    {
        this.m_debounceTimer?.Dispose();
    }
}
