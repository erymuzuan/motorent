@inherits LocalizedDialogBase<Accessory, AccessoryDialog>
@inject AccessoryService AccessoryService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label required">Accessory Name</label>
                <input type="text" class="form-control" @bind="Entity.Name" required
                       placeholder="e.g., Helmet, Phone Holder, Rain Poncho" />
            </div>

            <div class="col-md-6">
                <label class="form-label required">Daily Rate (THB)</label>
                <div class="input-group">
                    <span class="input-group-text">à¸¿</span>
                    <input type="number" class="form-control" @bind="Entity.DailyRate" required
                           min="0" step="10" disabled="@Entity.IsIncluded" />
                </div>
                @if (Entity.IsIncluded)
                {
                    <small class="form-hint text-success">Free with rental</small>
                }
                else
                {
                    <small class="form-hint">Charge per day</small>
                }
            </div>

            <div class="col-md-6">
                <label class="form-label required">Quantity Available</label>
                <input type="number" class="form-control" @bind="Entity.QuantityAvailable" required
                       min="0" />
            </div>

            <div class="col-12">
                <label class="form-check">
                    <input type="checkbox" class="form-check-input" checked="@Entity.IsIncluded"
                           @onchange="OnIncludedChanged" />
                    <span class="form-check-label">Free with rental</span>
                </label>
                @if (Entity.IsIncluded)
                {
                    <small class="text-success d-block mt-1">
                        <i class="ti ti-check me-1"></i>
                        This accessory is included free with every rental
                    </small>
                }
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        Cancel
    </button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        this.FormValid = true;
    }

    private void OnIncludedChanged(ChangeEventArgs e)
    {
        this.Entity.IsIncluded = (bool)(e.Value ?? false);
        if (this.Entity.IsIncluded)
        {
            this.Entity.DailyRate = 0;
        }
    }

    private async Task SaveAsync()
    {
        this.Saving = true;

        try
        {
            var result = this.IsNew
                ? await this.AccessoryService.CreateAccessoryAsync(this.Entity, this.UserName)
                : await this.AccessoryService.UpdateAccessoryAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError($"Save failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }
}
