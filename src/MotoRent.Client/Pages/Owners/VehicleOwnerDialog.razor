@inherits LocalizedDialogBase<VehicleOwner, VehicleOwnerDialog>
@inject VehicleOwnerService VehicleOwnerService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link @(m_activeTab == "info" ? "active" : "")"
                        @onclick="@(() => m_activeTab = "info")">
                    <i class="ti ti-user me-1"></i>
                    Owner Info
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button type="button" class="nav-link @(m_activeTab == "bank" ? "active" : "")"
                        @onclick="@(() => m_activeTab = "bank")">
                    <i class="ti ti-building-bank me-1"></i>
                    Bank Details
                </button>
            </li>
        </ul>

        <div class="tab-content">
            @* Owner Info Tab *@
            <div class="tab-pane fade @(m_activeTab == "info" ? "show active" : "")">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label required">Owner Name</label>
                        <input type="text" class="form-control" @bind="Entity.Name" required
                               placeholder="Full name or company name" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label required">Phone Number</label>
                        <input type="tel" class="form-control" @bind="Entity.Phone" required
                               placeholder="+66 XX XXX XXXX" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-control" @bind="Entity.Email"
                               placeholder="owner@example.com" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">ID Number</label>
                        <input type="text" class="form-control" @bind="Entity.IdNumber"
                               placeholder="Thai ID or passport number" />
                        <small class="form-hint">For payment verification</small>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" @bind="Entity.Address" rows="2"
                                  placeholder="Full address for correspondence"></textarea>
                    </div>

                    <div class="col-12">
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" @bind="Entity.Notes" rows="2"
                                  placeholder="Additional notes about this owner"></textarea>
                    </div>

                    <div class="col-12">
                        <label class="form-check form-switch">
                            <input type="checkbox" class="form-check-input" @bind="Entity.IsActive" />
                            <span class="form-check-label">Active</span>
                        </label>
                        <small class="form-hint">Inactive owners won't appear in selection lists</small>
                    </div>
                </div>
            </div>

            @* Bank Details Tab *@
            <div class="tab-pane fade @(m_activeTab == "bank" ? "show active" : "")">
                <div class="alert alert-info mb-3">
                    <i class="ti ti-info-circle me-2"></i>
                    Bank details are used for processing owner payments. Keep this information up to date.
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Bank Name</label>
                        <select class="form-select" @bind="Entity.BankName">
                            <option value="">Select bank...</option>
                            <option value="Bangkok Bank">Bangkok Bank</option>
                            <option value="Kasikorn Bank">Kasikorn Bank (KBank)</option>
                            <option value="Siam Commercial Bank">Siam Commercial Bank (SCB)</option>
                            <option value="Krungthai Bank">Krungthai Bank</option>
                            <option value="Bank of Ayudhya">Bank of Ayudhya (Krungsri)</option>
                            <option value="TMBThanachart Bank">TMBThanachart Bank (ttb)</option>
                            <option value="Government Savings Bank">Government Savings Bank (GSB)</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Account Number</label>
                        <input type="text" class="form-control" @bind="Entity.BankAccountNumber"
                               placeholder="XXX-X-XXXXX-X" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Account Name</label>
                        <input type="text" class="form-control" @bind="Entity.BankAccountName"
                               placeholder="Name as shown on bank account" />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">PromptPay ID</label>
                        <input type="text" class="form-control" @bind="Entity.PromptPayId"
                               placeholder="Phone number or National ID" />
                        <small class="form-hint">For quick transfers via PromptPay</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        Cancel
    </button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
    private string m_activeTab = "info";

    protected override void OnInitialized()
    {
        this.FormValid = true;
    }

    private async Task SaveAsync()
    {
        this.Saving = true;

        try
        {
            var result = this.IsNew
                ? await this.VehicleOwnerService.CreateOwnerAsync(this.Entity, this.UserName)
                : await this.VehicleOwnerService.UpdateOwnerAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError($"Save failed: {result.Message}");
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"Error: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }
}
