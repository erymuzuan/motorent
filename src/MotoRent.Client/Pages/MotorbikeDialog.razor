@using MotoRent.Domain.Entities
@using MotoRent.Services
@inject MotorbikeService MotorbikeService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="m_form" @bind-IsValid="m_formValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Motorbike.LicensePlate" Label="License Plate"
                                  Required="true" RequiredError="License plate is required"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="Motorbike.Status" Label="Status"
                               Required="true" Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Available")">Available</MudSelectItem>
                        <MudSelectItem Value="@("Rented")">Rented</MudSelectItem>
                        <MudSelectItem Value="@("Maintenance")">Maintenance</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSelect @bind-Value="Motorbike.Brand" Label="Brand"
                               Required="true" RequiredError="Brand is required"
                               Variant="Variant.Outlined">
                        <MudSelectItem Value="@("Honda")">Honda</MudSelectItem>
                        <MudSelectItem Value="@("Yamaha")">Yamaha</MudSelectItem>
                        <MudSelectItem Value="@("Suzuki")">Suzuki</MudSelectItem>
                        <MudSelectItem Value="@("Kawasaki")">Kawasaki</MudSelectItem>
                        <MudSelectItem Value="@("Vespa")">Vespa</MudSelectItem>
                    </MudSelect>
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Motorbike.Model" Label="Model"
                                  Required="true" RequiredError="Model is required"
                                  Variant="Variant.Outlined"
                                  Placeholder="e.g., Click 125, PCX 160, Aerox 155" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Motorbike.EngineCC" Label="Engine CC"
                                     Required="true" Min="50" Max="1000"
                                     Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="Motorbike.Color" Label="Color"
                                  Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Motorbike.Year" Label="Year"
                                     Required="true" Min="2000" Max="@DateTime.Now.Year"
                                     Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Motorbike.DailyRate" Label="Daily Rate (THB)"
                                     Required="true" Min="0"
                                     Variant="Variant.Outlined" Format="N0" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Motorbike.DepositAmount" Label="Deposit Amount (THB)"
                                     Required="true" Min="0"
                                     Variant="Variant.Outlined" Format="N0" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudNumericField @bind-Value="Motorbike.Mileage" Label="Current Mileage (km)"
                                     Min="0" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudDatePicker @bind-Date="m_lastServiceDate" Label="Last Service Date"
                                   Variant="Variant.Outlined" Editable="true"
                                   Placeholder="Select date" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Motorbike.Notes" Label="Notes"
                                  Variant="Variant.Outlined" Lines="3" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="SaveAsync" Disabled="@(!m_formValid || m_saving)">
            @if (m_saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            @(IsNew ? "Add" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public Motorbike Motorbike { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private MudForm? m_form;
    private bool m_formValid;
    private bool m_saving;
    private DateTime? m_lastServiceDate;

    protected override void OnInitialized()
    {
        m_lastServiceDate = Motorbike.LastServiceDate?.DateTime;
    }

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private async Task SaveAsync()
    {
        if (m_form == null) return;

        await m_form.Validate();
        if (!m_formValid) return;

        m_saving = true;

        try
        {
            Motorbike.LastServiceDate = m_lastServiceDate.HasValue
                ? new DateTimeOffset(m_lastServiceDate.Value)
                : null;

            var result = IsNew
                ? await MotorbikeService.CreateMotorbikeAsync(Motorbike, "system")
                : await MotorbikeService.UpdateMotorbikeAsync(Motorbike, "system");

            if (result.Success)
            {
                MudDialog?.Close(DialogResult.Ok(Motorbike));
            }
            else
            {
                Snackbar.Add($"Save failed: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            m_saving = false;
        }
    }
}
