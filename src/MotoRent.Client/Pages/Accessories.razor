@page "/accessories"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<Accessories>
@implements IDisposable
@inject AccessoryService AccessoryService

<MotoRentPageTitle>@Localizer["Accessories"]</MotoRentPageTitle>

<TablerHeader Title="@Localizer["RentalAccessories"]" PreTitle="@Localizer["InventoryManagement"]">
    <button type="button" class="btn btn-primary" @onclick="OpenAddDialog">
        <i class="ti ti-plus me-1"></i>
        @Localizer["AddAccessory"]
    </button>
</TablerHeader>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="@Localizer["SearchPlaceholder"]"
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                </div>
            </div>
            <div class="col-md-8 text-end">
                <span class="badge bg-primary me-1">@Localizer["TotalCount", m_totalCount]</span>
                <span class="badge bg-success">@Localizer["IncludedFreeCount", m_includedFreeCount]</span>
            </div>
        </div>
    </div>
</div>

<LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Table" Rows="10" Columns="5">
    <div class="card">
        <div class="table-responsive">
            <table class="table table-vcenter card-table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Localizer["Name"]</th>
                        <th>@Localizer["DailyRate"]</th>
                        <th>@Localizer["Quantity"]</th>
                        <th>@Localizer["Included"]</th>
                        <th class="w-1">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody>
                    @if (m_accessories.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-secondary py-4">
                                <i class="ti ti-headphones mb-2" style="font-size: 2rem;"></i>
                                <div>@Localizer["NoAccessoriesFound"]</div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var accessory in m_accessories)
                        {
                            <tr class="cursor-pointer" @onclick="@(() => OpenEditDialog(accessory))">
                                <td>
                                    <strong>@accessory.Name</strong>
                                </td>
                                <td>
                                    @if (accessory.IsIncluded)
                                    {
                                        <span class="badge bg-success">@Localizer["Free"]</span>
                                    }
                                    else
                                    {
                                        <span class="text-primary fw-bold">@FormatCurrency(accessory.DailyRate)</span>
                                    }
                                </td>
                                <td>
                                    <div class="d-flex align-items-center gap-1">
                                        <span>@accessory.QuantityAvailable</span>
                                        @if (accessory.QuantityAvailable == 0)
                                        {
                                            <span class="badge bg-danger">@Localizer["OutOfStock"]</span>
                                        }
                                        else if (accessory.QuantityAvailable <= 3)
                                        {
                                            <span class="badge bg-warning">@Localizer["Low"]</span>
                                        }
                                    </div>
                                </td>
                                <td>
                                    @if (accessory.IsIncluded)
                                    {
                                        <i class="ti ti-check text-success"></i>
                                    }
                                </td>
                                <td @onclick:stopPropagation="true">
                                    <div class="btn-list flex-nowrap">
                                        <button type="button" class="btn btn-icon btn-ghost-primary"
                                                title="@Localizer["Edit"]" @onclick="@(() => OpenEditDialog(accessory))">
                                            <i class="ti ti-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-icon btn-ghost-danger"
                                                title="@Localizer["Delete"]" @onclick="@(() => ConfirmDelete(accessory))">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @if (m_accessories.Count > 0)
        {
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-secondary">
                    @Localizer["ShowingCount", m_accessories.Count]
                </p>
            </div>
        }
    </div>
</LoadingSkeleton>

@code {
    private List<Accessory> m_accessories = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private int m_totalCount;
    private int m_includedFreeCount;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            var result = await this.AccessoryService.GetAccessoriesAsync(
                0,
                this.m_searchTerm,
                page: 1,
                pageSize: 100);

            this.m_accessories = result.ItemCollection;

            var counts = await this.AccessoryService.GetAccessoryCountsAsync(0);
            this.m_totalCount = counts.Total;
            this.m_includedFreeCount = counts.IncludedFree;
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["ErrorLoadingData", ex.Message]);
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();
        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += async (_, _) =>
        {
            this.m_debounceTimer?.Stop();
            await this.InvokeAsync(async () =>
            {
                await this.LoadDataAsync();
                this.StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private async Task OpenAddDialog()
    {
        var accessory = new Accessory
        {
            ShopId = this.RequestContext.GetShopId(),
            QuantityAvailable = 1
        };

        var result = await this.DialogService
            .Create<AccessoryDialog>(Localizer["AddAccessory"])
            .WithParameter(x => x.Entity, accessory)
            .WithParameter(x => x.IsNew, true)
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess(Localizer["AccessoryAdded"]);
        }
    }

    private async Task OpenEditDialog(Accessory accessory)
    {
        var result = await this.DialogService
            .Create<AccessoryDialog>(Localizer["EditAccessory"])
            .WithParameter(x => x.Entity, accessory.Clone())
            .WithParameter(x => x.IsNew, false)
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess(Localizer["AccessoryUpdated"]);
        }
    }

    private async Task ConfirmDelete(Accessory accessory)
    {
        if (!await this.ConfirmDeleteAsync(accessory.Name ?? Localizer["DefaultAccessoryName"]))
            return;

        var deleteResult = await this.AccessoryService.DeleteAccessoryAsync(accessory, this.UserName);
        if (deleteResult.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess(Localizer["AccessoryDeleted"]);
        }
        else
        {
            this.ShowError(Localizer["DeleteFailed", deleteResult.Message ?? ""]);
        }
    }

    public void Dispose()
    {
        this.m_debounceTimer?.Dispose();
    }
}
