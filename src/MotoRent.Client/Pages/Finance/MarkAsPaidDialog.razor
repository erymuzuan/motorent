@inherits LocalizedDialogBase<OwnerPayment, MarkAsPaidDialog>
@inject OwnerPaymentService OwnerPaymentService

<form id="@this.FormId" @onsubmit="this.SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        @* Payment Summary *@
        <div class="alert alert-info mb-3">
            <div class="d-flex">
                <div class="flex-fill">
                    <div class="mb-2">
                        <strong>@this.Localizer["Owner"]:</strong> @this.Payment.VehicleOwnerName
                    </div>
                    <div class="mb-2">
                        <strong>@this.Localizer["Vehicle"]:</strong> @this.Payment.VehicleName
                    </div>
                    <div>
                        <strong>@this.Localizer["Period"]:</strong> @this.Payment.RentalStartDate.ToString("dd MMM") - @this.Payment.RentalEndDate.ToString("dd MMM yyyy")
                        (@this.Localizer["DaysCount", this.Payment.RentalDays])
                    </div>
                </div>
                <div class="text-end">
                    <div class="text-secondary">@this.Localizer["AmountDue"]</div>
                    <div class="h2 mb-0">@this.Payment.Amount.ToString("N0") @this.Localizer["CurrencyTHB"]</div>
                </div>
            </div>
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label required">@this.Localizer["PaymentMethod"]</label>
                <select class="form-select" @bind="this.PaymentMethod" required>
                    <option value="">@this.Localizer["SelectMethod"]</option>
                    <option value="Bank Transfer">@this.Localizer["BankTransfer"]</option>
                    <option value="PromptPay">@this.Localizer["PromptPay"]</option>
                    <option value="Cash">@this.Localizer["Cash"]</option>
                    <option value="Cheque">@this.Localizer["Cheque"]</option>
                    <option value="Other">@this.Localizer["Other"]</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">@this.Localizer["PaymentReference"]</label>
                <input type="text" class="form-control" @bind="this.PaymentRef"
                       placeholder="@this.Localizer["PaymentRefPlaceholder"]" />
            </div>

            <div class="col-12">
                <label class="form-label">@this.Localizer["Notes"]</label>
                <textarea class="form-control" @bind="this.Notes" rows="2"
                          placeholder="@this.Localizer["PaymentNotesPlaceholder"]"></textarea>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="this.Cancel">
        @this.Localizer["Cancel"]
    </button>
    <button type="submit" form="@this.FormId" class="btn btn-success" disabled="@this.Saving">
        @if (this.Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-check me-1"></i>
        @this.Localizer["ConfirmPayment"]
    </button>
</div>

@code {
    [Parameter]
    public OwnerPayment Payment { get; set; } = new();

    private string? PaymentMethod { get; set; }
    private string? PaymentRef { get; set; }
    private string? Notes { get; set; }

    protected override void OnInitialized()
    {
        this.FormValid = true;
    }

    private async Task SaveAsync()
    {
        if (string.IsNullOrEmpty(this.PaymentMethod))
        {
            this.ShowError(this.Localizer["SelectPaymentMethodRequired"]);
            return;
        }

        this.Saving = true;

        try
        {
            var result = await this.OwnerPaymentService.MarkAsPaidAsync(
                this.Payment.OwnerPaymentId,
                this.PaymentMethod,
                this.PaymentRef,
                this.Notes,
                this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError(this.Localizer["MarkAsPaidFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError($"{this.Localizer["Error"]}: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }
}
