@using MotoRent.Domain.Entities
@using MotoRent.Client.Components.Receipts
@inherits LocalizedDialogBase<Receipt, TillReceiptsDialog>
@inject ReceiptService ReceiptService

<div class="modal-body" style="max-height: 70vh; overflow-y: auto;">
    @* Search and Filter *@
    <div class="row g-2 mb-3">
        <div class="col">
            <div class="input-icon">
                <input type="text" class="form-control" placeholder="@Localizer["SearchReceipts"]"
                       @bind="this.m_searchTerm" @bind:event="oninput" @onkeyup="this.OnSearchChanged" />
                <span class="input-icon-addon">
                    <i class="ti ti-search"></i>
                </span>
            </div>
        </div>
        <div class="col-auto">
            <select class="form-select" @bind="this.m_filterType" @bind:after="this.ApplyFilters">
                <option value="">@Localizer["AllTypes"]</option>
                <option value="@ReceiptTypes.CheckIn">@Localizer["ReceiptTypeCheckIn"]</option>
                <option value="@ReceiptTypes.Settlement">@Localizer["ReceiptTypeSettlement"]</option>
                <option value="@ReceiptTypes.BookingDeposit">@Localizer["ReceiptTypeBookingDeposit"]</option>
            </select>
        </div>
    </div>

    @if (this.Loading)
    {
        <div class="progress progress-sm mb-3">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }
    else if (!this.m_filteredReceipts.Any())
    {
        <div class="text-center py-5 text-secondary">
            <i class="ti ti-receipt-off" style="font-size: 3rem;"></i>
            <div class="mt-2">@Localizer["NoReceiptsFound"]</div>
        </div>
    }
    else
    {
        <div class="list-group list-group-flush">
            @foreach (var receipt in this.m_filteredReceipts)
            {
                <div class="list-group-item px-0">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="d-flex gap-3">
                            <span class="avatar @GetReceiptAvatarClass(receipt)">
                                <i class="@GetReceiptTypeIcon(receipt)"></i>
                            </span>
                            <div>
                                <div class="fw-medium">@receipt.ReceiptNo</div>
                                <div class="text-secondary small">@receipt.CustomerName</div>
                                <div class="d-flex gap-2 mt-1">
                                    <span class="badge @GetReceiptTypeBadgeClass(receipt)">
                                        @GetReceiptTypeName(receipt.ReceiptType)
                                    </span>
                                    @if (receipt.Status == ReceiptStatus.Voided)
                                    {
                                        <span class="badge bg-danger-lt text-danger">
                                            @Localizer["Voided"]
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="text-end">
                            <div class="text-success fw-bold">
                                @this.FormatCurrency(receipt.GrandTotal)
                            </div>
                            <small class="text-secondary">
                                @this.FormatDateTime(receipt.IssuedOn)
                            </small>
                            <div class="mt-2">
                                <button type="button" class="btn btn-sm btn-ghost-primary"
                                        @onclick="@(() => this.ViewReceiptAsync(receipt))">
                                    <i class="ti ti-eye me-1"></i>@Localizer["View"]
                                </button>
                                @if (receipt.Status != ReceiptStatus.Voided)
                                {
                                    <button type="button" class="btn btn-sm btn-ghost-primary"
                                            @onclick="@(() => this.PrintReceiptAsync(receipt))">
                                        <i class="ti ti-printer me-1"></i>@Localizer["Print"]
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal-footer">
    <div class="me-auto text-secondary">
        @Localizer["TotalReceipts", this.m_filteredReceipts.Count.ToString("N0")]
    </div>
    <button type="button" class="btn btn-secondary" @onclick="this.Cancel">
        @Localizer["Close"]
    </button>
</div>

@code {
    [Parameter]
    public int SessionId { get; set; }

    private bool Loading { get; set; } = true;
    private List<Receipt> m_allReceipts = [];
    private List<Receipt> m_filteredReceipts = [];
    private string m_searchTerm = string.Empty;
    private string m_filterType = string.Empty;

    protected override async Task OnParametersSetAsync()
    {
        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        try
        {
            this.Loading = true;
            this.m_allReceipts = await this.ReceiptService.GetReceiptsByTillSessionAsync(this.SessionId);
            this.ApplyFilters();
        }
        catch (Exception ex)
        {
            this.Logger.LogError(ex, "Error loading receipts");
            this.ShowError("Failed to load receipts");
        }
        finally
        {
            this.Loading = false;
        }
    }

    private void OnSearchChanged()
    {
        this.ApplyFilters();
    }

    private void ApplyFilters()
    {
        var query = this.m_allReceipts.AsEnumerable();

        // Filter by type
        if (!string.IsNullOrEmpty(this.m_filterType))
        {
            query = query.Where(r => r.ReceiptType == this.m_filterType);
        }

        // Filter by search term
        if (!string.IsNullOrWhiteSpace(this.m_searchTerm))
        {
            var term = this.m_searchTerm.ToLowerInvariant();
            query = query.Where(r =>
                (r.ReceiptNo?.ToLowerInvariant().Contains(term) ?? false) ||
                (r.CustomerName?.ToLowerInvariant().Contains(term) ?? false) ||
                (r.LicensePlate?.ToLowerInvariant().Contains(term) ?? false));
        }

        this.m_filteredReceipts = query.ToList();
    }

    private async Task ViewReceiptAsync(Receipt receipt)
    {
        await this.DialogService.Create<ReceiptPrintDialog>(Localizer["Receipt"])
            .WithParameter(x => x.Entity, receipt)
            .WithParameter(x => x.IsReprint, true)
            .WithSize(ModalSize.Large)
            .ShowDialogAsync();
    }

    private async Task PrintReceiptAsync(Receipt receipt)
    {
        await this.DialogService.Create<ReceiptPrintDialog>(Localizer["Receipt"])
            .WithParameter(x => x.Entity, receipt)
            .WithParameter(x => x.IsReprint, true)
            .WithSize(ModalSize.Large)
            .ShowDialogAsync();
    }

    private string GetReceiptTypeName(string receiptType) => receiptType switch
    {
        ReceiptTypes.CheckIn => Localizer["ReceiptTypeCheckIn"],
        ReceiptTypes.Settlement => Localizer["ReceiptTypeSettlement"],
        ReceiptTypes.BookingDeposit => Localizer["ReceiptTypeBookingDeposit"],
        _ => receiptType
    };

    private static string GetReceiptTypeIcon(Receipt receipt) => receipt.ReceiptType switch
    {
        ReceiptTypes.CheckIn => "ti ti-login",
        ReceiptTypes.Settlement => "ti ti-logout",
        ReceiptTypes.BookingDeposit => "ti ti-calendar-check",
        _ => "ti ti-receipt"
    };

    private static string GetReceiptAvatarClass(Receipt receipt) => receipt.ReceiptType switch
    {
        ReceiptTypes.CheckIn => "bg-success-lt",
        ReceiptTypes.Settlement => "bg-primary-lt",
        ReceiptTypes.BookingDeposit => "bg-info-lt",
        _ => "bg-secondary-lt"
    };

    private static string GetReceiptTypeBadgeClass(Receipt receipt) => receipt.ReceiptType switch
    {
        ReceiptTypes.CheckIn => "bg-success-lt text-success",
        ReceiptTypes.Settlement => "bg-primary-lt text-primary",
        ReceiptTypes.BookingDeposit => "bg-info-lt text-info",
        _ => "bg-secondary-lt text-secondary"
    };
}
