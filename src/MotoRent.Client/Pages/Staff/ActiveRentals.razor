    private string GetStatusClass(RentalDisplayItem rental)
    {
        if (rental.IsOverdue) return "status-overdue";
        if (rental.DueDate.Date <= DateTime.Today) return "status-due-soon";
        return "status-ok";
    }

    private Color GetDueColor(RentalDisplayItem rental)
    {
        if (rental.IsOverdue) return Color.Error;
        if (rental.DueDate.Date <= DateTime.Today) return Color.Warning;
        return Color.Default;
    }

    private string GetDueText(RentalDisplayItem rental)
    {
        if (rental.IsOverdue)
        {
            var days = (DateTime.Today - rental.DueDate.Date).Days;
            return $"{days} day{(days > 1 ? "s" : "")} overdue";
        }

        if (rental.DueDate.Date == DateTime.Today)
        {
            return $"Due today {rental.DueDate:HH:mm}";
        }

        if (rental.DueDate.Date == DateTime.Today.AddDays(1))
        {
            return "Due tomorrow";
        }

        return $"Due {rental.DueDate:MMM dd}";
    }

