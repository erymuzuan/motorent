        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void SetFilter(string filter)
    {
        this.m_selectedFilter = filter;
    }

    private static string GetStatusClass(RentalDisplayItem rental)
    {
        if (rental.IsOverdue) return "status-overdue";
        if (rental.DueDate.Date <= DateTime.Today) return "status-due-soon";
        return "status-ok";
    }

    private static string GetDueColorClass(RentalDisplayItem rental)
    {
        if (rental.IsOverdue) return "text-danger";
        if (rental.DueDate.Date <= DateTime.Today) return "text-warning";
        return "text-secondary";
    }

    private static string GetDueText(RentalDisplayItem rental)
    {
        if (rental.IsOverdue)
        {
            var days = (DateTime.Today - rental.DueDate.Date).Days;
            return $"{days} day{(days > 1 ? "s" : "")} overdue";
        }

        if (rental.DueDate.Date == DateTime.Today)
        {
            return $"Due today {rental.DueDate:HH:mm}";
        }

        if (rental.DueDate.Date == DateTime.Today.AddDays(1))
        {
            return "Due tomorrow";
        }

        return $"Due {rental.DueDate:MMM dd}";
    }

    private void ShowDetails(RentalDisplayItem rental)
    {
        // TODO: Show rental details dialog
        this.NavigationManager.NavigateTo($"/rentals/{rental.RentalId}");
    }

    private void CallRenter(RentalDisplayItem rental)
    {
        this.NavigationManager.NavigateTo($"tel:{rental.Phone}", forceLoad: true);
    }

    private async Task ExtendRental(RentalDisplayItem rental)
    {
        if (!await this.DialogService.ConfirmAsync($"Extend rental for {rental.RenterName}?", "Extend Rental"))
            return;

        // TODO: Process extension
        this.ShowSuccess("Rental extended successfully");
    }

    private void ProcessReturn(RentalDisplayItem rental)
    {
        this.NavigationManager.NavigateTo($"/staff/return?rentalId={rental.RentalId}");
    }

    private record RentalDisplayItem(
        int RentalId,
        string RenterName,
        string Phone,
        string MotorbikeName,
        string LicensePlate,
        DateTime DueDate,
        DateTime StartDate,
        string Status
    )
    {
        public bool IsOverdue => DueDate.Date < DateTime.Today;
        public int CurrentDay => Math.Max(1, (DateTime.Today - StartDate.Date).Days + 1);
        public int TotalDays => Math.Max(1, (DueDate.Date - StartDate.Date).Days + 1);
    }
}
