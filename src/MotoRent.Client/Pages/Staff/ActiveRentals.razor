@page "/staff/rentals"
@using MotoRent.Domain
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inject NavigationManager NavigationManager
@inject IDialogService DialogService

<PageTitle>Active Rentals - MotoRent</PageTitle>

@* Search and Filters *@
<MudStack Row="true" Spacing="2" Class="mb-3">
    <MudTextField @bind-Value="m_searchText"
                  Placeholder="Search renter or plate..."
                  Variant="Variant.Outlined"
                  Adornment="Adornment.Start"
                  AdornmentIcon="@Icons.Material.Filled.Search"
                  Immediate="true"
                  DebounceInterval="300"
                  Class="flex-grow-1"
                  Style="max-width: 100%;" />
</MudStack>

@* Filter Chips *@
<MudChipSet T="string" @bind-SelectedValue="m_selectedFilter" Mandatory="true" Class="mb-3">
    <MudChip Value="@("all")" Color="Color.Default" Variant="Variant.Outlined">
        All (@m_allRentals.Count)
    </MudChip>
    <MudChip Value="@("active")" Color="Color.Success" Variant="Variant.Outlined">
        Active (@m_allRentals.Count(r => r.Status == "Active"))
    </MudChip>
    <MudChip Value="@("duetoday")" Color="Color.Warning" Variant="Variant.Outlined">
        Due Today (@m_allRentals.Count(r => r.DueDate.Date == DateTime.Today))
    </MudChip>
    <MudChip Value="@("overdue")" Color="Color.Error" Variant="Variant.Outlined">
        Overdue (@m_allRentals.Count(r => r.IsOverdue))
    </MudChip>
</MudChipSet>

@* Rental Cards *@
@if (m_loading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="mb-3" />
    @for (int i = 0; i < 3; i++)
    {
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="120px" Class="mb-2 rounded-lg" />
    }
}
else if (!FilteredRentals.Any())
{
    <MudAlert Severity="Severity.Info" Class="mt-4">
        No rentals match your search criteria
    </MudAlert>
}
else
{
    <MudStack Spacing="2">
        @foreach (var rental in FilteredRentals)
        {
            <MudPaper Elevation="2" Class="rental-card pa-3" @onclick="@(() => ShowDetails(rental))">
                <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems="AlignItems.Start">
                    @* Left: Status indicator + Info *@
                    <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Start">
                        <div class="status-indicator @GetStatusClass(rental)"></div>
                        <MudStack Spacing="0">
                            <MudText Typo="Typo.body1" Style="font-weight: 600;">
                                @rental.RenterName
                            </MudText>
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @rental.Phone
                            </MudText>
                            <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center" Class="mt-1">
                                <MudIcon Icon="@Icons.Material.Filled.TwoWheeler" Size="Size.Small" />
                                <MudText Typo="Typo.body2">
                                    @rental.MotorbikeName
                                </MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">
                                    (@rental.LicensePlate)
                                </MudText>
                            </MudStack>
                        </MudStack>
                    </MudStack>

                    @* Right: Due date + Actions *@
                    <MudStack AlignItems="AlignItems.End" Spacing="1">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Day @rental.CurrentDay of @rental.TotalDays
                        </MudText>
                        <MudText Typo="Typo.body2" Color="@GetDueColor(rental)" Style="font-weight: 500;">
                            @GetDueText(rental)
                        </MudText>
                        @if (rental.IsOverdue)
                        {
                            <MudChip T="string" Color="Color.Error" Size="Size.Small">OVERDUE</MudChip>
                        }
                    </MudStack>
                </MudStack>

                @* Action Buttons *@
                <MudStack Row="true" Justify="Justify.FlexEnd" Spacing="1" Class="mt-2">
                    <MudButton Variant="Variant.Text" Color="Color.Default" Size="Size.Small"
                               StartIcon="@Icons.Material.Filled.Phone"
                               OnClick="@(() => CallRenter(rental))"
                               OnClickStopPropagation="true">
                        Call
                    </MudButton>
                    <MudButton Variant="Variant.Text" Color="Color.Primary" Size="Size.Small"
                               StartIcon="@Icons.Material.Filled.AddCircle"
                               OnClick="@(() => ExtendRental(rental))"
                               OnClickStopPropagation="true">
                        Extend
                    </MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small"
                               StartIcon="@Icons.Material.Filled.Logout"
                               OnClick="@(() => ProcessReturn(rental))"
                               OnClickStopPropagation="true">
                        Return
                    </MudButton>
                </MudStack>
            </MudPaper>
        }
    </MudStack>
}

<style>
    .rental-card {
        border-radius: 12px;
        cursor: pointer;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .rental-card:active {
        transform: scale(0.99);
    }

    .status-indicator {
        width: 4px;
        min-height: 60px;
        border-radius: 2px;
        flex-shrink: 0;
    }

    .status-ok {
        background-color: var(--mud-palette-success);
    }

    .status-due-soon {
        background-color: var(--mud-palette-warning);
    }

    .status-overdue {
        background-color: var(--mud-palette-error);
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? Filter { get; set; }

    private bool m_loading = true;
    private string m_searchText = "";
    private string m_selectedFilter = "all";
    private List<RentalDisplayItem> m_allRentals = [];

    private IEnumerable<RentalDisplayItem> FilteredRentals
    {
        get
        {
            var query = m_allRentals.AsEnumerable();

            // Apply status filter
            query = m_selectedFilter switch
            {
                "active" => query.Where(r => r.Status == "Active" && !r.IsOverdue),
                "duetoday" => query.Where(r => r.DueDate.Date == DateTime.Today),
                "overdue" => query.Where(r => r.IsOverdue),
                _ => query
            };

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(m_searchText))
            {
                var search = m_searchText.ToLowerInvariant();
                query = query.Where(r =>
                    r.RenterName.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                    r.LicensePlate.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                    r.Phone.Contains(search, StringComparison.OrdinalIgnoreCase)
                );
            }

            return query.OrderBy(r => r.DueDate);
        }
    }

