@page "/staff/rentals"
@using MotoRent.Domain
@using Microsoft.AspNetCore.Authorization
@inherits MotoRentComponentBase
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inject NavigationManager NavigationManager

<PageTitle>Active Rentals - MotoRent</PageTitle>

@* Search and Filters *@
<div class="mb-3">
    <div class="input-icon">
        <span class="input-icon-addon">
            <i class="ti ti-search"></i>
        </span>
        <input type="text" class="form-control" placeholder="Search renter or plate..."
               @bind="m_searchText" @bind:event="oninput" />
    </div>
</div>

@* Filter Chips *@
<div class="btn-group mb-3" role="group">
    <button type="button" class="btn @(m_selectedFilter == "all" ? "btn-secondary" : "btn-outline-secondary")"
            @onclick="@(() => SetFilter("all"))">
        All (@m_allRentals.Count)
    </button>
    <button type="button" class="btn @(m_selectedFilter == "active" ? "btn-success" : "btn-outline-success")"
            @onclick="@(() => SetFilter("active"))">
        Active (@m_allRentals.Count(r => r.Status == "Active"))
    </button>
    <button type="button" class="btn @(m_selectedFilter == "duetoday" ? "btn-warning" : "btn-outline-warning")"
            @onclick="@(() => SetFilter("duetoday"))">
        Due Today (@m_allRentals.Count(r => r.DueDate.Date == DateTime.Today))
    </button>
    <button type="button" class="btn @(m_selectedFilter == "overdue" ? "btn-danger" : "btn-outline-danger")"
            @onclick="@(() => SetFilter("overdue"))">
        Overdue (@m_allRentals.Count(r => r.IsOverdue))
    </button>
</div>

@* Rental Cards *@
@if (m_loading)
{
    <div class="progress progress-sm mb-3">
        <div class="progress-bar progress-bar-indeterminate"></div>
    </div>
    @for (int i = 0; i < 3; i++)
    {
        <div class="card mb-2">
            <div class="card-body placeholder-glow">
                <span class="placeholder col-6"></span>
                <span class="placeholder col-4 ms-2"></span>
            </div>
        </div>
    }
}
else if (!FilteredRentals.Any())
{
    <div class="alert alert-info mt-4">
        No rentals match your search criteria
    </div>
}
else
{
    <div class="d-flex flex-column gap-2">
        @foreach (var rental in FilteredRentals)
        {
            <div class="card rental-card cursor-pointer" @onclick="@(() => ShowDetails(rental))">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-start">
                        @* Left: Status indicator + Info *@
                        <div class="d-flex gap-2 align-items-start">
                            <div class="status-indicator @GetStatusClass(rental)"></div>
                            <div>
                                <div class="fw-semibold">@rental.RenterName</div>
                                <small class="text-secondary">@rental.Phone</small>
                                <div class="d-flex align-items-center gap-1 mt-1">
                                    <i class="ti ti-motorbike" style="font-size: 0.875rem;"></i>
                                    <span class="small">@rental.MotorbikeName</span>
                                    <small class="text-secondary">(@rental.LicensePlate)</small>
                                </div>
                            </div>
                        </div>

                        @* Right: Due date + Status *@
                        <div class="text-end">
                            <small class="text-secondary">
                                Day @rental.CurrentDay of @rental.TotalDays
                            </small>
                            <div class="@GetDueColorClass(rental) small fw-medium">
                                @GetDueText(rental)
                            </div>
                            @if (rental.IsOverdue)
                            {
                                <span class="badge bg-danger">OVERDUE</span>
                            }
                        </div>
                    </div>

                    @* Action Buttons *@
                    <div class="d-flex justify-content-end gap-1 mt-2" @onclick:stopPropagation="true">
                        <button type="button" class="btn btn-sm btn-ghost-secondary"
                                @onclick="@(() => CallRenter(rental))">
                            <i class="ti ti-phone me-1"></i>
                            Call
                        </button>
                        <button type="button" class="btn btn-sm btn-ghost-primary"
                                @onclick="@(() => ExtendRental(rental))">
                            <i class="ti ti-calendar-plus me-1"></i>
                            Extend
                        </button>
                        <button type="button" class="btn btn-sm btn-primary"
                                @onclick="@(() => ProcessReturn(rental))">
                            <i class="ti ti-logout me-1"></i>
                            Return
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
}

<style>
    .rental-card {
        border-radius: 12px;
        transition: transform 0.15s ease, box-shadow 0.15s ease;
    }

    .rental-card:active {
        transform: scale(0.99);
    }

    .status-indicator {
        width: 4px;
        min-height: 60px;
        border-radius: 2px;
        flex-shrink: 0;
    }

    .status-ok {
        background-color: var(--tblr-success);
    }

    .status-due-soon {
        background-color: var(--tblr-warning);
    }

    .status-overdue {
        background-color: var(--tblr-danger);
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? Filter { get; set; }

    private bool m_loading = true;
    private string m_searchText = "";
    private string m_selectedFilter = "all";
    private List<RentalDisplayItem> m_allRentals = [];

    private IEnumerable<RentalDisplayItem> FilteredRentals
    {
        get
        {
            var query = this.m_allRentals.AsEnumerable();

            // Apply status filter
            query = this.m_selectedFilter switch
            {
                "active" => query.Where(r => r.Status == "Active" && !r.IsOverdue),
                "duetoday" => query.Where(r => r.DueDate.Date == DateTime.Today),
                "overdue" => query.Where(r => r.IsOverdue),
                _ => query
            };

            // Apply search filter
            if (!string.IsNullOrWhiteSpace(this.m_searchText))
            {
                var search = this.m_searchText.ToLowerInvariant();
                query = query.Where(r =>
                    r.RenterName.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                    r.LicensePlate.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                    r.Phone.Contains(search, StringComparison.OrdinalIgnoreCase)
                );
            }

            return query.OrderBy(r => r.DueDate);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        // Set filter from query string
        if (!string.IsNullOrEmpty(this.Filter))
        {
            this.m_selectedFilter = this.Filter.ToLowerInvariant();
        }

        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
