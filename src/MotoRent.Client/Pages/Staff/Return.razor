@page "/staff/return"
@using MotoRent.Domain
@using Microsoft.AspNetCore.Authorization
@inherits LocalizedComponentBase<Return>
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inject NavigationManager NavigationManager

<PageTitle>@Localizer["PageTitle"]</PageTitle>

@if (m_rental == null)
{
    @* Search/Scan View *@
    <h4 class="mb-4">@Localizer["ReturnBike"]</h4>

    <div class="card mb-4">
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">@Localizer["SearchDescription"]</label>
                <div class="input-icon">
                    <input type="text" class="form-control" @bind="m_searchText" @bind:event="oninput"
                           @onkeydown="OnSearchKeyDown" placeholder="@Localizer["SearchPlaceholder"]" autofocus />
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                </div>
            </div>

            <button type="button" class="btn btn-outline-primary w-100" disabled>
                <i class="ti ti-qrcode me-2"></i>
                @Localizer["ScanQRCode"] (@Localizer["ComingSoon"])
            </button>
        </div>
    </div>

    @if (m_loading)
    {
        <div class="progress progress-sm">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }
    else if (m_searchResults.Any())
    {
        <p class="text-secondary small mb-2">@Localizer["SelectRentalToProcess"]:</p>

        <div class="d-flex flex-column gap-2">
            @foreach (var rental in m_searchResults)
            {
                <div class="card rental-select-card cursor-pointer" @onclick="@(() => SelectRental(rental))">
                    <div class="card-body py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">@rental.MotorbikeName</div>
                                <div class="text-primary small">@rental.LicensePlate</div>
                                <small class="text-secondary">@rental.RenterName</small>
                            </div>
                            <i class="ti ti-chevron-right text-secondary"></i>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (!string.IsNullOrEmpty(m_searchText) && m_searchText.Length >= 2)
    {
        <div class="alert alert-info">
            @Localizer["NoRentalsFound", m_searchText]
        </div>
    }

    @* Recent Returns Quick Access *@
    @if (!m_searchResults.Any() && m_recentActive.Any())
    {
        <p class="text-secondary small mb-2 mt-4">@Localizer["DueTodayOverdue"]:</p>

        <div class="d-flex flex-column gap-2">
            @foreach (var rental in m_recentActive.Take(5))
            {
                <div class="card rental-select-card cursor-pointer" @onclick="@(() => SelectRental(rental))">
                    <div class="card-body py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center gap-2">
                                <div class="status-dot @(rental.IsOverdue ? "overdue" : "due-soon")"></div>
                                <div>
                                    <div class="fw-medium">@rental.LicensePlate - @rental.MotorbikeName</div>
                                    <small class="text-secondary">@rental.RenterName</small>
                                </div>
                            </div>
                            <span class="badge @(rental.IsOverdue ? "bg-danger" : "bg-warning")">
                                @(rental.IsOverdue ? Localizer["Overdue"] : Localizer["DueToday"])
                            </span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}
else
{
    @* Return Processing View *@
    <div class="d-flex align-items-center mb-4">
        <button type="button" class="btn btn-icon btn-ghost-secondary me-2" @onclick="ClearSelection">
            <i class="ti ti-arrow-left"></i>
        </button>
        <h4 class="mb-0">@Localizer["ReturnTitle", m_rental.LicensePlate]</h4>
    </div>

    @* Rental Summary *@
    <div class="card mb-3">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h5 class="mb-1">@m_rental.MotorbikeName</h5>
                    <div class="text-secondary small">@Localizer["Renter"]: @m_rental.RenterName</div>
                    <div class="text-secondary small">
                        @Localizer["Period"]: @m_rental.StartDate.ToString("MMM dd") - @m_rental.DueDate.ToString("MMM dd")
                        (@Localizer["DaysCount", m_rental.TotalDays])
                    </div>
                </div>
                @if (m_rental.IsOverdue)
                {
                    <span class="badge bg-danger">@Localizer["OverdueDaysCount", m_extraDays]</span>
                }
            </div>
        </div>
    </div>

    @* Condition Checklist *@
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title mb-3">@Localizer["ReturnChecklist"]</h5>

            <div class="d-flex flex-column gap-2">
                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="m_bikeConditionOk" />
                    <span class="form-check-label">@Localizer["ConditionOk"]</span>
                </label>

                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="m_fuelChecked" />
                    <span class="form-check-label">@Localizer["FuelChecked"]</span>
                </label>

                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="m_keysReturned" />
                    <span class="form-check-label">@Localizer["KeysReturned"]</span>
                </label>

                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="m_helmetReturned" />
                    <span class="form-check-label">@Localizer["HelmetsReturned"]</span>
                </label>

                <label class="form-check">
                    <input type="checkbox" class="form-check-input" @bind="m_accessoriesReturned" />
                    <span class="form-check-label">@Localizer["AccessoriesReturned"]</span>
                </label>
            </div>

            @if (!m_bikeConditionOk)
            {
                <div class="alert alert-warning mt-3">
                    <h5 class="alert-title">@Localizer["ReportDamageTitle"]:</h5>
                    <div class="mb-2">
                        <textarea class="form-control" rows="2" @bind="m_damageNotes"
                                  placeholder="@Localizer["DamagePlaceholder"]"></textarea>
                    </div>
                    <div class="input-group">
                        <span class="input-group-text">฿</span>
                        <input type="number" class="form-control" @bind="m_damageCharge"
                               min="0" placeholder="@Localizer["DamageCharge"]" />
                    </div>
                </div>
            }
        </div>
    </div>

    @* Financial Summary *@
    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title mb-3">@Localizer["PaymentSummary"]</h5>

            <div class="d-flex flex-column gap-1">
                <div class="d-flex justify-content-between">
                    <span class="small">@Localizer["RentalCostSummary", m_rental.TotalDays, FormatCurrency(m_rental.DailyRate)]</span>
                    <span class="small">@FormatCurrency(m_rentalTotal)</span>
                </div>

                @if (m_extraDays > 0)
                {
                    <div class="d-flex justify-content-between text-danger">
                        <span class="small">@Localizer["ExtraDaysSummary", m_extraDays, FormatCurrency(m_rental.DailyRate)]</span>
                        <span class="small">@FormatCurrency(m_extraDaysCharge)</span>
                    </div>
                }

                @if (m_damageCharge > 0)
                {
                    <div class="d-flex justify-content-between text-warning">
                        <span class="small">@Localizer["DamageCharge"]</span>
                        <span class="small">@FormatCurrency(m_damageCharge)</span>
                    </div>
                }

                <hr class="my-2" />

                <div class="d-flex justify-content-between">
                    <span class="fw-semibold">@Localizer["TotalDue"]</span>
                    <span class="fw-semibold">@FormatCurrency(TotalDue)</span>
                </div>

                <div class="d-flex justify-content-between text-secondary">
                    <span class="small">@Localizer["DepositHeld"]</span>
                    <span class="small">@FormatCurrency(m_rental.DepositAmount)</span>
                </div>

                <hr class="my-2" />

                @if (RefundAmount > 0)
                {
                    <div class="d-flex justify-content-between text-success">
                        <span class="h5 mb-0">@Localizer["RefundToCustomer"]</span>
                        <span class="h5 mb-0">@FormatCurrency(RefundAmount)</span>
                    </div>
                }
                else if (RefundAmount < 0)
                {
                    <div class="d-flex justify-content-between text-danger">
                        <span class="h5 mb-0">@Localizer["CollectFromCustomer"]</span>
                        <span class="h5 mb-0">@FormatCurrency(Math.Abs(RefundAmount))</span>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-between">
                        <span class="h5 mb-0">@Localizer["DepositUsedNoRefund"]</span>
                        <span class="h5 mb-0">฿0</span>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Complete Button *@
    <button type="button"
            class="btn btn-primary btn-lg w-100 py-3"
            disabled="@(!CanComplete)"
            @onclick="CompleteReturn">
        <i class="ti ti-circle-check me-2"></i>
        @if (RefundAmount > 0)
        {
            @Localizer["CompleteReturnRefund", FormatCurrency(RefundAmount)]
        }
        else if (RefundAmount < 0)
        {
            @Localizer["CompleteReturnCollect", FormatCurrency(Math.Abs(RefundAmount))]
        }
        else
        {
            @Localizer["CompleteReturn"]
        }
    </button>
}

<style>
    .rental-select-card {
        border-radius: 12px;
        transition: transform 0.15s ease;
    }

    .rental-select-card:active {
        transform: scale(0.98);
    }

    .status-dot {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        flex-shrink: 0;
    }

    .status-dot.overdue {
        background-color: var(--tblr-danger);
    }

    .status-dot.due-soon {
        background-color: var(--tblr-warning);
    }
</style>

@code {
    [SupplyParameterFromQuery]
    public string? RentalId { get; set; }

    private int m_rentalId;
    private bool m_loading;
    private string m_searchText = "";
    private List<RentalReturnItem> m_searchResults = [];
    private List<RentalReturnItem> m_recentActive = [];
    private RentalReturnItem? m_rental;

    // Checklist
    private bool m_bikeConditionOk = true;
    private bool m_fuelChecked;
    private bool m_keysReturned;
    private bool m_helmetReturned;
    private bool m_accessoriesReturned;

    // Damage
    private string m_damageNotes = "";
    private decimal m_damageCharge;

    // Calculations
    private int m_extraDays => this.m_rental?.IsOverdue == true
        ? (DateTime.Today - this.m_rental.DueDate.Date).Days
        : 0;

    private decimal m_rentalTotal => (this.m_rental?.TotalDays ?? 0) * (this.m_rental?.DailyRate ?? 0);
    private decimal m_extraDaysCharge => this.m_extraDays * (this.m_rental?.DailyRate ?? 0);
    private decimal TotalDue => this.m_rentalTotal + this.m_extraDaysCharge + this.m_damageCharge;
    private decimal RefundAmount => (this.m_rental?.DepositAmount ?? 0) - this.TotalDue;

    private bool CanComplete => this.m_fuelChecked && this.m_keysReturned && this.m_helmetReturned && this.m_accessoriesReturned
                                && (this.m_bikeConditionOk || !string.IsNullOrWhiteSpace(this.m_damageNotes));

    protected override async Task OnInitializedAsync()
    {
        m_rentalId = DecodeId(RentalId);
        await this.LoadRecentActiveAsync();

        if (this.m_rentalId > 0)
        {
            await this.LoadRentalAsync(this.m_rentalId);
        }
    }

    private async Task LoadRecentActiveAsync()
    {
        // TODO: Load from service
        this.m_recentActive =
        [
            new(4, "Sophie Chen", "+66 854 321 0987", "Yamaha NMAX 155", "D-3456",
                DateTime.Today.AddDays(-1), DateTime.Today.AddDays(-5), 450, 5000),
            new(2, "Maria Garcia", "+66 898 765 4321", "Yamaha Aerox 155", "B-5678",
                DateTime.Today, DateTime.Today.AddDays(-1), 450, 5000),
            new(6, "Emma Davis", "+66 821 098 7654", "Yamaha Fino 125", "F-2345",
                DateTime.Today.AddDays(-2), DateTime.Today.AddDays(-7), 350, 3000),
        ];

        await Task.CompletedTask;
    }

    private async Task LoadRentalAsync(int rentalId)
    {
        // TODO: Load from service
        this.m_rental = this.m_recentActive.FirstOrDefault(r => r.RentalId == rentalId)
                   ?? new(rentalId, "John Smith", "+66 812 345 6789", "Honda Click 125", "A-1234",
                       DateTime.Today.AddDays(2), DateTime.Today.AddDays(-2), 350, 3000);

        await Task.CompletedTask;
    }

    private async Task OnSearchKeyDown(KeyboardEventArgs args)
    {
        if (args.Key == "Enter" && this.m_searchText.Length >= 2)
        {
            await this.SearchRentalsAsync();
        }
    }

    private async Task SearchRentalsAsync()
    {
        if (this.m_searchText.Length < 2) return;

        this.m_loading = true;
        try
        {
            await Task.Delay(200); // Simulate search

            // TODO: Replace with actual search
            var search = this.m_searchText.ToLowerInvariant();
            this.m_searchResults = this.m_recentActive
                .Concat(
                [
                    new(1, "John Smith", "+66 812 345 6789", "Honda Click 125", "A-1234",
                        DateTime.Today.AddDays(2), DateTime.Today.AddDays(-2), 350, 3000),
                    new(7, "Michael Lee", "+66 810 987 6543", "Honda Scoopy i", "G-6789",
                        DateTime.Today.AddDays(3), DateTime.Today.AddDays(-1), 300, 3000),
                ])
                .Where(r =>
                    r.LicensePlate.Contains(search, StringComparison.OrdinalIgnoreCase) ||
                    r.RenterName.Contains(search, StringComparison.OrdinalIgnoreCase))
                .ToList();
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void SelectRental(RentalReturnItem rental)
    {
        this.m_rental = rental;
        this.m_searchText = "";
        this.m_searchResults.Clear();

        // Reset checklist
        this.m_bikeConditionOk = true;
        this.m_fuelChecked = false;
        this.m_keysReturned = false;
        this.m_helmetReturned = false;
        this.m_accessoriesReturned = false;
        this.m_damageNotes = "";
        this.m_damageCharge = 0;
    }

    private void ClearSelection()
    {
        this.m_rental = null;
    }

    private async Task CompleteReturn()
    {
        var message = this.RefundAmount > 0
            ? Localizer["ConfirmRefund", FormatCurrency(this.RefundAmount), this.m_rental!.RenterName]
            : this.RefundAmount < 0
                ? Localizer["ConfirmCollect", FormatCurrency(Math.Abs(this.RefundAmount)), this.m_rental!.RenterName]
                : Localizer["ConfirmReturnNoRefund", this.m_rental!.RenterName];

        if (!await this.DialogService.ConfirmAsync(message, Localizer["ConfirmReturn"]))
            return;

        // TODO: Process return via service
        this.ShowSuccess(Localizer["ReturnSuccess", this.m_rental!.LicensePlate]);
        this.NavigationManager.NavigateTo("/staff");
    }

    private record RentalReturnItem(
        int RentalId,
        string RenterName,
        string Phone,
        string MotorbikeName,
        string LicensePlate,
        DateTime DueDate,
        DateTime StartDate,
        decimal DailyRate,
        decimal DepositAmount
    )
    {
        public bool IsOverdue => DueDate.Date < DateTime.Today;
        public int TotalDays => Math.Max(1, (DueDate.Date - StartDate.Date).Days + 1);
    }
}
