@using MotoRent.Domain.Entities
@using MotoRent.Client.Components.Till
@inherits LocalizedDialogBase<Payment, TillReceivePaymentDialog>
@inject TillService TillService
@inject RentalService RentalService
@inject ExchangeRateService ExchangeRateService

<form id="receivePaymentForm" @onsubmit="this.SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        @* Step 1: Search for rental *@
        <div class="mb-3">
            <label class="form-label">@Localizer["SearchRental"]</label>
            <div class="input-group">
                <input type="text" class="form-control"
                       placeholder="@Localizer["RentalIdOrCustomer"]"
                       @bind="m_searchTerm" @bind:event="oninput"
                       @onkeydown="OnSearchKeyDown" />
                <button type="button" class="btn btn-primary" @onclick="SearchRentalsAsync" disabled="@m_searching">
                    @if (m_searching)
                    {
                        <span class="spinner-border spinner-border-sm"></span>
                    }
                    else
                    {
                        <i class="ti ti-search"></i>
                    }
                </button>
            </div>
        </div>

        @* Search Results *@
        @if (m_searchResults.Count > 0 && m_selectedRental is null)
        {
            <div class="list-group mb-3" style="max-height: 200px; overflow-y: auto;">
                @foreach (var rental in m_searchResults)
                {
                    <button type="button" class="list-group-item list-group-item-action"
                            @onclick="@(() => SelectRental(rental))">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-semibold">
                                    <span class="badge bg-primary me-2">#@rental.RentalId</span>
                                    @rental.VehicleName
                                </div>
                                <div class="small text-muted">
                                    @rental.StartDate.ToString("dd MMM") - @rental.ExpectedEndDate.ToString("dd MMM yyyy")
                                </div>
                            </div>
                            <div class="text-end">
                                <div class="fw-semibold">@CurrencyDenominations.GetCurrencySymbol(SupportedCurrencies.THB)@rental.TotalAmount.ToString("N0")</div>
                                <div class="small text-muted">@rental.Status</div>
                            </div>
                        </div>
                    </button>
                }
            </div>
        }

        @* Selected Rental *@
        @if (m_selectedRental is not null)
        {
            <div class="alert alert-success d-flex justify-content-between align-items-center mb-3">
                <div>
                    <div class="fw-semibold">
                        <span class="badge bg-success me-2">#@m_selectedRental.RentalId</span>
                        @m_selectedRental.VehicleName
                    </div>
                    <div class="small">
                        @m_selectedRental.StartDate.ToString("dd MMM") - @m_selectedRental.ExpectedEndDate.ToString("dd MMM yyyy")
                    </div>
                </div>
                <button type="button" class="btn btn-sm btn-ghost-secondary" @onclick="ClearSelection">
                    <i class="ti ti-x"></i>
                </button>
            </div>

            @* Payment Method Selection *@
            <div class="mb-3">
                <label class="form-label required">@Localizer["PaymentMethod"]</label>
                <select class="form-select" @bind="m_paymentMethod" @bind:after="OnPaymentMethodChanged">
                    <option value="Cash">@Localizer["Cash"]</option>
                    <option value="Card">@Localizer["Card"]</option>
                    <option value="PromptPay">@Localizer["PromptPay"]</option>
                    <option value="BankTransfer">@Localizer["BankTransfer"]</option>
                </select>
            </div>

            @if (m_paymentMethod == "Cash")
            {
                @* Currency Selection for Cash Payments *@
                <div class="mb-3">
                    <label class="form-label">@Localizer["PaymentCurrency"]</label>
                    <div class="d-flex gap-2 flex-wrap">
                        @foreach (var currency in CurrencyDenominations.CurrenciesWithDenominations)
                        {
                            <button type="button"
                                    class="btn @(m_selectedCurrency == currency ? "btn-primary" : "btn-outline-secondary")"
                                    style="min-width: 70px;"
                                    @onclick="@(() => SelectCurrencyAsync(currency))">
                                @currency
                            </button>
                        }
                    </div>
                </div>

                @* Denomination Entry Panel *@
                <div class="mb-3">
                    <label class="form-label">@Localizer["EnterDenominations"]</label>
                    <DenominationEntryPanel
                        Currency="@m_selectedCurrency"
                        DenominationCounts="@m_denominationCounts"
                        DenominationCountsChanged="@OnDenominationCountsChangedAsync" />
                </div>

                @* Change Calculation Display for Foreign Currency *@
                @if (m_selectedCurrency != SupportedCurrencies.THB && m_receivedAmount > 0)
                {
                    @if (m_conversionError is not null)
                    {
                        <div class="alert alert-warning">
                            <i class="ti ti-alert-triangle me-2"></i>
                            @Localizer["NoRateConfigured", m_selectedCurrency]
                        </div>
                    }
                    else
                    {
                        <div class="mr-change-breakdown mt-3 p-3 bg-light rounded">
                            <div class="d-flex justify-content-between mb-2">
                                <span>@Localizer["AmountReceived"]</span>
                                <span>@m_receivedAmount.ToString("N2") @m_selectedCurrency</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2 text-muted small">
                                <span>@Localizer["ExchangeRate"]</span>
                                <span>1 @m_selectedCurrency = @m_conversionRate.ToString("N2") THB</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span>@Localizer["ThbEquivalent"]</span>
                                <span>@m_thbEquivalent.ToString("N0") THB</span>
                            </div>
                            <hr class="my-2" />
                            <div class="d-flex justify-content-between fw-bold fs-5">
                                <span>@Localizer["ChangeToGive"]</span>
                                <span class="@(m_changeAmount >= 0 ? "text-success" : "text-danger")">
                                    @m_changeAmount.ToString("N0") THB
                                </span>
                            </div>
                        </div>
                    }
                }
            }
            else
            {
                @* Simple Amount Input for Non-Cash Payments (always THB) *@
                <div class="mb-3">
                    <label class="form-label required">@Localizer["Amount"]</label>
                    <div class="input-group">
                        <span class="input-group-text">@CurrencyDenominations.GetCurrencySymbol(SupportedCurrencies.THB)</span>
                        <input type="number" class="form-control text-end" @bind="m_amount"
                               required min="1" step="any" placeholder="0" />
                    </div>
                </div>
            }

            <div class="mt-3">
                <label class="form-label">@Localizer["Notes"]</label>
                <textarea class="form-control" @bind="m_notes" rows="2"
                          placeholder="@Localizer["NotesPlaceholder"]"></textarea>
            </div>
        }

        @* No Results Message *@
        @if (m_searched && m_searchResults.Count == 0 && m_selectedRental is null)
        {
            <div class="alert alert-warning">
                <i class="ti ti-alert-triangle me-2"></i>
                @Localizer["NoActiveRentalsFound"]
            </div>
        }
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="this.Cancel">
        @Localizer["Cancel"]
    </button>
    <button type="submit" form="receivePaymentForm" class="btn btn-success"
            disabled="@(!CanSave || m_saving)">
        @if (m_saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-check me-1"></i>
        @Localizer["RecordPayment"]
    </button>
</div>

@code {
    [Parameter]
    public int SessionId { get; set; }

    [Parameter]
    public int ShopId { get; set; }

    // Search state
    private string m_searchTerm = "";
    private List<Rental> m_searchResults = [];
    private Rental? m_selectedRental;
    private bool m_searching;
    private bool m_searched;
    private bool m_saving;

    // Payment state
    private string m_paymentMethod = "Cash";
    private string? m_notes;

    // Non-cash payment amount (always THB)
    private decimal m_amount;

    // Multi-currency cash payment state
    private string m_selectedCurrency = SupportedCurrencies.THB;
    private Dictionary<decimal, int> m_denominationCounts = [];
    private decimal m_receivedAmount;
    private decimal m_conversionRate;
    private decimal m_thbEquivalent;
    private decimal m_changeAmount;
    private string? m_conversionError;

    /// <summary>
    /// Determines if the save button should be enabled.
    /// </summary>
    private bool CanSave
    {
        get
        {
            if (m_selectedRental is null) return false;

            if (m_paymentMethod == "Cash")
            {
                // For cash payments, need denomination entry with amount > 0
                // For foreign currency, also need valid conversion (no error)
                if (m_receivedAmount <= 0) return false;
                if (m_selectedCurrency != SupportedCurrencies.THB && m_conversionError is not null) return false;
                return true;
            }
            else
            {
                // For non-cash, need simple amount > 0
                return m_amount > 0;
            }
        }
    }

    /// <summary>
    /// Initializes denomination counts for the selected currency.
    /// </summary>
    private void InitializeDenominationCounts()
    {
        m_denominationCounts.Clear();
        foreach (var denom in CurrencyDenominations.GetDenominations(m_selectedCurrency))
        {
            m_denominationCounts[denom] = 0;
        }
        m_receivedAmount = 0;
        m_thbEquivalent = 0;
        m_changeAmount = 0;
        m_conversionError = null;
    }

    private async Task OnSearchKeyDown(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchRentalsAsync();
        }
    }

    private async Task SearchRentalsAsync()
    {
        if (string.IsNullOrWhiteSpace(m_searchTerm) || m_searching) return;

        try
        {
            m_searching = true;
            m_searched = true;
            m_searchResults.Clear();

            // Try to parse as rental ID first
            if (int.TryParse(m_searchTerm.Trim(), out var rentalId))
            {
                var rental = await RentalService.GetRentalByIdAsync(rentalId);
                if (rental is not null && rental.Status == "Active")
                {
                    m_searchResults.Add(rental);
                }
            }

            // If no exact match or search term isn't a number, search active rentals
            if (m_searchResults.Count == 0)
            {
                var result = await RentalService.GetRentalsAsync(
                    ShopId,
                    status: "Active",
                    searchTerm: m_searchTerm,
                    page: 1,
                    pageSize: 10);
                m_searchResults.AddRange(result.ItemCollection);
            }
        }
        finally
        {
            m_searching = false;
        }
    }

    private void SelectRental(Rental rental)
    {
        m_selectedRental = rental;
        m_searchResults.Clear();
        InitializeDenominationCounts();
    }

    private void ClearSelection()
    {
        m_selectedRental = null;
        m_searchTerm = "";
        m_searched = false;
        m_amount = 0;
        InitializeDenominationCounts();
    }

    private void OnPaymentMethodChanged()
    {
        // Reset currency to THB when switching payment methods
        m_selectedCurrency = SupportedCurrencies.THB;
        InitializeDenominationCounts();
        m_amount = 0;
    }

    private async Task SelectCurrencyAsync(string currency)
    {
        m_selectedCurrency = currency;
        InitializeDenominationCounts();
        await UpdateConversionPreviewAsync();
    }

    private async Task OnDenominationCountsChangedAsync(Dictionary<decimal, int> counts)
    {
        m_denominationCounts = counts;
        m_receivedAmount = counts.Sum(kvp => kvp.Key * kvp.Value);
        await UpdateConversionPreviewAsync();
    }

    private async Task UpdateConversionPreviewAsync()
    {
        m_conversionError = null;

        if (m_receivedAmount <= 0)
        {
            m_thbEquivalent = 0;
            m_changeAmount = 0;
            return;
        }

        if (m_selectedCurrency == SupportedCurrencies.THB)
        {
            m_conversionRate = 1.0m;
            m_thbEquivalent = m_receivedAmount;
        }
        else
        {
            var conversion = await ExchangeRateService.ConvertToThbAsync(m_selectedCurrency, m_receivedAmount);
            if (conversion is null)
            {
                m_conversionError = $"No exchange rate configured for {m_selectedCurrency}";
                m_thbEquivalent = 0;
                m_changeAmount = 0;
                return;
            }

            m_conversionRate = conversion.RateUsed;
            m_thbEquivalent = conversion.ThbAmount;
        }

        // Calculate change (THB equivalent - amount due)
        var amountDue = m_selectedRental?.TotalAmount ?? 0;
        m_changeAmount = m_thbEquivalent - amountDue;
    }

    private void Cancel()
    {
        this.ModalService.Close(ModalResult.Cancel());
    }

    private async Task SaveAsync()
    {
        if (m_saving || m_selectedRental is null) return;
        if (!CanSave) return;

        try
        {
            m_saving = true;

            var type = m_paymentMethod switch
            {
                "Cash" => TillTransactionType.RentalPayment,
                "Card" => TillTransactionType.CardPayment,
                "PromptPay" => TillTransactionType.PromptPay,
                "BankTransfer" => TillTransactionType.BankTransfer,
                _ => TillTransactionType.RentalPayment
            };

            var description = $"Rental payment #{m_selectedRental.RentalId} - {m_selectedRental.VehicleName}";

            SubmitOperation result;

            if (m_paymentMethod == "Cash")
            {
                // Use RecordForeignCurrencyPaymentAsync for cash (handles both THB and foreign currencies)
                result = await TillService.RecordForeignCurrencyPaymentAsync(
                    SessionId,
                    type,
                    m_selectedCurrency,
                    m_receivedAmount,
                    description,
                    this.UserName,
                    rentalId: m_selectedRental.RentalId,
                    notes: m_notes);
            }
            else
            {
                // Non-cash payments always in THB
                result = await TillService.RecordCashInAsync(
                    SessionId,
                    type,
                    m_amount,
                    description,
                    this.UserName,
                    rentalId: m_selectedRental.RentalId,
                    notes: m_notes);
            }

            if (result.Success)
            {
                this.ModalService.Close(ModalResult.Ok(result));
            }
            else
            {
                this.ShowError(result.Message ?? Localizer["FailedToRecordPayment"]);
            }
        }
        catch (Exception ex)
        {
            this.Logger.LogError(ex, "Error recording rental payment");
            this.ShowError(Localizer["FailedToRecordPayment"]);
        }
        finally
        {
            m_saving = false;
        }
    }
}
