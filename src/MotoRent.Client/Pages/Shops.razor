@page "/shops"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Policy = "RequireTenantStaff")]
@inherits LocalizedComponentBase<Shops>
@inject ShopService ShopService

<MotoRentPageTitle>@Localizer["Shops"]</MotoRentPageTitle>

<TablerHeader Title="@Localizer["ShopLocations"]" PreTitle="@Localizer["Settings"]">
    <a href="/shops/create" class="btn btn-primary">
        <i class="ti ti-plus me-1"></i>
        @Localizer["AddShop"]
    </a>
</TablerHeader>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="@Localizer["SearchPlaceholder"]"
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select" @bind="m_activeFilter" @bind:after="LoadDataAsync">
                    <option value="">@Localizer["AllStatus"]</option>
                    <option value="true">@Localizer["Active"]</option>
                    <option value="false">@Localizer["Inactive"]</option>
                </select>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-success me-1">@Localizer["ActiveCount", m_activeCount]</span>
                <span class="badge bg-secondary">@Localizer["InactiveCount", m_inactiveCount]</span>
            </div>
        </div>
    </div>
</div>

<LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card">
    <div class="row row-cards">
        @foreach (var shop in m_shops)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card @(shop.IsActive ? "" : "card-inactive")">
                    <div class="card-header">
                        <div class="d-flex w-100 justify-content-between">
                            <div>
                                <h3 class="card-title mb-1">@shop.Name</h3>
                                <div class="text-secondary">@shop.Location</div>
                            </div>
                            <span class="badge @(shop.IsActive ? "bg-success" : "bg-secondary")">
                                @(shop.IsActive ? Localizer["Active"] : Localizer["Inactive"])
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="ti ti-map-pin text-secondary me-2"></i>
                            @shop.Address
                        </div>
                        <div class="mb-2">
                            <i class="ti ti-phone text-secondary me-2"></i>
                            @shop.Phone
                        </div>
                        @if (!string.IsNullOrEmpty(shop.Email))
                        {
                            <div>
                                <i class="ti ti-mail text-secondary me-2"></i>
                                @shop.Email
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-list">
                                <a href="/shops/@EncodeId(shop.ShopId)" class="btn btn-sm btn-outline-primary">
                                    @Localizer["Edit"]
                                </a>
                                <button type="button" class="btn btn-sm @(shop.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                        @onclick="@(() => ToggleActiveStatus(shop))">
                                    @(shop.IsActive ? Localizer["Deactivate"] : Localizer["Activate"])
                                </button>
                            </div>
                            <button type="button" class="btn btn-icon btn-ghost-danger"
                                    title="@Localizer["Delete"]"
                                    @onclick="@(() => ConfirmDelete(shop))">
                                <i class="ti ti-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</LoadingSkeleton>

@if (!m_loading && m_shops.Count == 0)
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="ti ti-building-store mb-3" style="font-size: 3rem; color: var(--tblr-secondary);"></i>
            <h3 class="text-secondary">@Localizer["NoShopsFound"]</h3>
            <p class="text-secondary">
                @if (string.IsNullOrEmpty(m_searchTerm) && string.IsNullOrEmpty(m_activeFilter))
                {
                    <span>@Localizer["AddShopHint"]</span>
                }
                else
                {
                    <span>@Localizer["AdjustFiltersHint"]</span>
                }
            </p>
        </div>
    </div>
}

<style>
    .card-inactive {
        opacity: 0.7;
    }
</style>

@code {
    private List<Shop> m_shops = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private string? m_activeFilter;
    private int m_activeCount;
    private int m_inactiveCount;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task OnSearchKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await LoadDataAsync();
        }
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            bool? activeFilter = string.IsNullOrEmpty(m_activeFilter) ? null : m_activeFilter == "true";
            var result = await ShopService.GetShopsAsync(m_searchTerm, activeFilter, 1, 100);
            m_shops = result.ItemCollection.ToList();

            // Calculate counts from total results
            var allResult = await ShopService.GetShopsAsync(null, null, 1, 1000);
            m_activeCount = allResult.ItemCollection.Count(s => s.IsActive);
            m_inactiveCount = allResult.ItemCollection.Count(s => !s.IsActive);
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["ErrorLoadingData", ex.Message]);
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private async Task ToggleActiveStatus(Shop shop)
    {
        var action = shop.IsActive ? Localizer["Deactivate"].Value : Localizer["Activate"].Value;
        if (!await this.DialogService.ConfirmYesNoAsync(
            Localizer["ConfirmAction", action, shop.Name ?? ""],
            Localizer["ConfirmTitle", action]))
            return;

        var result = await this.ShopService.SetActiveStatusAsync(shop.ShopId, !shop.IsActive, this.UserName);
        if (result.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess(Localizer["ActionSuccess", action]);
        }
        else
        {
            this.ShowError(Localizer["ActionFailed", action, result.Message ?? ""]);
        }
    }

    private async Task ConfirmDelete(Shop shop)
    {
        if (!await this.ConfirmDeleteAsync(shop.Name ?? Localizer["DefaultShopName"].Value))
            return;

        var deleteResult = await this.ShopService.DeleteShopAsync(shop, this.UserName);
        if (deleteResult.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess(Localizer["ShopDeleted"]);
        }
        else
        {
            this.ShowError(Localizer["DeleteFailed", deleteResult.Message ?? ""]);
        }
    }
}
