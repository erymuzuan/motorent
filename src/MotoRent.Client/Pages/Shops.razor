@page "/shop"
@inherits LocalizedComponentBase<Shops>
@inject ShopService ShopService

<MotoRentPageTitle>Shops</MotoRentPageTitle>

<TablerHeader Title="Shop Locations" PreTitle="Settings">
    <button type="button" class="btn btn-primary" @onclick="OpenAddDialog">
        <i class="ti ti-plus me-1"></i>
        Add Shop
    </button>
</TablerHeader>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-4">
                <div class="input-icon">
                    <span class="input-icon-addon">
                        <i class="ti ti-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search by name, location, address..."
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                </div>
            </div>
            <div class="col-md-2">
                <select class="form-select" @bind="m_activeFilter" @bind:after="LoadDataAsync">
                    <option value="">All Status</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
            <div class="col-md-6 text-end">
                <span class="badge bg-success me-1">Active: @m_activeCount</span>
                <span class="badge bg-secondary">Inactive: @m_inactiveCount</span>
            </div>
        </div>
    </div>
</div>

<LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Card">
    <div class="row row-cards">
        @foreach (var shop in m_shops)
        {
            <div class="col-sm-6 col-lg-4">
                <div class="card @(shop.IsActive ? "" : "card-inactive")">
                    <div class="card-header">
                        <div class="d-flex w-100 justify-content-between">
                            <div>
                                <h3 class="card-title mb-1">@shop.Name</h3>
                                <div class="text-secondary">@shop.Location</div>
                            </div>
                            <span class="badge @(shop.IsActive ? "bg-success" : "bg-secondary")">
                                @(shop.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <i class="ti ti-map-pin text-secondary me-2"></i>
                            @shop.Address
                        </div>
                        <div class="mb-2">
                            <i class="ti ti-phone text-secondary me-2"></i>
                            @shop.Phone
                        </div>
                        @if (!string.IsNullOrEmpty(shop.Email))
                        {
                            <div>
                                <i class="ti ti-mail text-secondary me-2"></i>
                                @shop.Email
                            </div>
                        }
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-list">
                                <button type="button" class="btn btn-sm btn-outline-primary"
                                        @onclick="@(() => OpenEditDialog(shop))">
                                    Edit
                                </button>
                                <button type="button" class="btn btn-sm @(shop.IsActive ? "btn-outline-warning" : "btn-outline-success")"
                                        @onclick="@(() => ToggleActiveStatus(shop))">
                                    @(shop.IsActive ? "Deactivate" : "Activate")
                                </button>
                            </div>
                            <button type="button" class="btn btn-icon btn-ghost-danger"
                                    @onclick="@(() => ConfirmDelete(shop))">
                                <i class="ti ti-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</LoadingSkeleton>

@if (!m_loading && m_shops.Count == 0)
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="ti ti-building-store mb-3" style="font-size: 3rem; color: var(--tblr-secondary);"></i>
            <h3 class="text-secondary">No shops found</h3>
            <p class="text-secondary">
                @if (string.IsNullOrEmpty(m_searchTerm) && string.IsNullOrEmpty(m_activeFilter))
                {
                    <span>Click "Add Shop" to create your first shop location.</span>
                }
                else
                {
                    <span>Try adjusting your search filters.</span>
                }
            </p>
        </div>
    </div>
}

<style>
    .card-inactive {
        opacity: 0.7;
    }
</style>

@code {
    private List<Shop> m_shops = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private string? m_activeFilter;
    private int m_activeCount;
    private int m_inactiveCount;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            bool? activeFilter = this.m_activeFilter switch
            {
                "true" => true,
                "false" => false,
                _ => null
            };

            var result = await this.ShopService.GetShopsAsync(
                this.m_searchTerm,
                activeFilter,
                page: 1,
                pageSize: 100);

            this.m_shops = result.ItemCollection;

            var allShops = await this.ShopService.GetShopsAsync(null, null, 1, 1000);
            this.m_activeCount = allShops.ItemCollection.Count(s => s.IsActive);
            this.m_inactiveCount = allShops.ItemCollection.Count(s => !s.IsActive);
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();
        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += async (_, _) =>
        {
            this.m_debounceTimer?.Stop();
            await this.InvokeAsync(async () =>
            {
                await this.LoadDataAsync();
                this.StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private async Task OpenAddDialog()
    {
        var shop = new Shop
        {
            IsActive = true
        };

        var result = await this.DialogService
            .Create<ShopDialog>("Add Shop")
            .WithParameter(x => x.Entity, shop)
            .WithParameter(x => x.IsNew, true)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Shop added successfully");
        }
    }

    private async Task OpenEditDialog(Shop shop)
    {
        var result = await this.DialogService
            .Create<ShopDialog>("Edit Shop")
            .WithParameter(x => x.Entity, shop.Clone())
            .WithParameter(x => x.IsNew, false)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Shop updated successfully");
        }
    }

    private async Task ToggleActiveStatus(Shop shop)
    {
        var action = shop.IsActive ? "deactivate" : "activate";
        if (!await this.DialogService.ConfirmYesNoAsync(
            $"Are you sure you want to {action} '{shop.Name}'?",
            $"Confirm {action}"))
            return;

        var result = await this.ShopService.SetActiveStatusAsync(shop.ShopId, !shop.IsActive, this.UserName);
        if (result.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess($"Shop {action}d successfully");
        }
        else
        {
            this.ShowError($"Failed to {action} shop: {result.Message}");
        }
    }

    private async Task ConfirmDelete(Shop shop)
    {
        if (!await this.ConfirmDeleteAsync(shop.Name ?? "this shop"))
            return;

        var deleteResult = await this.ShopService.DeleteShopAsync(shop, this.UserName);
        if (deleteResult.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Shop deleted successfully");
        }
        else
        {
            this.ShowError($"Delete failed: {deleteResult.Message}");
        }
    }

    public void Dispose()
    {
        this.m_debounceTimer?.Dispose();
    }
}
