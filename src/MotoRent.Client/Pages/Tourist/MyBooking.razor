@page "/tourist/{AccountNo}/booking"
@page "/tourist/{AccountNo}/booking/{BookingRef}"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@inherits TouristComponentBase
@using MotoRent.Domain.Entities
@using MotoRent.Services
@inject BookingService BookingService

<PageTitle>My Booking - @TenantName</PageTitle>

<div class="container-xl py-4">
    <div class="d-flex flex-column gap-4">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
            <div>
                <h2 class="mb-1">My Booking</h2>
                <p class="text-secondary mb-0">View and manage your reservation</p>
            </div>
            <a href="@BrowseUrl" class="btn btn-outline-primary">
                <i class="ti ti-motorbike me-1"></i>
                Browse Vehicles
            </a>
        </div>

        @if (m_booking == null)
        {
            @* Booking Lookup Form *@
            <div class="card">
                <div class="card-body p-4">
                    <div class="d-flex flex-column align-items-center gap-4">
                        <i class="ti ti-search text-primary fs-1"></i>
                        <h4>Find Your Booking</h4>
                        <p class="text-secondary text-center">
                            Enter your booking reference to view your reservation details
                        </p>

                        <div class="w-100" style="max-width: 400px;">
                            <div class="mb-4">
                                <label class="form-label">Booking Reference</label>
                                <input type="text" class="form-control form-control-lg text-center text-uppercase"
                                       @bind="m_searchRef"
                                       @bind:event="oninput"
                                       maxlength="6"
                                       placeholder="ABC123"
                                       style="letter-spacing: 4px; font-weight: bold;" />
                                <small class="text-secondary">6-character code from your confirmation</small>
                            </div>

                            <button type="button" class="btn btn-primary w-100"
                                    @onclick="SearchBooking"
                                    disabled="@(string.IsNullOrWhiteSpace(m_searchRef) || m_searchRef.Length < 6)">
                                @if (m_searching)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                Find My Booking
                            </button>

                            @if (!string.IsNullOrEmpty(m_errorMessage))
                            {
                                <div class="alert alert-warning mt-3 mb-0">
                                    <i class="ti ti-alert-triangle me-2"></i>
                                    @m_errorMessage
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            @* Booking Details *@
            <div class="d-flex justify-content-between align-items-center">
                <span>Booking: <strong class="text-uppercase">@m_booking.BookingRef</strong></span>
                <button type="button" class="btn btn-ghost-secondary" @onclick="ResetSearch">
                    <i class="ti ti-search me-1"></i>
                    Search Different Booking
                </button>
            </div>

            @* Status Banner *@
            <div class="alert @GetStatusAlertClass(m_booking.Status) mb-0">
                <div class="d-flex align-items-center gap-3">
                    <i class="ti @GetStatusIcon(m_booking.Status) fs-2"></i>
                    <div>
                        <div class="fw-bold">@GetStatusTitle(m_booking.Status)</div>
                        <div class="small">@GetStatusDescription(m_booking.Status)</div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                @* Main Info *@
                <div class="col-12 col-lg-8">
                    @* Booking Summary Card *@
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="ti ti-calendar-event me-2"></i>Booking Details
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="text-secondary small">Pickup Date</div>
                                    <div class="fw-bold">@FormatDate(m_booking.StartDate.DateTime)</div>
                                    @if (m_booking.PickupTime.HasValue)
                                    {
                                        <div class="small text-secondary">@m_booking.PickupTime.Value.ToString(@"hh\:mm")</div>
                                    }
                                </div>
                                <div class="col-6">
                                    <div class="text-secondary small">Return Date</div>
                                    <div class="fw-bold">@FormatDate(m_booking.EndDate.DateTime)</div>
                                </div>
                                <div class="col-6">
                                    <div class="text-secondary small">Duration</div>
                                    <div class="fw-bold">@GetDuration(m_booking.StartDate, m_booking.EndDate) days</div>
                                </div>
                                <div class="col-6">
                                    <div class="text-secondary small">Vehicles</div>
                                    <div class="fw-bold">@m_booking.Items.Count @(m_booking.Items.Count == 1 ? "vehicle" : "vehicles")</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Vehicles Card *@
                    <div class="card mt-3">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="ti ti-motorbike me-2"></i>Reserved Vehicles
                            </h4>
                        </div>
                        <div class="card-body p-0">
                            <div class="list-group list-group-flush">
                                @foreach (var item in m_booking.Items)
                                {
                                    <div class="list-group-item">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <div class="fw-bold">@item.VehicleDisplayName</div>
                                                @if (!string.IsNullOrEmpty(item.PreferredColor))
                                                {
                                                    <small class="text-secondary">Color: @item.PreferredColor</small>
                                                }
                                                @if (!string.IsNullOrEmpty(item.InsuranceName))
                                                {
                                                    <small class="text-secondary d-block">
                                                        <i class="ti ti-shield-check me-1"></i>@item.InsuranceName
                                                    </small>
                                                }
                                            </div>
                                            <div class="text-end">
                                                <div class="fw-bold text-primary">@FormatCurrency(item.ItemTotal)</div>
                                                <small class="text-secondary">@FormatCurrency(item.DailyRate)/day</small>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    @* Customer Info Card *@
                    <div class="card mt-3">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="ti ti-user me-2"></i>Contact Information
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <div class="text-secondary small">Name</div>
                                    <div class="fw-bold">@m_booking.CustomerName</div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="text-secondary small">Phone</div>
                                    <div class="fw-bold">@m_booking.CustomerPhone</div>
                                </div>
                                @if (!string.IsNullOrEmpty(m_booking.CustomerEmail))
                                {
                                    <div class="col-12">
                                        <div class="text-secondary small">Email</div>
                                        <div class="fw-bold">@m_booking.CustomerEmail</div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(m_booking.HotelName))
                                {
                                    <div class="col-12">
                                        <div class="text-secondary small">Hotel</div>
                                        <div>@m_booking.HotelName</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @* Sidebar *@
                <div class="col-12 col-lg-4">
                    @* Payment Summary *@
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title mb-0">
                                <i class="ti ti-currency-baht me-2"></i>Payment Summary
                            </h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex flex-column gap-2">
                                <div class="d-flex justify-content-between">
                                    <span class="text-secondary">Total Amount</span>
                                    <span class="fw-bold">@FormatCurrency(m_booking.TotalAmount)</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-secondary">Deposit Required</span>
                                    <span>@FormatCurrency(m_booking.DepositRequired)</span>
                                </div>
                                <hr class="my-1" />
                                <div class="d-flex justify-content-between">
                                    <span class="text-secondary">Amount Paid</span>
                                    <span class="text-success fw-bold">@FormatCurrency(m_booking.AmountPaid)</span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span class="text-secondary">Balance Due</span>
                                    <span class="@(GetBalanceDue() > 0 ? "text-danger" : "text-success") fw-bold">
                                        @FormatCurrency(GetBalanceDue())
                                    </span>
                                </div>
                            </div>

                            @if (GetBalanceDue() > 0 && m_booking.Status != BookingStatus.Cancelled)
                            {
                                <div class="alert alert-info mt-3 mb-0 small">
                                    <i class="ti ti-info-circle me-1"></i>
                                    Please pay the remaining balance at pickup.
                                </div>
                            }
                        </div>
                    </div>

                    @* Actions Card *@
                    @if (m_booking.Status == BookingStatus.Pending || m_booking.Status == BookingStatus.Confirmed)
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h4 class="card-title mb-0">Actions</h4>
                            </div>
                            <div class="card-body d-grid gap-2">
                                @if (m_booking.Status == BookingStatus.Pending || m_booking.Status == BookingStatus.Confirmed)
                                {
                                    <button type="button" class="btn btn-outline-danger"
                                            @onclick="CancelBooking"
                                            disabled="@m_cancelling">
                                        @if (m_cancelling)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                        }
                                        <i class="ti ti-x me-1"></i>
                                        Cancel Booking
                                    </button>
                                }
                            </div>
                        </div>
                    }

                    @* Shop Info *@
                    @if (!string.IsNullOrEmpty(m_booking.PreferredShopName))
                    {
                        <div class="card mt-3">
                            <div class="card-header">
                                <h4 class="card-title mb-0">
                                    <i class="ti ti-building-store me-2"></i>Pickup Location
                                </h4>
                            </div>
                            <div class="card-body">
                                <div class="fw-bold">@m_booking.PreferredShopName</div>
                                <small class="text-secondary">
                                    Show your booking reference (@m_booking.BookingRef) to staff
                                </small>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @* Help Section *@
        <div class="card bg-light mt-4">
            <div class="card-body p-4">
                <h4 class="mb-3">Need Help?</h4>
                <div class="row g-3">
                    <div class="col-12 col-md-4">
                        <div class="d-flex align-items-center gap-2">
                            <i class="ti ti-phone text-primary fs-4"></i>
                            <div>
                                <div class="fw-bold">Call Us</div>
                                <div class="text-secondary small">+66 76 123 4567</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="d-flex align-items-center gap-2">
                            <i class="ti ti-brand-line text-success fs-4"></i>
                            <div>
                                <div class="fw-bold">Line</div>
                                <div class="text-secondary small">@@motorent</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-md-4">
                        <div class="d-flex align-items-center gap-2">
                            <i class="ti ti-mail text-info fs-4"></i>
                            <div>
                                <div class="fw-bold">Email</div>
                                <div class="text-secondary small">support@motorent.com</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public new string AccountNo { get; set; } = "";
    [Parameter] public string? BookingRef { get; set; }

    private Booking? m_booking;
    private string m_searchRef = "";
    private string? m_errorMessage;
    private bool m_searching;
    private bool m_cancelling;

    protected override async Task OnParametersSetAsync()
    {
        // If BookingRef is provided in URL, auto-search
        if (!string.IsNullOrWhiteSpace(BookingRef))
        {
            m_searchRef = BookingRef;
            await SearchBooking();
        }
    }

    private async Task SearchBooking()
    {
        if (string.IsNullOrWhiteSpace(m_searchRef) || m_searchRef.Length < 6)
            return;

        m_searching = true;
        m_errorMessage = null;

        try
        {
            m_booking = await BookingService.GetBookingByRefAsync(m_searchRef.ToUpperInvariant());

            if (m_booking == null)
            {
                m_errorMessage = "Booking not found. Please check your reference code and try again.";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error searching booking");
            m_errorMessage = "An error occurred while searching. Please try again.";
        }
        finally
        {
            m_searching = false;
        }
    }

    private void ResetSearch()
    {
        m_booking = null;
        m_searchRef = "";
        m_errorMessage = null;
    }

    private async Task CancelBooking()
    {
        if (m_booking == null) return;

        var confirmed = await DialogService.ConfirmYesNoAsync(
            "Are you sure you want to cancel this booking? This action cannot be undone.",
            "Cancel Booking");

        if (!confirmed) return;

        m_cancelling = true;
        try
        {
            var result = await BookingService.CancelBookingAsync(
                m_booking.BookingId,
                "Cancelled by customer via portal",
                "tourist");

            if (result.Success)
            {
                ShowSuccess("Booking cancelled successfully");
                await SearchBooking(); // Refresh
            }
            else
            {
                ShowError(result.Error ?? "Failed to cancel booking");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error cancelling booking");
            ShowError("An error occurred while cancelling. Please try again.");
        }
        finally
        {
            m_cancelling = false;
        }
    }

    private decimal GetBalanceDue()
    {
        if (m_booking == null) return 0;
        return m_booking.TotalAmount - m_booking.AmountPaid;
    }

    private int GetDuration(DateTimeOffset start, DateTimeOffset end)
    {
        return (int)Math.Ceiling((end - start).TotalDays);
    }

    private static string GetStatusAlertClass(string? status) => status switch
    {
        BookingStatus.Pending => "alert-warning",
        BookingStatus.Confirmed => "alert-success",
        BookingStatus.CheckedIn => "alert-info",
        BookingStatus.Completed => "alert-secondary",
        BookingStatus.Cancelled => "alert-danger",
        _ => "alert-secondary"
    };

    private static string GetStatusIcon(string? status) => status switch
    {
        BookingStatus.Pending => "ti-clock",
        BookingStatus.Confirmed => "ti-check",
        BookingStatus.CheckedIn => "ti-car",
        BookingStatus.Completed => "ti-circle-check",
        BookingStatus.Cancelled => "ti-x",
        _ => "ti-help"
    };

    private static string GetStatusTitle(string? status) => status switch
    {
        BookingStatus.Pending => "Booking Pending",
        BookingStatus.Confirmed => "Booking Confirmed",
        BookingStatus.CheckedIn => "Checked In",
        BookingStatus.Completed => "Rental Completed",
        BookingStatus.Cancelled => "Booking Cancelled",
        _ => "Unknown Status"
    };

    private static string GetStatusDescription(string? status) => status switch
    {
        BookingStatus.Pending => "Your booking is awaiting confirmation. You'll receive a notification once it's confirmed.",
        BookingStatus.Confirmed => "Your booking is confirmed! Please arrive at the shop at your scheduled pickup time.",
        BookingStatus.CheckedIn => "You're currently renting. Have a great ride!",
        BookingStatus.Completed => "Thank you for renting with us! We hope to see you again.",
        BookingStatus.Cancelled => "This booking has been cancelled.",
        _ => ""
    };
}
