@page "/tourist/{AccountNo}/my-rental/{RentalWebId}"
@page "/r/{RentalWebId}"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@inherits TouristComponentBase
@using MotoRent.Domain.Entities
@using MotoRent.Domain.Tourist
@using MotoRent.Services
@using MotoRent.Client.Components.Tourist
@using MotoRent.Client.Services.Offline
@inject RentalService RentalService
@inject ShopService ShopService
@inject IndexedDbService OfflineDb
@inject NetworkStateService NetworkState
@inject IJSRuntime JS

<PageTitle>My Rental - @TenantName</PageTitle>

@if (m_loading)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="text-center">
            <div class="spinner-border text-primary mb-3" role="status" style="width: 3rem; height: 3rem;"></div>
            <p class="text-secondary">Loading your rental...</p>
        </div>
    </div>
}
else if (m_rental == null)
{
    <div class="container-xl py-5">
        <div class="card">
            <div class="card-body py-5 text-center">
                <i class="ti ti-file-x fs-1 text-danger mb-3"></i>
                <h3>Rental Not Found</h3>
                <p class="text-secondary mb-4">
                    We couldn't find a rental with this reference. Please check your QR code or contact the shop.
                </p>
                @if (!string.IsNullOrEmpty(TenantAccountNo))
                {
                    <a href="@BrowseUrl" class="btn btn-primary">
                        <i class="ti ti-motorbike me-1"></i>
                        Browse Vehicles
                    </a>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="container-xl py-4">
        <div class="row g-4">
            @* Main Content Column *@
            <div class="col-12 col-lg-8">
                @* Rental Status Banner *@
                <div class="card mb-4 border-0 @GetStatusCardClass()">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3">
                            <div class="status-icon-circle @GetStatusIconClass()">
                                <i class="ti @GetStatusIcon()"></i>
                            </div>
                            <div class="flex-fill">
                                <div class="d-flex align-items-center gap-2 mb-1">
                                    <h4 class="mb-0">@GetStatusTitle()</h4>
                                    <span class="badge @GetStatusBadgeClass()">@m_rental.Status</span>
                                </div>
                                <p class="mb-0 opacity-75">@GetStatusDescription()</p>
                            </div>
                        </div>
                    </div>
                </div>

                @* Vehicle Info Card *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="ti ti-motorbike me-2"></i>
                            Your Vehicle
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-12 col-md-5">
                                <div class="vehicle-image-container">
                                    <img src="@GetVehicleImageUrl()" alt="@m_rental.VehicleName" class="vehicle-image" />
                                </div>
                            </div>
                            <div class="col-12 col-md-7">
                                <h4 class="mb-2">@m_rental.VehicleName</h4>
                                @if (!string.IsNullOrEmpty(m_vehicleLicensePlate))
                                {
                                    <div class="license-plate mb-3">
                                        <span>@m_vehicleLicensePlate</span>
                                    </div>
                                }

                                <div class="d-flex flex-column gap-2">
                                    <div class="info-row">
                                        <i class="ti ti-calendar text-muted"></i>
                                        <span class="label">Pickup</span>
                                        <span class="value">@FormatDateTime(m_rental.StartDate)</span>
                                    </div>
                                    <div class="info-row">
                                        <i class="ti ti-calendar-due text-muted"></i>
                                        <span class="label">Return</span>
                                        <span class="value">@FormatDateTime(m_rental.ExpectedEndDate)</span>
                                    </div>
                                    @if (m_rental.MileageStart > 0)
                                    {
                                        <div class="info-row">
                                            <i class="ti ti-dashboard text-muted"></i>
                                            <span class="label">Start Mileage</span>
                                            <span class="value">@m_rental.MileageStart.ToString("N0") km</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                @* Rental Details Card *@
                <div class="card mb-4">
                    <div class="card-header">
                        <h3 class="card-title mb-0">
                            <i class="ti ti-receipt me-2"></i>
                            Rental Details
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="pricing-breakdown">
                            <div class="pricing-row">
                                <span>Rental Reference</span>
                                <strong>#@m_rental.RentalId</strong>
                            </div>
                            <div class="pricing-row">
                                <span>Duration</span>
                                <span>@GetDurationText()</span>
                            </div>
                            <div class="pricing-row">
                                <span>@GetRateLabel()</span>
                                <span>@FormatCurrency(m_rental.RentalRate)</span>
                            </div>
                            @if (m_rental.IncludeDriver)
                            {
                                <div class="pricing-row">
                                    <span>Driver</span>
                                    <span>@FormatCurrency(m_rental.DriverFee)</span>
                                </div>
                            }
                            @if (m_rental.IncludeGuide)
                            {
                                <div class="pricing-row">
                                    <span>Guide</span>
                                    <span>@FormatCurrency(m_rental.GuideFee)</span>
                                </div>
                            }
                            <hr />
                            <div class="pricing-row total">
                                <span>Total Amount</span>
                                <strong>@FormatCurrency(m_rental.TotalAmount)</strong>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(m_rental.Notes))
                        {
                            <div class="mt-3 p-3 bg-light rounded">
                                <small class="text-secondary">
                                    <i class="ti ti-note me-1"></i>
                                    @m_rental.Notes
                                </small>
                            </div>
                        }
                    </div>
                </div>

                @* Quick Actions *@
                @if (m_rental.Status is "Active" or "Reserved")
                {
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="card-title mb-0">
                                <i class="ti ti-bolt me-2"></i>
                                Quick Actions
                            </h3>
                        </div>
                        <div class="card-body">
                            <div class="row g-3">
                                <div class="col-6 col-md-3">
                                    <button type="button" class="action-card" @onclick="ExtendRental">
                                        <i class="ti ti-calendar-plus text-primary"></i>
                                        <span>Extend</span>
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="button" class="action-card" @onclick="ViewContract">
                                        <i class="ti ti-file-text text-info"></i>
                                        <span>Contract</span>
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="button" class="action-card" @onclick="ReportAccident">
                                        <i class="ti ti-alert-triangle text-warning"></i>
                                        <span>Report Issue</span>
                                    </button>
                                </div>
                                <div class="col-6 col-md-3">
                                    <button type="button" class="action-card emergency" @onclick="ShowEmergencyCard">
                                        <i class="ti ti-first-aid-kit text-danger"></i>
                                        <span>Emergency</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @* Important Reminders *@
                <div class="card mb-4 border-warning">
                    <div class="card-header bg-warning-lt">
                        <h3 class="card-title mb-0 text-warning">
                            <i class="ti ti-alert-circle me-2"></i>
                            Important Reminders
                        </h3>
                    </div>
                    <div class="card-body">
                        <ul class="mb-0 ps-3">
                            <li class="mb-2">Always wear a helmet while riding</li>
                            <li class="mb-2">Return the vehicle with the same fuel level</li>
                            <li class="mb-2">Report any damage or issues immediately</li>
                            <li class="mb-2">Keep this page bookmarked for quick access</li>
                            @if (m_rental.Status == "Active")
                            {
                                <li class="mb-0">
                                    <strong>Return by @FormatDateTime(m_rental.ExpectedEndDate)</strong> to avoid late fees
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            @* Sidebar Column *@
            <div class="col-12 col-lg-4">
                @* Shop Contact Card *@
                @if (m_shopContactInfo != null)
                {
                    <ShopContactCard ContactInfo="@m_shopContactInfo" Class="mb-4" />
                }

                @* Download for Offline Use *@
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="d-flex align-items-start gap-3">
                            <div class="offline-icon @(m_isDownloaded ? "downloaded" : "")">
                                <i class="ti @(m_isDownloaded ? "ti-cloud-check" : "ti-cloud-download")"></i>
                            </div>
                            <div class="flex-fill">
                                <h5 class="mb-1">@(m_isDownloaded ? "Saved Offline" : "Save for Offline")</h5>
                                @if (m_isDownloaded)
                                {
                                    <p class="text-success small mb-2">
                                        <i class="ti ti-check me-1"></i>
                                        Available offline
                                    </p>
                                    <small class="text-secondary d-block mb-3">
                                        Last synced: @FormatLastSync()
                                    </small>
                                    <button type="button" class="btn btn-outline-primary btn-sm w-100" @onclick="RefreshOfflineData" disabled="@m_downloading">
                                        @if (m_downloading)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            <span>Syncing...</span>
                                        }
                                        else
                                        {
                                            <i class="ti ti-refresh me-1"></i>
                                            <span>Sync Latest</span>
                                        }
                                    </button>
                                }
                                else
                                {
                                    <p class="text-secondary small mb-3">
                                        Download this rental info to access it even without internet.
                                    </p>
                                    <button type="button" class="btn btn-primary btn-sm w-100" @onclick="DownloadForOffline" disabled="@m_downloading">
                                        @if (m_downloading)
                                        {
                                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                                            <span>Downloading...</span>
                                        }
                                        else
                                        {
                                            <i class="ti ti-download me-1"></i>
                                            <span>Download Now</span>
                                        }
                                    </button>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @* QR Code for Staff *@
                @if (m_rental.Status is "Active" or "Reserved")
                {
                    <div class="card">
                        <div class="card-body text-center">
                            <p class="text-secondary small mb-3">Show this to staff at pickup/return</p>
                            <div class="qr-code-container mb-2">
                                <img src="@GetQRCodeUrl()" alt="QR Code" class="qr-code-image" />
                            </div>
                            <small class="text-secondary">Rental #@m_rental.RentalId</small>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    @* Floating Shop Contact Button *@
    @if (m_shopContactInfo != null)
    {
        <ShopContactFAB ContactInfo="@m_shopContactInfo" />
    }
}

