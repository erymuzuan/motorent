@code {
    [Parameter] public new string AccountNo { get; set; } = "";
    [Parameter] public string RentalWebId { get; set; } = "";

    private bool m_loading = true;
    private bool m_downloading;
    private bool m_isDownloaded;
    private DateTimeOffset? m_lastSyncAt;
    private Rental? m_rental;
    private Shop? m_shop;
    private ShopContactInfo? m_shopContactInfo;
    private string? m_vehicleLicensePlate;

    protected override async Task OnParametersSetAsync()
    {
        await LoadRentalAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Check if rental is already saved offline
            await CheckOfflineStatusAsync();
        }
    }

    private async Task CheckOfflineStatusAsync()
    {
        try
        {
            await OfflineDb.InitializeAsync();
            var offlineRental = await OfflineDb.GetRentalByWebIdAsync(RentalWebId);
            if (offlineRental != null)
            {
                m_isDownloaded = true;
                if (DateTimeOffset.TryParse(offlineRental.LastSyncAt, out var lastSync))
                {
                    m_lastSyncAt = lastSync;
                }
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[MyRental] Error checking offline status: {ex.Message}");
        }
    }

    private async Task LoadRentalAsync()
    {
        m_loading = true;
        StateHasChanged();

        try
        {
            // First try to load by WebId (string)
            m_rental = await RentalService.GetRentalByWebIdAsync(RentalWebId);

            // If not found by WebId, try as RentalId
            if (m_rental == null && int.TryParse(RentalWebId, out var rentalId))
            {
                m_rental = await RentalService.GetRentalAsync(rentalId);
            }

            if (m_rental != null)
            {
                // Load shop info for contact card
                m_shop = await ShopService.GetShopByIdAsync(m_rental.RentedFromShopId);
                if (m_shop != null)
                {
                    m_shopContactInfo = ShopContactInfo.FromShop(
                        m_shop,
                        renterName: m_rental.RenterName,
                        rentalReference: m_rental.RentalId.ToString(),
                        vehicleInfo: $"{m_rental.VehicleName} ({m_vehicleLicensePlate})"
                    );
                }

                // Load vehicle license plate
                var vehicle = await RentalService.GetVehicleForRentalAsync(m_rental.VehicleId);
                if (vehicle != null)
                {
                    m_vehicleLicensePlate = vehicle.LicensePlate;
                }
            }
        }
        catch (Exception ex)
        {
            ShowError($"Error loading rental: {ex.Message}");
        }
        finally
        {
            m_loading = false;
        }
    }

    private string GetStatusCardClass() => m_rental?.Status switch
    {
        "Active" => "bg-success-subtle",
        "Reserved" => "bg-info-subtle",
        "Completed" => "bg-secondary-subtle",
        _ => ""
    };

    private string GetStatusIconClass() => m_rental?.Status switch
    {
        "Active" => "active",
        "Reserved" => "reserved",
        "Completed" => "completed",
        _ => ""
    };

    private string GetStatusIcon() => m_rental?.Status switch
    {
        "Active" => "ti-steering-wheel",
        "Reserved" => "ti-calendar-check",
        "Completed" => "ti-circle-check",
        "Cancelled" => "ti-x",
        _ => "ti-info-circle"
    };

    private string GetStatusTitle() => m_rental?.Status switch
    {
        "Active" => "Rental Active",
        "Reserved" => "Reservation Confirmed",
        "Completed" => "Rental Completed",
        "Cancelled" => "Rental Cancelled",
        _ => "Unknown Status"
    };

    private string GetStatusDescription() => m_rental?.Status switch
    {
        "Active" => $"Enjoy your ride! Return by {FormatDateTime(m_rental!.ExpectedEndDate)}",
        "Reserved" => $"Pick up on {FormatDateTime(m_rental!.StartDate)}",
        "Completed" => "Thank you for renting with us!",
        "Cancelled" => "This rental has been cancelled.",
        _ => ""
    };

    private string GetStatusBadgeClass() => m_rental?.Status switch
    {
        "Active" => "bg-success",
        "Reserved" => "bg-info",
        "Completed" => "bg-secondary",
        "Cancelled" => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetVehicleImageUrl()
    {
        // Return placeholder based on vehicle type
        return "https://placehold.co/400x300/00897B/white?text=Your+Vehicle";
    }

    private string FormatDateTime(DateTimeOffset date)
    {
        return date.ToString("ddd, MMM d 'at' h:mm tt");
    }

    private string GetDurationText()
    {
        if (m_rental == null) return "";

        var days = (m_rental.ExpectedEndDate - m_rental.StartDate).Days;
        if (days == 0) days = 1;

        return m_rental.DurationType == RentalDurationType.Daily
            ? $"{days} day{(days > 1 ? "s" : "")}"
            : $"{m_rental.IntervalMinutes} minutes";
    }

    private string GetRateLabel()
    {
        return m_rental?.DurationType == RentalDurationType.Daily
            ? "Daily Rate"
            : $"{m_rental?.IntervalMinutes}-min Rate";
    }

    private string GetQRCodeUrl()
    {
        var qrData = $"MOTORENT-{m_rental?.RentalId}-{m_rental?.WebId}";
        return $"https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={Uri.EscapeDataString(qrData)}";
    }

    private async Task ExtendRental()
    {
        if (m_shopContactInfo != null && !string.IsNullOrEmpty(m_shopContactInfo.WhatsAppUrl))
        {
            await JS.InvokeVoidAsync("open", m_shopContactInfo.WhatsAppUrl, "_blank");
        }
        else if (m_shopContactInfo != null && !string.IsNullOrEmpty(m_shopContactInfo.PhoneUrl))
        {
            await JS.InvokeVoidAsync("open", m_shopContactInfo.PhoneUrl, "_self");
        }
        else
        {
            ShowInfo("Please contact the shop to extend your rental.");
        }
    }

    private void ViewContract()
    {
        if (m_rental != null)
        {
            NavigateToTenant($"my-rental/{RentalWebId}/contract");
        }
    }

    private void ReportAccident()
    {
        if (m_rental != null)
        {
            NavigateToTenant($"my-rental/{RentalWebId}/accident-report");
        }
    }

    private async Task ShowEmergencyCard()
    {
        // For now, show a simple dialog with emergency contacts
        var message = "Emergency Contacts:\n\n" +
                      "Tourist Police: 1155\n" +
                      "Ambulance: 1669\n" +
                      "Police: 191\n\n";

        if (m_shop != null)
        {
            message += $"Shop: {m_shop.Phone}";
        }

        await DialogService.ShowMessageAsync(message, "Emergency Contacts");
    }

    private async Task DownloadForOffline()
    {
        if (m_rental == null) return;

        m_downloading = true;
        StateHasChanged();

        try
        {
            await OfflineDb.InitializeAsync();

            // Create the offline rental package
            var offlinePackage = new OfflineRentalPackage
            {
                RentalId = m_rental.RentalId,
                WebId = m_rental.WebId.ToString(),
                AccountNo = TenantAccountNo ?? "",
                Status = m_rental.Status,
                StartDate = m_rental.StartDate,
                ExpectedEndDate = m_rental.ExpectedEndDate,
                RentalRate = m_rental.RentalRate,
                TotalAmount = m_rental.TotalAmount,
                Vehicle = new OfflineVehicleInfo
                {
                    VehicleId = m_rental.VehicleId,
                    Brand = m_rental.VehicleName?.Split(' ').FirstOrDefault() ?? "",
                    Model = m_rental.VehicleName ?? "",
                    LicensePlate = m_vehicleLicensePlate ?? "",
                    ImageUrl = GetVehicleImageUrl()
                },
                Renter = new OfflineRenterInfo
                {
                    RenterId = m_rental.RenterId,
                    FullName = m_rental.RenterName ?? ""
                }
            };

            // Add shop info if available
            if (m_shop != null && m_shopContactInfo != null)
            {
                offlinePackage.Shop = new OfflineShopInfo
                {
                    ShopId = m_shop.ShopId,
                    Name = m_shop.Name,
                    Phone = m_shop.Phone,
                    Address = m_shop.Address,
                    Latitude = m_shop.GpsLocation?.Lat ?? 0,
                    Longitude = m_shop.GpsLocation?.Lng ?? 0,
                    WhatsAppUrl = m_shopContactInfo.WhatsAppUrl,
                    LineUrl = m_shopContactInfo.LineUrl,
                    GoogleMapsUrl = m_shopContactInfo.GoogleMapsUrl,
                    Hours = m_shopContactInfo.Hours,
                    IsCurrentlyOpen = m_shopContactInfo.IsCurrentlyOpen
                };
            }

            // Add emergency contacts
            offlinePackage.EmergencyContacts.Add(new OfflineEmergencyContact
            {
                Id = "tourist-police",
                Type = "police",
                Name = "Tourist Police",
                Phone = "1155",
                Priority = 1
            });
            offlinePackage.EmergencyContacts.Add(new OfflineEmergencyContact
            {
                Id = "ambulance",
                Type = "medical",
                Name = "Ambulance",
                Phone = "1669",
                Priority = 2
            });
            offlinePackage.EmergencyContacts.Add(new OfflineEmergencyContact
            {
                Id = "police",
                Type = "police",
                Name = "Police",
                Phone = "191",
                Priority = 3
            });
            if (m_shop != null && !string.IsNullOrEmpty(m_shop.Phone))
            {
                offlinePackage.EmergencyContacts.Add(new OfflineEmergencyContact
                {
                    Id = "shop",
                    Type = "shop",
                    Name = m_shop.Name,
                    Phone = m_shop.Phone,
                    Priority = 4
                });
            }

            // Save to IndexedDB
            await OfflineDb.SaveRentalPackageAsync(offlinePackage);

            m_isDownloaded = true;
            m_lastSyncAt = DateTimeOffset.Now;
            ShowSuccess("Rental saved for offline use!");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[MyRental] Error downloading for offline: {ex.Message}");
            ShowError("Failed to save for offline. Please try again.");
        }
        finally
        {
            m_downloading = false;
            StateHasChanged();
        }
    }

    private async Task RefreshOfflineData()
    {
        await DownloadForOffline();
    }

    private string FormatLastSync()
    {
        if (!m_lastSyncAt.HasValue) return "Unknown";

        var diff = DateTimeOffset.Now - m_lastSyncAt.Value;

        if (diff.TotalMinutes < 1) return "Just now";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} min ago";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} hours ago";

        return m_lastSyncAt.Value.ToString("MMM d, h:mm tt");
    }
