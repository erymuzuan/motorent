@page "/insurance"
@inherits LocalizedComponentBase<InsurancePackages>
@using InsuranceEntity = MotoRent.Domain.Entities.Insurance
@inject InsuranceService InsuranceService

<MotoRentPageTitle>Insurance Packages</MotoRentPageTitle>

<TablerHeader Title="Insurance Packages" PreTitle="Settings">
    <button type="button" class="btn btn-primary" @onclick="OpenAddDialog">
        <i class="ti ti-plus me-1"></i>
        Add Package
    </button>
</TablerHeader>

<div class="card mb-3">
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-md-6">
                <span class="text-secondary">Status Overview:</span>
            </div>
            <div class="col-md-6 text-end">
                @if (m_activeCounts.TryGetValue(true, out var activeCount))
                {
                    <span class="badge bg-success me-1">Active: @activeCount</span>
                }
                @if (m_activeCounts.TryGetValue(false, out var inactiveCount))
                {
                    <span class="badge bg-secondary">Inactive: @inactiveCount</span>
                }
            </div>
        </div>
    </div>
</div>

<LoadingSkeleton Loading="@m_loading" Mode="LoadingSkeleton.PlaceholderMode.Table" Rows="6" Columns="7">
    <div class="card">
        <div class="table-responsive">
            <table class="table table-vcenter card-table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Package Name</th>
                        <th>Description</th>
                        <th>Daily Rate</th>
                        <th>Max Coverage</th>
                        <th>Deductible</th>
                        <th>Status</th>
                        <th class="w-1">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (m_insurances.Count == 0)
                    {
                        <tr>
                            <td colspan="7" class="text-center text-secondary py-4">
                                <i class="ti ti-shield-check mb-2" style="font-size: 2rem;"></i>
                                <div>No insurance packages found</div>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var insurance in m_insurances)
                        {
                            <tr class="cursor-pointer" @onclick="@(() => OpenEditDialog(insurance))">
                                <td>
                                    <strong>@insurance.Name</strong>
                                </td>
                                <td>
                                    <span class="text-secondary text-truncate" style="max-width: 200px; display: inline-block;">
                                        @insurance.Description
                                    </span>
                                </td>
                                <td class="text-primary fw-bold">
                                    @FormatCurrency(insurance.DailyRate)
                                </td>
                                <td>@FormatCurrency(insurance.MaxCoverage)</td>
                                <td>@FormatCurrency(insurance.Deductible)</td>
                                <td @onclick:stopPropagation="true">
                                    <label class="form-check form-switch">
                                        <input type="checkbox" class="form-check-input" checked="@insurance.IsActive"
                                               @onchange="@(() => ToggleActiveAsync(insurance))" />
                                    </label>
                                </td>
                                <td @onclick:stopPropagation="true">
                                    <div class="btn-list flex-nowrap">
                                        <button type="button" class="btn btn-icon btn-ghost-primary"
                                                title="Edit" @onclick="@(() => OpenEditDialog(insurance))">
                                            <i class="ti ti-edit"></i>
                                        </button>
                                        <button type="button" class="btn btn-icon btn-ghost-danger"
                                                title="Delete" @onclick="@(() => ConfirmDelete(insurance))">
                                            <i class="ti ti-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        @if (m_insurances.Count > 0)
        {
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-secondary">
                    Showing <strong>@m_insurances.Count</strong> insurance packages
                </p>
            </div>
        }
    </div>
</LoadingSkeleton>

@code {
    private List<InsuranceEntity> m_insurances = [];
    private Dictionary<bool, int> m_activeCounts = new();
    private bool m_loading = true;

    protected override async Task OnInitializedAsync()
    {
        await this.LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            var result = await this.InsuranceService.GetInsurancesAsync(this.ShopId, page: 1, pageSize: 100);
            this.m_insurances = result.ItemCollection;
            this.m_activeCounts = await this.InsuranceService.GetActiveCountsAsync(this.ShopId);
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private async Task OpenAddDialog()
    {
        var insurance = new InsuranceEntity
        {
            ShopId = this.ShopId,
            IsActive = true
        };

        var result = await this.DialogService
            .Create<InsuranceDialog>("Add Insurance Package")
            .WithParameter(x => x.Entity, insurance)
            .WithParameter(x => x.IsNew, true)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Insurance package added successfully");
        }
    }

    private async Task OpenEditDialog(InsuranceEntity insurance)
    {
        var result = await this.DialogService
            .Create<InsuranceDialog>("Edit Insurance Package")
            .WithParameter(x => x.Entity, insurance.Clone())
            .WithParameter(x => x.IsNew, false)
            .Large()
            .ShowDialogAsync();

        if (!result.Cancelled)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Insurance package updated successfully");
        }
    }

    private async Task ConfirmDelete(InsuranceEntity insurance)
    {
        if (!await this.ConfirmDeleteAsync(insurance.Name ?? "this insurance package"))
            return;

        var deleteResult = await this.InsuranceService.DeleteInsuranceAsync(insurance, this.UserName);
        if (deleteResult.Success)
        {
            await this.LoadDataAsync();
            this.ShowSuccess("Insurance package deleted successfully");
        }
        else
        {
            this.ShowError($"Delete failed: {deleteResult.Message}");
        }
    }

    private async Task ToggleActiveAsync(InsuranceEntity insurance)
    {
        var result = await this.InsuranceService.ToggleActiveAsync(insurance.InsuranceId, this.UserName);
        if (result.Success)
        {
            await this.LoadDataAsync();
            var status = insurance.IsActive ? "deactivated" : "activated";
            this.ShowSuccess($"Insurance package {status}");
        }
        else
        {
            this.ShowError($"Failed to update status: {result.Message}");
        }
    }
}
