@using MotoRent.Domain.Entities
@using MotoRent.Services
@using InsuranceEntity = MotoRent.Domain.Entities.Insurance
@inject InsuranceService InsuranceService
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudForm @ref="m_form" @bind-IsValid="m_formValid">
            <MudGrid>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="Insurance.Name" Label="Package Name"
                                  Required="true" RequiredError="Package name is required"
                                  Variant="Variant.Outlined"
                                  Placeholder="e.g., Basic, Premium, Full Coverage" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudSwitch @bind-Value="Insurance.IsActive" Label="Active"
                               Color="Color.Primary" />
                </MudItem>

                <MudItem xs="12">
                    <MudTextField @bind-Value="Insurance.Description" Label="Description"
                                  Required="true" RequiredError="Description is required"
                                  Variant="Variant.Outlined" Lines="3"
                                  Placeholder="Describe what this insurance covers..." />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Insurance.DailyRate" Label="Daily Rate (THB)"
                                     Required="true" Min="0"
                                     Variant="Variant.Outlined" Format="N0" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Insurance.MaxCoverage" Label="Max Coverage (THB)"
                                     Required="true" Min="0"
                                     Variant="Variant.Outlined" Format="N0"
                                     HelperText="Maximum claim amount" />
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudNumericField @bind-Value="Insurance.Deductible" Label="Deductible (THB)"
                                     Required="true" Min="0"
                                     Variant="Variant.Outlined" Format="N0"
                                     HelperText="Customer pays first" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled"
                   OnClick="SaveAsync" Disabled="@(!m_formValid || m_saving)">
            @if (m_saving)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
            }
            @(IsNew ? "Add" : "Save")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance? MudDialog { get; set; }

    [Parameter]
    public InsuranceEntity Insurance { get; set; } = new();

    [Parameter]
    public bool IsNew { get; set; }

    private MudForm? m_form;
    private bool m_formValid;
    private bool m_saving;

    private void Cancel()
    {
        MudDialog?.Cancel();
    }

    private async Task SaveAsync()
    {
        if (m_form == null) return;

        await m_form.Validate();
        if (!m_formValid) return;

        m_saving = true;

        try
        {
            var result = IsNew
                ? await InsuranceService.CreateInsuranceAsync(Insurance, "system")
                : await InsuranceService.UpdateInsuranceAsync(Insurance, "system");

            if (result.Success)
            {
                MudDialog?.Close(DialogResult.Ok(Insurance));
            }
            else
            {
                Snackbar.Add($"Save failed: {result.Message}", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            m_saving = false;
        }
    }
}
