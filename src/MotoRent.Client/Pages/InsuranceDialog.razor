@inherits LocalizedDialogBase<Insurance, InsuranceDialog>
@using InsuranceEntity = MotoRent.Domain.Entities.Insurance
@inject InsuranceService InsuranceService

<form id="@FormId" @onsubmit="SaveAsync" @onsubmit:preventDefault>
    <div class="modal-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label required">@Localizer["PackageName"]</label>
                <input type="text" class="form-control" @bind="Entity.Name" required
                       placeholder="@Localizer["NamePlaceholder"]" />
            </div>

            <div class="col-md-6">
                <label class="form-check form-switch mt-4">
                    <input type="checkbox" class="form-check-input" @bind="Entity.IsActive" />
                    <span class="form-check-label">@Localizer["Active"]</span>
                </label>
            </div>

            <div class="col-12">
                <label class="form-label required">@Localizer["Description"]</label>
                <textarea class="form-control" @bind="Entity.Description" required rows="3"
                          placeholder="@Localizer["DescriptionPlaceholder"]"></textarea>
            </div>

            <div class="col-md-4">
                <label class="form-label required">@Localizer["DailyRate"]</label>
                <div class="input-group">
                    <span class="input-group-text">฿</span>
                    <input type="number" class="form-control" @bind="Entity.DailyRate" required
                           min="0" step="10" />
                </div>
            </div>

            <div class="col-md-4">
                <label class="form-label required">@Localizer["MaxCoverage"]</label>
                <div class="input-group">
                    <span class="input-group-text">฿</span>
                    <input type="number" class="form-control" @bind="Entity.MaxCoverage" required
                           min="0" step="1000" />
                </div>
                <small class="form-hint">@Localizer["MaxCoverageHint"]</small>
            </div>

            <div class="col-md-4">
                <label class="form-label required">@Localizer["Deductible"]</label>
                <div class="input-group">
                    <span class="input-group-text">฿</span>
                    <input type="number" class="form-control" @bind="Entity.Deductible" required
                           min="0" step="500" />
                </div>
                <small class="form-hint">@Localizer["DeductibleHint"]</small>
            </div>
        </div>
    </div>
</form>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="Cancel">
        @Localizer["Cancel"]
    </button>
    <button type="submit" form="@FormId" class="btn btn-primary" disabled="@Saving">
        @if (Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-device-floppy me-1"></i>
        @SaveButtonText
    </button>
</div>

@code {
    protected override void OnInitialized()
    {
        this.FormValid = true;
    }

    private async Task SaveAsync()
    {
        this.Saving = true;

        try
        {
            var result = this.IsNew
                ? await this.InsuranceService.CreateInsuranceAsync(this.Entity, this.UserName)
                : await this.InsuranceService.UpdateInsuranceAsync(this.Entity, this.UserName);

            if (result.Success)
            {
                this.Close();
            }
            else
            {
                this.ShowError(Localizer["SaveFailed", result.Message ?? ""]);
            }
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["Error", ex.Message]);
        }
        finally
        {
            this.Saving = false;
        }
    }
}
