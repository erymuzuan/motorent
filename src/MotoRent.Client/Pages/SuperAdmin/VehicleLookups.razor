@page "/super-admin/vehicle-lookups"
@rendermode InteractiveServer
@inherits LocalizedComponentBase<VehicleLookups>
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]
@inject VehicleLookupService LookupService

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<!-- Page Header -->
<div class="mr-page-header">
    <div class="container-xl">
        <nav class="mr-breadcrumb">
            <span class="mr-breadcrumb-item"><a href="/">Home</a></span>
            <i class="ti ti-chevron-right mr-breadcrumb-separator"></i>
            <span class="mr-breadcrumb-item"><a href="/super-admin/start-page">Super Admin</a></span>
            <i class="ti ti-chevron-right mr-breadcrumb-separator"></i>
            <span class="mr-breadcrumb-item active">@Localizer["Title"]</span>
        </nav>
        <div class="d-flex justify-content-between align-items-center pb-3">
            <div class="d-flex align-items-center gap-3">
                <div class="mr-header-icon">
                    <i class="ti ti-car"></i>
                </div>
                <div>
                    <h1 class="mr-page-title">@Localizer["Title"]</h1>
                    <p class="mr-page-subtitle mb-0">@Localizer["Subtitle"]</p>
                </div>
            </div>
            <button type="button" class="mr-btn-primary-action" @onclick="AddNewModel">
                <i class="ti ti-plus"></i>
                @Localizer["AddVehicleModel"]
            </button>
        </div>
    </div>
</div>

<div class="container-xl py-4">
    <!-- Filters -->
    <div class="mr-filter-card mr-animate-in">
        <div class="mr-filter-card-header">
            <i class="ti ti-filter"></i>
            <span>@Localizer["Filters"]</span>
        </div>
        <div class="mr-filter-card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="mr-form-label">@Localizer["Search"]</label>
                    <div class="mr-search-box" style="max-width: none;">
                        <i class="ti ti-search"></i>
                        <input type="text" placeholder="@Localizer["SearchPlaceholder"]"
                               @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                    </div>
                </div>
                <div class="col-md-3">
                    <label class="mr-form-label">@Localizer["VehicleType"]</label>
                    <select class="mr-form-control" @bind="m_selectedType" @bind:after="LoadModelsAsync">
                        <option value="">@Localizer["AllTypes"]</option>
                        @foreach (var type in Enum.GetValues<VehicleType>())
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="mr-form-label">@Localizer["Make"]</label>
                    <select class="mr-form-control" @bind="m_selectedMake" @bind:after="LoadModelsAsync">
                        <option value="">@Localizer["AllMakes"]</option>
                        @foreach (var make in m_makes)
                        {
                            <option value="@make">@make</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="mr-form-label">@Localizer["Status"]</label>
                    <select class="mr-form-control" @bind="m_includeInactive" @bind:after="LoadModelsAsync">
                        <option value="false">@Localizer["ActiveOnly"]</option>
                        <option value="true">@Localizer["All"]</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Loading Indicator -->
    @if (m_loading)
    {
        <div class="mr-loading-bar">
            <div class="mr-loading-bar-progress"></div>
        </div>
    }

    <!-- Data Table -->
    <div class="mr-data-card mr-animate-in mr-animate-delay-1">
        <div class="mr-data-card-header">
            <div class="mr-data-card-title">
                <i class="ti ti-list"></i>
                <span>@Localizer["VehicleModels"]</span>
            </div>
            <div class="mr-data-card-count">
                @if (m_totalRows > 0)
                {
                    <span class="mr-status-badge info">@m_totalRows @Localizer["Models"]</span>
                }
            </div>
        </div>

        <div class="mr-table-responsive" style="@(m_openDropdown > 0 ? "overflow: visible;" : "")">
            <table class="mr-table">
                <thead>
                    <tr>
                        <th>@Localizer["TableMake"]</th>
                        <th>@Localizer["TableModel"]</th>
                        <th>@Localizer["TableType"]</th>
                        <th>@Localizer["TableEngine"]</th>
                        <th>@Localizer["TableYears"]</th>
                        <th>@Localizer["TableStatus"]</th>
                        <th class="mr-table-actions"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var model in m_models)
                    {
                        <tr>
                            <td>
                                <div class="mr-table-primary">@model.Make</div>
                            </td>
                            <td>@model.Model</td>
                            <td>
                                <span class="mr-vehicle-type-badge @GetVehicleTypeBadgeClass(model.VehicleType)">
                                    <i class="@GetVehicleTypeIcon(model.VehicleType)"></i>
                                    @model.VehicleType
                                </span>
                            </td>
                            <td>
                                @if (model.VehicleType == VehicleType.Motorbike && model.EngineCC.HasValue)
                                {
                                    <span class="mr-mono">@model.EngineCC cc</span>
                                }
                                else if (model.VehicleType == VehicleType.Car && model.EngineLiters.HasValue)
                                {
                                    <span class="mr-mono">@model.EngineLiters.Value.ToString("0.0") L</span>
                                }
                                else
                                {
                                    <span class="mr-text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (model.YearFrom.HasValue)
                                {
                                    <span>@model.YearFrom - @(model.YearTo?.ToString() ?? Localizer["Present"])</span>
                                }
                                else
                                {
                                    <span class="mr-text-muted">-</span>
                                }
                            </td>
                            <td>
                                @if (model.IsActive)
                                {
                                    <span class="mr-status-badge success">
                                        <i class="ti ti-circle-check"></i>
                                        @Localizer["Active"]
                                    </span>
                                }
                                else
                                {
                                    <span class="mr-status-badge danger">
                                        <i class="ti ti-circle-x"></i>
                                        @Localizer["Inactive"]
                                    </span>
                                }
                            </td>
                            <td>
                                <div class="mr-dropdown" style="position: relative;">
                                    <button type="button" class="mr-btn-icon"
                                            @onclick="@(() => ToggleDropdown(model.VehicleModelId))">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    @if (m_openDropdown == model.VehicleModelId)
                                    {
                                        <div class="mr-dropdown-menu show">
                                            <a class="mr-dropdown-item" href="#" @onclick="@(() => EditModel(model))" @onclick:preventDefault>
                                                <i class="ti ti-edit"></i>
                                                @Localizer["Edit"]
                                            </a>
                                            @if (model.IsActive)
                                            {
                                                <a class="mr-dropdown-item warning" href="#" @onclick="@(() => DeactivateModel(model))" @onclick:preventDefault>
                                                    <i class="ti ti-ban"></i>
                                                    @Localizer["Deactivate"]
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="mr-dropdown-item success" href="#" @onclick="@(() => ActivateModel(model))" @onclick:preventDefault>
                                                    <i class="ti ti-circle-check"></i>
                                                    @Localizer["Activate"]
                                                </a>
                                            }
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (m_models.Count == 0 && !m_loading)
        {
            <div class="mr-empty-state">
                <div class="mr-empty-state-icon">
                    <i class="ti ti-car-off"></i>
                </div>
                <h3>@Localizer["NoModelsFound"]</h3>
                <p>@Localizer["GetStartedSubtitle"]</p>
                <button type="button" class="mr-btn-primary-action" @onclick="AddNewModel">
                    <i class="ti ti-plus"></i>
                    @Localizer["AddVehicleModel"]
                </button>
            </div>
        }

        @if (m_totalRows > m_models.Count)
        {
            <div class="mr-data-card-footer">
                <span class="mr-text-muted">@Localizer["ShowingEntries", m_models.Count, m_totalRows]</span>
            </div>
        }
    </div>
</div>

@code {
    private List<VehicleModel> m_models = [];
    private List<string> m_makes = [];
    private bool m_loading = true;
    private int m_openDropdown;
    private int m_totalRows;

    // Filters
    private string m_searchTerm = "";
    private string m_selectedType = "";
    private string m_selectedMake = "";
    private string m_includeInactive = "false";

    private System.Timers.Timer? m_searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadMakesAsync();
        await LoadModelsAsync();
    }

    private async Task LoadMakesAsync()
    {
        this.m_makes = await this.LookupService.GetMakesAsync();
    }

    private async Task LoadModelsAsync()
    {
        this.m_loading = true;
        this.CloseDropdown();

        try
        {
            VehicleType? type = string.IsNullOrEmpty(m_selectedType) ? null : Enum.Parse<VehicleType>(m_selectedType);
            string? make = string.IsNullOrWhiteSpace(m_selectedMake) ? null : m_selectedMake;
            bool includeInactive = m_includeInactive == "true";

            var result = await this.LookupService.GetAllModelsAsync(
                searchTerm: m_searchTerm,
                vehicleType: type,
                make: make,
                includeInactive: includeInactive,
                page: 1,
                pageSize: 100);

            this.m_models = result.ItemCollection;
            this.m_totalRows = result.TotalRows;
        }
        catch (Exception ex)
        {
            this.ShowError(Localizer["ErrorLoading", ex.Message]);
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        // Debounce search
        m_searchTimer?.Stop();
        m_searchTimer?.Dispose();
        m_searchTimer = new System.Timers.Timer(300);
        m_searchTimer.Elapsed += async (s, args) =>
        {
            m_searchTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await LoadModelsAsync();
                StateHasChanged();
            });
        };
        m_searchTimer.Start();
    }

    private void ToggleDropdown(int modelId)
    {
        this.m_openDropdown = this.m_openDropdown == modelId ? 0 : modelId;
    }

    private void CloseDropdown()
    {
        this.m_openDropdown = 0;
    }

    private async Task AddNewModel()
    {
        var newModel = new VehicleModel
        {
            IsActive = true,
            DisplayOrder = 100,
            VehicleType = string.IsNullOrEmpty(m_selectedType) ? VehicleType.Motorbike : Enum.Parse<VehicleType>(m_selectedType)
        };

        var result = await this.DialogService
            .Create<VehicleModelDialog>(Localizer["AddDialogTitle"])
            .WithParameter(x => x.Model, newModel)
            .WithParameter(x => x.IsNew, true)
            .WithSize(ModalSize.Large)
            .ShowAndGetDataAsync<VehicleModel>();

        if (result != null)
        {
            this.ShowSuccess(Localizer["CreatedSuccess", result.DisplayName]);
            await LoadMakesAsync();
            await LoadModelsAsync();
        }
    }

    private async Task EditModel(VehicleModel model)
    {
        CloseDropdown();

        var result = await this.DialogService
            .Create<VehicleModelDialog>(Localizer["EditDialogTitle", model.DisplayName])
            .WithParameter(x => x.Model, model)
            .WithParameter(x => x.IsNew, false)
            .WithSize(ModalSize.Large)
            .ShowAndGetDataAsync<VehicleModel>();

        if (result != null)
        {
            this.ShowSuccess(Localizer["UpdatedSuccess", result.DisplayName]);
            await LoadMakesAsync();
            await LoadModelsAsync();
        }
    }

    private async Task DeactivateModel(VehicleModel model)
    {
        CloseDropdown();

        var confirmed = await this.DialogService.ConfirmYesNoAsync(
            Localizer["DeactivateConfirm", model.DisplayName],
            Localizer["DeactivateTitle"]);

        if (confirmed)
        {
            var result = await this.LookupService.DeactivateModelAsync(model.VehicleModelId, this.UserName);
            if (result.Success)
            {
                this.ShowWarning(Localizer["DeactivatedSuccess", model.DisplayName]);
                await LoadModelsAsync();
            }
            else
            {
                this.ShowError(result.Message ?? Localizer["DeactivateFailed"]);
            }
        }
    }

    private async Task ActivateModel(VehicleModel model)
    {
        CloseDropdown();

        var result = await this.LookupService.ActivateModelAsync(model.VehicleModelId, this.UserName);
        if (result.Success)
        {
            this.ShowSuccess(Localizer["ActivatedSuccess", model.DisplayName]);
            await LoadModelsAsync();
        }
        else
        {
            this.ShowError(result.Message ?? Localizer["ActivateFailed"]);
        }
    }

    private static string GetVehicleTypeBadgeClass(VehicleType type) => type switch
    {
        VehicleType.Motorbike => "motorbike",
        VehicleType.Car => "car",
        VehicleType.Van => "van",
        VehicleType.Boat => "boat",
        VehicleType.JetSki => "jetski",
        _ => "default"
    };

    private static string GetVehicleTypeIcon(VehicleType type) => type switch
    {
        VehicleType.Motorbike => "ti ti-motorbike",
        VehicleType.Car => "ti ti-car",
        VehicleType.Van => "ti ti-truck",
        VehicleType.Boat => "ti ti-sailboat",
        VehicleType.JetSki => "ti ti-speedboat",
        _ => "ti ti-car"
    };

    public void Dispose()
    {
        m_searchTimer?.Dispose();
    }
}
