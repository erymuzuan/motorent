@page "/super-admin/vehicle-lookups"
@rendermode InteractiveServer
@inherits MotoRentComponentBase
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.Entities
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]
@inject VehicleLookupService LookupService

<PageTitle>Vehicle Lookups - SafeNGo</PageTitle>

<div class="container-xl mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Vehicle Lookups</h4>
            <p class="text-secondary mb-0">Manage global vehicle makes and models (shared across all tenants)</p>
        </div>
        <button type="button" class="btn btn-primary" @onclick="AddNewModel">
            <i class="ti ti-plus me-2"></i>
            Add Vehicle Model
        </button>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Search</label>
                    <input type="text" class="form-control" placeholder="Search make or model..."
                           @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyUp" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Vehicle Type</label>
                    <select class="form-select" @bind="m_selectedType" @bind:after="LoadModelsAsync">
                        <option value="">All Types</option>
                        @foreach (var type in Enum.GetValues<VehicleType>())
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Make</label>
                    <select class="form-select" @bind="m_selectedMake" @bind:after="LoadModelsAsync">
                        <option value="">All Makes</option>
                        @foreach (var make in m_makes)
                        {
                            <option value="@make">@make</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Status</label>
                    <select class="form-select" @bind="m_includeInactive" @bind:after="LoadModelsAsync">
                        <option value="false">Active Only</option>
                        <option value="true">All</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (m_loading)
    {
        <div class="progress progress-sm mb-4">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }

    <div class="card">
        <div class="table-responsive" style="@(m_openDropdown > 0 ? "overflow: visible;" : "")">
            <table class="table table-vcenter card-table table-striped">
                <thead>
                    <tr>
                        <th>Make</th>
                        <th>Model</th>
                        <th>Type</th>
                        <th>Engine</th>
                        <th>Years</th>
                        <th>Status</th>
                        <th class="w-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var model in m_models)
                    {
                        <tr>
                            <td><strong>@model.Make</strong></td>
                            <td>@model.Model</td>
                            <td>
                                <span class="badge @GetVehicleTypeBadgeClass(model.VehicleType)">
                                    @model.VehicleType
                                </span>
                            </td>
                            <td>
                                @if (model.VehicleType == VehicleType.Motorbike && model.EngineCC.HasValue)
                                {
                                    <span>@model.EngineCC cc</span>
                                }
                                else if (model.VehicleType == VehicleType.Car && model.EngineLiters.HasValue)
                                {
                                    <span>@model.EngineLiters.Value.ToString("0.0") L</span>
                                }
                                else
                                {
                                    <span class="text-secondary">-</span>
                                }
                            </td>
                            <td>
                                @if (model.YearFrom.HasValue)
                                {
                                    <span>@model.YearFrom - @(model.YearTo?.ToString() ?? "present")</span>
                                }
                                else
                                {
                                    <span class="text-secondary">-</span>
                                }
                            </td>
                            <td>
                                @if (model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown" style="position: relative;">
                                    <button type="button" class="btn btn-ghost-secondary btn-icon"
                                            @onclick="@(() => ToggleDropdown(model.VehicleModelId))">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    @if (m_openDropdown == model.VehicleModelId)
                                    {
                                        <div class="dropdown-menu dropdown-menu-end show"
                                             style="display: block; position: absolute; right: 0; top: 100%; z-index: 1000;">
                                            <a class="dropdown-item" href="#" @onclick="@(() => EditModel(model))" @onclick:preventDefault>
                                                <i class="ti ti-edit me-2"></i>
                                                Edit
                                            </a>
                                            @if (model.IsActive)
                                            {
                                                <a class="dropdown-item text-warning" href="#" @onclick="@(() => DeactivateModel(model))" @onclick:preventDefault>
                                                    <i class="ti ti-ban me-2"></i>
                                                    Deactivate
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item text-success" href="#" @onclick="@(() => ActivateModel(model))" @onclick:preventDefault>
                                                    <i class="ti ti-circle-check me-2"></i>
                                                    Activate
                                                </a>
                                            }
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (m_models.Count == 0 && !m_loading)
        {
            <div class="card-body">
                <div class="empty">
                    <p class="empty-title">No vehicle models found</p>
                    <p class="empty-subtitle text-secondary">
                        Get started by adding popular Thai market vehicle models.
                    </p>
                    <div class="empty-action">
                        <button type="button" class="btn btn-primary" @onclick="AddNewModel">
                            <i class="ti ti-plus me-2"></i>
                            Add Vehicle Model
                        </button>
                    </div>
                </div>
            </div>
        }

        @if (m_totalRows > m_models.Count)
        {
            <div class="card-footer d-flex align-items-center">
                <p class="m-0 text-secondary">Showing <strong>@m_models.Count</strong> of <strong>@m_totalRows</strong> entries</p>
            </div>
        }
    </div>
</div>

@code {
    private List<VehicleModel> m_models = [];
    private List<string> m_makes = [];
    private bool m_loading = true;
    private int m_openDropdown;
    private int m_totalRows;

    // Filters
    private string m_searchTerm = "";
    private string m_selectedType = "";
    private string m_selectedMake = "";
    private string m_includeInactive = "false";

    private System.Timers.Timer? m_searchTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadMakesAsync();
        await LoadModelsAsync();
    }

    private async Task LoadMakesAsync()
    {
        this.m_makes = await this.LookupService.GetMakesAsync();
    }

    private async Task LoadModelsAsync()
    {
        this.m_loading = true;
        this.CloseDropdown();

        try
        {
            VehicleType? type = string.IsNullOrEmpty(m_selectedType) ? null : Enum.Parse<VehicleType>(m_selectedType);
            string? make = string.IsNullOrWhiteSpace(m_selectedMake) ? null : m_selectedMake;
            bool includeInactive = m_includeInactive == "true";

            var result = await this.LookupService.GetAllModelsAsync(
                searchTerm: m_searchTerm,
                vehicleType: type,
                make: make,
                includeInactive: includeInactive,
                page: 1,
                pageSize: 100);

            this.m_models = result.ItemCollection;
            this.m_totalRows = result.TotalRows;
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading vehicle models: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyUp(KeyboardEventArgs e)
    {
        // Debounce search
        m_searchTimer?.Stop();
        m_searchTimer?.Dispose();
        m_searchTimer = new System.Timers.Timer(300);
        m_searchTimer.Elapsed += async (s, args) =>
        {
            m_searchTimer?.Stop();
            await InvokeAsync(async () =>
            {
                await LoadModelsAsync();
                StateHasChanged();
            });
        };
        m_searchTimer.Start();
    }

    private void ToggleDropdown(int modelId)
    {
        this.m_openDropdown = this.m_openDropdown == modelId ? 0 : modelId;
    }

    private void CloseDropdown()
    {
        this.m_openDropdown = 0;
    }

    private async Task AddNewModel()
    {
        var newModel = new VehicleModel
        {
            IsActive = true,
            DisplayOrder = 100,
            VehicleType = string.IsNullOrEmpty(m_selectedType) ? VehicleType.Motorbike : Enum.Parse<VehicleType>(m_selectedType)
        };

        var result = await this.DialogService
            .Create<VehicleModelDialog>("Add Vehicle Model")
            .WithParameter(x => x.Model, newModel)
            .WithParameter(x => x.IsNew, true)
            .WithSize(ModalSize.Large)
            .ShowAndGetDataAsync<VehicleModel>();

        if (result != null)
        {
            this.ShowSuccess($"Vehicle model '{result.DisplayName}' created successfully.");
            await LoadMakesAsync();
            await LoadModelsAsync();
        }
    }

    private async Task EditModel(VehicleModel model)
    {
        CloseDropdown();

        var result = await this.DialogService
            .Create<VehicleModelDialog>($"Edit {model.DisplayName}")
            .WithParameter(x => x.Model, model)
            .WithParameter(x => x.IsNew, false)
            .WithSize(ModalSize.Large)
            .ShowAndGetDataAsync<VehicleModel>();

        if (result != null)
        {
            this.ShowSuccess($"Vehicle model '{result.DisplayName}' updated successfully.");
            await LoadMakesAsync();
            await LoadModelsAsync();
        }
    }

    private async Task DeactivateModel(VehicleModel model)
    {
        CloseDropdown();

        var confirmed = await this.DialogService.ConfirmYesNoAsync(
            $"Are you sure you want to deactivate '{model.DisplayName}'? It will no longer appear in vehicle registration lookups.",
            "Deactivate Vehicle Model");

        if (confirmed)
        {
            var result = await this.LookupService.DeactivateModelAsync(model.VehicleModelId, this.UserName);
            if (result.Success)
            {
                this.ShowWarning($"'{model.DisplayName}' has been deactivated.");
                await LoadModelsAsync();
            }
            else
            {
                this.ShowError(result.Message ?? "Failed to deactivate model.");
            }
        }
    }

    private async Task ActivateModel(VehicleModel model)
    {
        CloseDropdown();

        var result = await this.LookupService.ActivateModelAsync(model.VehicleModelId, this.UserName);
        if (result.Success)
        {
            this.ShowSuccess($"'{model.DisplayName}' has been activated.");
            await LoadModelsAsync();
        }
        else
        {
            this.ShowError(result.Message ?? "Failed to activate model.");
        }
    }

    private static string GetVehicleTypeBadgeClass(VehicleType type) => type switch
    {
        VehicleType.Motorbike => "bg-blue",
        VehicleType.Car => "bg-green",
        VehicleType.Van => "bg-purple",
        VehicleType.Boat => "bg-cyan",
        VehicleType.JetSki => "bg-orange",
        _ => "bg-secondary"
    };

    public void Dispose()
    {
        m_searchTimer?.Dispose();
    }
}
