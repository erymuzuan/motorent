@using MotoRent.Domain.Core
@using MotoRent.Domain.DataContext
@inherits LocalizedDialogBase<User, SuperAdminUserDialog>
@inject CoreDataContext CoreContext
@inject ISubscriptionService SubscriptionService
@inject IDirectoryService DirectoryService

<div class="modal-body">
    <!-- Organization Selection -->
    <div class="mb-3">
        <label class="form-label required">@Localizer["SelectOrganization"]</label>
        <select class="form-select @(this.m_orgError != null ? "is-invalid" : "")" @bind="this.m_selectedAccountNo">
            <option value="">@Localizer["SelectOrgPlaceholder"]</option>
            @foreach (var org in this.m_organizations)
            {
                <option value="@org.AccountNo">@org.Name (@org.AccountNo)</option>
            }
        </select>
        @if (this.m_orgError != null)
        {
            <div class="invalid-feedback">@this.m_orgError</div>
        }
    </div>

    <!-- Tabs for Add mode -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(this.m_activeTab == "existing" ? "active" : "")"
               href="#" @onclick="@(() => this.m_activeTab = "existing")" @onclick:preventDefault>
                <i class="ti ti-user-search me-1"></i>
                @Localizer["TabAddExisting"]
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(this.m_activeTab == "new" ? "active" : "")"
               href="#" @onclick="@(() => this.m_activeTab = "new")" @onclick:preventDefault>
                <i class="ti ti-user-plus me-1"></i>
                @Localizer["TabCreateNew"]
            </a>
        </li>
    </ul>

    @if (this.m_activeTab == "existing")
    {
        <!-- Add Existing User Tab -->
        <div class="mb-3">
            <label class="form-label required">@Localizer["SelectUser"]</label>
            <select class="form-select" @bind="this.m_selectedUserName">
                <option value="">@Localizer["SelectUserPlaceholder"]</option>
                @foreach (var user in this.m_availableUsers)
                {
                    <option value="@user.UserName">@user.FullName (@user.Email)</option>
                }
            </select>
            @if (this.m_availableUsers.Count == 0)
            {
                <small class="form-hint text-secondary">
                    <i class="ti ti-info-circle me-1"></i>
                    @Localizer["NoAvailableUsers"]
                </small>
            }
        </div>
    }
    else
    {
        <!-- Create New User Tab -->
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label required">@Localizer["Provider"]</label>
                <select class="form-select" @bind="this.m_newProvider">
                    <option value="@User.GOOGLE">Google</option>
                    <option value="@User.MICROSOFT">Microsoft</option>
                    <option value="@User.LINE">Line</option>
                    <option value="@User.CUSTOM">Custom</option>
                </select>
            </div>
            <div class="col-md-6">
                <label class="form-label required">@Localizer["FullName"]</label>
                <input type="text" class="form-control @(this.m_nameError != null ? "is-invalid" : "")"
                       placeholder="@Localizer["FullNamePlaceholder"]"
                       @bind="this.m_newFullName" />
                @if (this.m_nameError != null)
                {
                    <div class="invalid-feedback">@this.m_nameError</div>
                }
            </div>
            <div class="col-12">
                <label class="form-label required">@Localizer["UsernameEmail"]</label>
                <input type="text" class="form-control @(this.m_emailError != null ? "is-invalid" : "")"
                       placeholder="@Localizer["UsernamePlaceholder"]"
                       @bind="this.m_newUserName" />
                @if (this.m_emailError != null)
                {
                    <div class="invalid-feedback">@this.m_emailError</div>
                }
                <small class="form-hint">
                    <i class="ti ti-info-circle me-1"></i>
                    @Localizer["CreateUserNote"]
                </small>
            </div>
        </div>
    }

    <!-- Role Selection -->
    <div class="mb-3">
        <label class="form-label">@Localizer["SelectRoles"]</label>
        <div class="space-y-2">
            @foreach (var role in UserAccount.AllRoles)
            {
                <label class="form-check">
                    <input type="checkbox" class="form-check-input"
                           checked="@this.m_selectedRoles.Contains(role)"
                           @onchange="@(e => this.ToggleRole(role, (bool)(e.Value ?? false)))" />
                    <span class="form-check-label">
                        <span class="badge @GetRoleBadgeClass(role) me-2">@this.GetRoleDisplayName(role)</span>
                        <span class="text-secondary">@this.GetRoleDescription(role)</span>
                    </span>
                </label>
            }
        </div>
        @if (this.m_roleError != null)
        {
            <div class="text-danger small mt-2">
                <i class="ti ti-alert-circle me-1"></i>
                @this.m_roleError
            </div>
        }
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="this.Cancel">
        @this.CommonLocalizer["Cancel"]
    </button>
    <button type="button" class="btn btn-primary" @onclick="this.SaveAsync" disabled="@this.Saving">
        @if (this.Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-check me-1"></i>
        @Localizer["SaveButton"]
    </button>
</div>

@code {
    private string m_activeTab = "existing";
    private string? m_selectedAccountNo;
    private string? m_selectedUserName;
    private string m_newProvider = User.GOOGLE;
    private string? m_newUserName;
    private string? m_newFullName;

    private string? m_emailError;
    private string? m_nameError;
    private string? m_roleError;
    private string? m_orgError;
    private HashSet<string> m_selectedRoles = [];
    private List<User> m_availableUsers = [];
    private List<Organization> m_organizations = [];

    protected override async Task OnInitializedAsync()
    {
        await this.LoadOrganizationsAsync();
        await this.LoadAvailableUsersAsync();
    }

    private async Task LoadOrganizationsAsync()
    {
        try
        {
            var orgs = await this.SubscriptionService.GetAllOrganizationsAsync();
            this.m_organizations = orgs.ToList();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading organizations: {ex.Message}");
        }
    }

    private async Task LoadAvailableUsersAsync()
    {
        try
        {
            var allUsersQuery = this.CoreContext.Users.OrderBy(u => u.FullName);
            var allUsersResult = await this.CoreContext.LoadAsync(allUsersQuery, page: 1, size: 500);
            this.m_availableUsers = allUsersResult.ItemCollection.ToList();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading users: {ex.Message}");
        }
    }

    private void ToggleRole(string role, bool selected)
    {
        if (selected)
        {
            this.m_selectedRoles.Add(role);
        }
        else
        {
            this.m_selectedRoles.Remove(role);
        }
        this.m_roleError = null;
    }

    private async Task SaveAsync()
    {
        this.m_orgError = null;
        this.m_roleError = null;
        this.m_emailError = null;
        this.m_nameError = null;

        // Validate organization selection
        if (string.IsNullOrWhiteSpace(this.m_selectedAccountNo))
        {
            this.m_orgError = this.Localizer["OrganizationRequired"];
            return;
        }

        // Validate role selection
        if (this.m_selectedRoles.Count == 0)
        {
            this.m_roleError = this.Localizer["AtLeastOneRole"];
            return;
        }

        if (this.m_activeTab == "existing")
        {
            await this.SaveExistingAsync();
        }
        else
        {
            await this.SaveNewUserAsync();
        }
    }

    private async Task SaveExistingAsync()
    {
        if (string.IsNullOrWhiteSpace(this.m_selectedUserName))
        {
            this.ShowError(this.Localizer["SelectUserRequired"]);
            return;
        }

        var user = this.m_availableUsers.FirstOrDefault(u => u.UserName == this.m_selectedUserName);
        if (user == null)
        {
            this.ShowError(this.Localizer["UserNotFound"]);
            return;
        }

        // Check if user already in org
        if (user.AccountCollection.Any(a => a.AccountNo == this.m_selectedAccountNo))
        {
            this.ShowError(this.Localizer["UserAlreadyInOrg"]);
            return;
        }

        this.Saving = true;
        try
        {
            await this.SubscriptionService.AddUserToOrganizationAsync(user, this.m_selectedAccountNo!, this.m_selectedRoles.ToArray());
            this.ShowSuccess(this.Localizer["UserAdded", user.FullName ?? user.UserName]);
            this.Close();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error adding user: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }

    private async Task SaveNewUserAsync()
    {
        if (string.IsNullOrWhiteSpace(this.m_newUserName))
        {
            this.m_emailError = this.Localizer["UsernameRequired"];
            return;
        }

        if (string.IsNullOrWhiteSpace(this.m_newFullName))
        {
            this.m_nameError = this.Localizer["FullNameRequired"];
            return;
        }

        // Check if username already exists
        var existingUser = await this.CoreContext.LoadOneAsync<User>(u => u.UserName == this.m_newUserName);
        if (existingUser != null)
        {
            this.m_emailError = this.Localizer["UsernameExists"];
            return;
        }

        this.Saving = true;
        try
        {
            var newUser = new User
            {
                UserName = this.m_newUserName.Trim(),
                Email = this.m_newUserName.Trim(), // Usually username is email in MotoRent
                FullName = this.m_newFullName.Trim(),
                CredentialProvider = this.m_newProvider,
                IsLockedOut = false
            };

            // Add the organization account with selected roles
            var userAccount = new UserAccount
            {
                AccountNo = this.m_selectedAccountNo!,
                IsFavourite = true
            };
            userAccount.Roles.AddRange(this.m_selectedRoles);
            newUser.AccountCollection.Add(userAccount);

            await this.DirectoryService.SaveUserProfileAsync(newUser);

            this.ShowSuccess(this.Localizer["UserCreated", newUser.FullName]);
            this.Close();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error creating user: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }

    private string GetRoleDisplayName(string role) => role switch
    {
        UserAccount.ORG_ADMIN => this.Localizer["RoleOrgAdmin"],
        UserAccount.SHOP_MANAGER => this.Localizer["RoleShopManager"],
        UserAccount.STAFF => this.Localizer["RoleStaff"],
        UserAccount.MECHANIC => this.Localizer["RoleMechanic"],
        _ => role
    };

    private string GetRoleDescription(string role) => role switch
    {
        UserAccount.ORG_ADMIN => this.Localizer["RoleOrgAdminDesc"],
        UserAccount.SHOP_MANAGER => this.Localizer["RoleShopManagerDesc"],
        UserAccount.STAFF => this.Localizer["RoleStaffDesc"],
        UserAccount.MECHANIC => this.Localizer["RoleMechanicDesc"],
        _ => ""
    };

    private static string GetRoleBadgeClass(string role) => role switch
    {
        UserAccount.ORG_ADMIN => "bg-primary",
        UserAccount.SHOP_MANAGER => "bg-purple",
        UserAccount.STAFF => "bg-info",
        UserAccount.MECHANIC => "bg-warning",
        _ => "bg-secondary"
    };
}
