@using MotoRent.Domain.Core
@using MotoRent.Domain.DataContext
@using MotoRent.Client.Controls
@inherits LocalizedDialogBase<User, SuperAdminUserDialog>
@inject CoreDataContext CoreContext
@inject ISubscriptionService SubscriptionService
@inject IDirectoryService DirectoryService

<div class="modal-body">
    <!-- Tabs for Add mode -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(this.m_activeTab == "existing" ? "active" : "")"
               href="#" @onclick="@(() => this.m_activeTab = "existing")" @onclick:preventDefault>
                <i class="ti ti-user-search me-1"></i>
                @Localizer["TabAddExisting"]
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(this.m_activeTab == "new" ? "active" : "")"
               href="#" @onclick="@(() => this.m_activeTab = "new")" @onclick:preventDefault>
                <i class="ti ti-user-plus me-1"></i>
                @Localizer["TabCreateNew"]
            </a>
        </li>
    </ul>

    @if (this.m_activeTab == "existing")
    {
        <!-- Add Existing User Tab -->
        <div class="mb-3">
            <label class="form-label required">@Localizer["SelectUser"]</label>
            <select class="form-select" @bind="this.m_selectedUserName" @bind:after="this.OnUserSelected">
                <option value="">@Localizer["SelectUserPlaceholder"]</option>
                @foreach (var user in this.m_availableUsers)
                {
                    <option value="@user.UserName">@user.FullName (@user.Email)</option>
                }
            </select>
            @if (this.m_availableUsers.Count == 0)
            {
                <small class="form-hint text-secondary">
                    <i class="ti ti-info-circle me-1"></i>
                    @Localizer["NoAvailableUsers"]
                </small>
            }
        </div>
    }
    else
    {
        <!-- Create New User Tab -->
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <ProviderPicker Label="@Localizer["Provider"]"
                                @bind-Value="this.m_newProvider"
                                ShowLineProvider="true"
                                ShowCustomProvider="true"
                                Required="true" />
            </div>
            <div class="col-md-6">
                <label class="form-label required">@Localizer["FullName"]</label>
                <input type="text" class="form-control @(this.m_nameError != null ? "is-invalid" : "")"
                       placeholder="@Localizer["FullNamePlaceholder"]"
                       @bind="this.m_newFullName" />
                @if (this.m_nameError != null)
                {
                    <div class="invalid-feedback">@this.m_nameError</div>
                }
            </div>
            <div class="col-12">
                <label class="form-label required">@Localizer["UsernameEmail"]</label>
                <input type="text" class="form-control @(this.m_emailError != null ? "is-invalid" : "")"
                       placeholder="@Localizer["UsernamePlaceholder"]"
                       @bind="this.m_newUserName" />
                @if (this.m_emailError != null)
                {
                    <div class="invalid-feedback">@this.m_emailError</div>
                }
                <small class="form-hint">
                    <i class="ti ti-info-circle me-1"></i>
                    @Localizer["CreateUserNote"]
                </small>
            </div>
        </div>
    }

    <!-- Organization Selection with Individual Roles -->
    <div class="mb-3">
        <label class="form-label required">@Localizer["SelectOrganizations"]</label>
        <div class="card">
            <div class="list-group list-group-flush" style="max-height: 300px; overflow-y: auto;">
                @foreach (var org in this.m_organizations)
                {
                    var isSelected = this.m_selectedOrgs.ContainsKey(org.AccountNo);
                    var isExistingOrg = this.m_existingUserOrgs.Contains(org.AccountNo);
                    <div class="list-group-item @(isExistingOrg ? "bg-light" : "")">
                        <div class="d-flex align-items-start">
                            <label class="form-check mb-0 me-3">
                                <input type="checkbox" class="form-check-input"
                                       checked="@isSelected"
                                       disabled="@isExistingOrg"
                                       @onchange="@(e => this.ToggleOrg(org.AccountNo, (bool)(e.Value ?? false)))" />
                            </label>
                            <div class="flex-fill">
                                <div class="d-flex align-items-center mb-1">
                                    <strong class="me-2">@org.Name</strong>
                                    <span class="badge bg-secondary-lt">@org.AccountNo</span>
                                    @if (isExistingOrg)
                                    {
                                        <span class="badge bg-info-lt ms-2">@Localizer["AlreadyMember"]</span>
                                    }
                                </div>
                                @if (isSelected || isExistingOrg)
                                {
                                    <div class="d-flex flex-wrap gap-2 mt-2">
                                        @foreach (var role in UserAccount.AllRoles)
                                        {
                                            var isRoleSelected = this.IsRoleSelected(org.AccountNo, role);
                                            <label class="form-check form-check-inline mb-0">
                                                <input type="checkbox" class="form-check-input"
                                                       checked="@isRoleSelected"
                                                       disabled="@isExistingOrg"
                                                       @onchange="@(e => this.ToggleOrgRole(org.AccountNo, role, (bool)(e.Value ?? false)))" />
                                                <span class="form-check-label">
                                                    <span class="badge @GetRoleBadgeClass(role)">@this.GetRoleDisplayName(role)</span>
                                                </span>
                                            </label>
                                        }
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        @if (this.m_orgError != null)
        {
            <div class="text-danger small mt-2">
                <i class="ti ti-alert-circle me-1"></i>
                @this.m_orgError
            </div>
        }
    </div>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-ghost-secondary" @onclick="this.Cancel">
        @this.CommonLocalizer["Cancel"]
    </button>
    <button type="button" class="btn btn-primary" @onclick="this.SaveAsync" disabled="@this.Saving">
        @if (this.Saving)
        {
            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
        }
        <i class="ti ti-check me-1"></i>
        @Localizer["SaveButton"]
    </button>
</div>

@code {
    private string m_activeTab = "existing";
    private string? m_selectedUserName;
    private string m_newProvider = User.GOOGLE;
    private string? m_newUserName;
    private string? m_newFullName;

    private string? m_emailError;
    private string? m_nameError;
    private string? m_orgError;

    // Dictionary: AccountNo -> HashSet of selected roles
    private Dictionary<string, HashSet<string>> m_selectedOrgs = new();
    private HashSet<string> m_existingUserOrgs = new();
    private List<User> m_availableUsers = [];
    private List<Organization> m_organizations = [];

    protected override async Task OnInitializedAsync()
    {
        await this.LoadOrganizationsAsync();
        await this.LoadAvailableUsersAsync();
    }

    private async Task LoadOrganizationsAsync()
    {
        try
        {
            var orgs = await this.SubscriptionService.GetAllOrganizationsAsync();
            this.m_organizations = orgs.ToList();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading organizations: {ex.Message}");
        }
    }

    private async Task LoadAvailableUsersAsync()
    {
        try
        {
            var allUsersQuery = this.CoreContext.Users.OrderBy(u => u.FullName);
            var allUsersResult = await this.CoreContext.LoadAsync(allUsersQuery, page: 1, size: 500);
            this.m_availableUsers = allUsersResult.ItemCollection.ToList();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading users: {ex.Message}");
        }
    }

    private void OnUserSelected()
    {
        // When an existing user is selected, show their current orgs
        this.m_existingUserOrgs.Clear();
        this.m_selectedOrgs.Clear();

        if (string.IsNullOrWhiteSpace(this.m_selectedUserName))
            return;

        var user = this.m_availableUsers.FirstOrDefault(u => u.UserName == this.m_selectedUserName);
        if (user != null)
        {
            foreach (var account in user.AccountCollection)
            {
                this.m_existingUserOrgs.Add(account.AccountNo);
            }
        }
    }

    private void ToggleOrg(string accountNo, bool selected)
    {
        if (selected)
        {
            // Add org with default OrgAdmin role
            this.m_selectedOrgs[accountNo] = new HashSet<string> { UserAccount.ORG_ADMIN };
        }
        else
        {
            this.m_selectedOrgs.Remove(accountNo);
        }
        this.m_orgError = null;
    }

    private void ToggleOrgRole(string accountNo, string role, bool selected)
    {
        if (!this.m_selectedOrgs.TryGetValue(accountNo, out var roles))
        {
            roles = new HashSet<string>();
            this.m_selectedOrgs[accountNo] = roles;
        }

        if (selected)
        {
            roles.Add(role);
        }
        else
        {
            roles.Remove(role);
            // If no roles left, unselect the org
            if (roles.Count == 0)
            {
                this.m_selectedOrgs.Remove(accountNo);
            }
        }
    }

    private bool IsRoleSelected(string accountNo, string role)
    {
        // For existing user orgs, show current roles
        if (this.m_existingUserOrgs.Contains(accountNo))
        {
            var user = this.m_availableUsers.FirstOrDefault(u => u.UserName == this.m_selectedUserName);
            var account = user?.AccountCollection.FirstOrDefault(a => a.AccountNo == accountNo);
            return account?.Roles.Contains(role) ?? false;
        }

        // For newly selected orgs
        return this.m_selectedOrgs.TryGetValue(accountNo, out var roles) && roles.Contains(role);
    }

    private async Task SaveAsync()
    {
        this.m_orgError = null;
        this.m_emailError = null;
        this.m_nameError = null;

        // Validate at least one org selected
        if (this.m_selectedOrgs.Count == 0)
        {
            this.m_orgError = this.Localizer["AtLeastOneOrg"];
            return;
        }

        // Validate each selected org has at least one role
        foreach (var (accountNo, roles) in this.m_selectedOrgs)
        {
            if (roles.Count == 0)
            {
                var org = this.m_organizations.FirstOrDefault(o => o.AccountNo == accountNo);
                this.m_orgError = this.Localizer["AtLeastOneRoleForOrg", org?.Name ?? accountNo];
                return;
            }
        }

        if (this.m_activeTab == "existing")
        {
            await this.SaveExistingAsync();
        }
        else
        {
            await this.SaveNewUserAsync();
        }
    }

    private async Task SaveExistingAsync()
    {
        if (string.IsNullOrWhiteSpace(this.m_selectedUserName))
        {
            this.ShowError(this.Localizer["SelectUserRequired"]);
            return;
        }

        var user = this.m_availableUsers.FirstOrDefault(u => u.UserName == this.m_selectedUserName);
        if (user == null)
        {
            this.ShowError(this.Localizer["UserNotFound"]);
            return;
        }

        this.Saving = true;
        try
        {
            // Add user to each selected org with their roles
            foreach (var (accountNo, roles) in this.m_selectedOrgs)
            {
                await this.SubscriptionService.AddUserToOrganizationAsync(user, accountNo, roles.ToArray());
            }

            var orgCount = this.m_selectedOrgs.Count;
            this.ShowSuccess(this.Localizer["UserAddedToOrgs", user.FullName ?? user.UserName, orgCount]);
            this.Close();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error adding user: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }

    private async Task SaveNewUserAsync()
    {
        if (string.IsNullOrWhiteSpace(this.m_newUserName))
        {
            this.m_emailError = this.Localizer["UsernameRequired"];
            return;
        }

        if (string.IsNullOrWhiteSpace(this.m_newFullName))
        {
            this.m_nameError = this.Localizer["FullNameRequired"];
            return;
        }

        // Check if username already exists
        var normalizedUserName = this.m_newUserName.Trim().ToLowerInvariant();
        var existingUser = await this.CoreContext.LoadOneAsync<User>(u => u.UserName == normalizedUserName);
        if (existingUser != null)
        {
            this.m_emailError = this.Localizer["UsernameExists"];
            return;
        }

        this.Saving = true;
        try
        {
            var newUser = new User
            {
                UserName = normalizedUserName,
                Email = normalizedUserName,
                FullName = this.m_newFullName.Trim(),
                CredentialProvider = this.m_newProvider,
                IsLockedOut = false
            };

            // Add all selected organizations with their roles
            var isFirst = true;
            foreach (var (accountNo, roles) in this.m_selectedOrgs)
            {
                var userAccount = new UserAccount
                {
                    AccountNo = accountNo,
                    IsFavourite = isFirst
                };
                userAccount.Roles.AddRange(roles);
                newUser.AccountCollection.Add(userAccount);
                isFirst = false;
            }

            await this.DirectoryService.SaveUserProfileAsync(newUser);

            var orgCount = this.m_selectedOrgs.Count;
            this.ShowSuccess(this.Localizer["UserCreatedWithOrgs", newUser.FullName, orgCount]);
            this.Close();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error creating user: {ex.Message}");
        }
        finally
        {
            this.Saving = false;
        }
    }

    private string GetRoleDisplayName(string role) => role switch
    {
        UserAccount.ORG_ADMIN => this.Localizer["RoleOrgAdmin"],
        UserAccount.SHOP_MANAGER => this.Localizer["RoleShopManager"],
        UserAccount.STAFF => this.Localizer["RoleStaff"],
        UserAccount.MECHANIC => this.Localizer["RoleMechanic"],
        _ => role
    };

    private static string GetRoleBadgeClass(string role) => role switch
    {
        UserAccount.ORG_ADMIN => "bg-primary",
        UserAccount.SHOP_MANAGER => "bg-purple",
        UserAccount.STAFF => "bg-info",
        UserAccount.MECHANIC => "bg-warning",
        _ => "bg-secondary"
    };
}
