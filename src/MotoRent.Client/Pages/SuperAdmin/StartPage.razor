@page "/super-admin/start-page"
@rendermode InteractiveServer
@inherits LocalizedComponentBase<StartPage>
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.DataContext
@using MotoRent.Domain.Extensions
@using MotoRent.Domain.Helps
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]
@inject CoreDataContext CoreDataContext

<PageTitle>@Localizer["PageTitle"]</PageTitle>

<!-- Page Header -->
<div class="mr-page-header">
    <div class="container-xl">
        <nav class="mr-breadcrumb">
            <span class="mr-breadcrumb-item"><a href="/">@CommonLocalizer["Home"]</a></span>
            <i class="ti ti-chevron-right mr-breadcrumb-separator"></i>
            <span class="mr-breadcrumb-item active">@Localizer["BreadcrumbSuperAdmin"]</span>
        </nav>
        <div class="d-flex justify-content-between align-items-center pb-3">
            <div class="d-flex align-items-center gap-3">
                <div class="mr-header-icon">
                    <i class="ti ti-shield-check"></i>
                </div>
                <div>
                    <h1 class="mr-page-title">@Localizer["HeaderTitle"]</h1>
                    <p class="mr-page-subtitle mb-0">@Localizer["HeaderSubtitle"]</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-xl py-4">
    <!-- Quick Stats Row -->
    <div class="mr-summary-cards mr-animate-in">
        <div class="mr-summary-card">
            <div class="mr-summary-icon total">
                <i class="ti ti-building"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["StatOrganizations"]</h4>
                <div class="mr-value">@m_organizationCount</div>
            </div>
        </div>
        <div class="mr-summary-card">
            <div class="mr-summary-icon info">
                <i class="ti ti-users"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["StatUsers"]</h4>
                <div class="mr-value">@m_userCount</div>
            </div>
        </div>
        <div class="mr-summary-card">
            <div class="mr-summary-icon pending">
                <i class="ti ti-alert-triangle"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["StatRecentErrors"]</h4>
                <div class="mr-value">@m_recentErrorCount</div>
            </div>
        </div>
        <div class="mr-summary-card">
            <div class="mr-summary-icon info">
                <i class="ti ti-headset"></i>
            </div>
            <div class="mr-summary-content">
                <h4>@Localizer["StatOpenTickets"]</h4>
                <div class="mr-value">@m_openSupportCount</div>
            </div>
        </div>
    </div>

    <!-- Main Management Cards -->
    <div class="row row-deck row-cards">
        <!-- Organizations Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-1">
            <a href="/super-admin/organizations" class="mr-management-card">
                <div class="mr-management-card-icon bg-primary">
                    <i class="ti ti-building"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardOrganizationsTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardOrganizationsText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardOrganizationsFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Users Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-1">
            <a href="/super-admin/users" class="mr-management-card">
                <div class="mr-management-card-icon bg-info">
                    <i class="ti ti-users"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardUsersTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardUsersText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardUsersFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Impersonate Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-1">
            <a href="/super-admin/impersonate" class="mr-management-card">
                <div class="mr-management-card-icon bg-purple">
                    <i class="ti ti-user-search"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardImpersonateTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardImpersonateText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardImpersonateFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- System Logs Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-2">
            <a href="/super-admin/system-logs" class="mr-management-card">
                <div class="mr-management-card-icon bg-warning">
                    <i class="ti ti-file-text"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardLogsTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardLogsText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardLogsFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- System Settings Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-2">
            <a href="/super-admin/settings" class="mr-management-card">
                <div class="mr-management-card-icon bg-secondary">
                    <i class="ti ti-settings"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardSettingsTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardSettingsText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardSettingsFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Support Requests Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-3">
            <a href="/super-admin/support-requests" class="mr-management-card">
                <div class="mr-management-card-icon bg-cyan">
                    <i class="ti ti-headset"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardSupportTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardSupportText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardSupportFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>

        <!-- Vehicle Lookups Card -->
        <div class="col-12 col-md-6 col-lg-4 mr-animate-in mr-animate-delay-3">
            <a href="/super-admin/vehicle-lookups" class="mr-management-card">
                <div class="mr-management-card-icon bg-teal">
                    <i class="ti ti-car"></i>
                </div>
                <div class="mr-management-card-body">
                    <h3 class="mr-management-card-title">@Localizer["CardVehiclesTitle"]</h3>
                    <p class="mr-management-card-text">
                        @Localizer["CardVehiclesText"]
                    </p>
                </div>
                <div class="mr-management-card-footer">
                    <span>@Localizer["CardVehiclesFooter"]</span>
                    <i class="ti ti-arrow-right"></i>
                </div>
            </a>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="mr-quick-actions mr-animate-in mr-animate-delay-4">
        <div class="mr-quick-actions-header">
            <i class="ti ti-bolt"></i>
            <h3>@Localizer["QuickActions"]</h3>
        </div>
        <div class="mr-quick-actions-body">
            <a href="/super-admin/organizations/create" class="mr-btn-primary-action">
                <i class="ti ti-plus"></i>
                @Localizer["ActionNewOrg"]
            </a>
            <a href="/super-admin/system-logs?severity=error" class="mr-btn-action warning">
                <i class="ti ti-alert-circle"></i>
                @Localizer["ActionViewErrors"]
            </a>
            <a href="/super-admin/impersonate" class="mr-btn-action view">
                <i class="ti ti-user-search"></i>
                @Localizer["ActionQuickImpersonate"]
            </a>
        </div>
    </div>
</div>

@code {
    private int m_organizationCount;
    private int m_userCount;
    private int m_recentErrorCount;
    private int m_openSupportCount;

    protected override async Task OnInitializedAsync()
    {
        this.m_organizationCount = await this.CoreDataContext.GetCountAsync(this.CoreDataContext.Organizations);
        this.m_userCount = await this.CoreDataContext.GetCountAsync(this.CoreDataContext.Users);

        var errorSeverities = new[] { LogSeverity.Error, LogSeverity.Critical };
        this.m_recentErrorCount = await this.CoreDataContext.GetCountAsync(
            this.CoreDataContext.LogEntries
                .Where(x => errorSeverities.IsInList(x.LogSeverity))
                .Where(x => x.Status == LogStatus.New));

        this.m_openSupportCount = await this.CoreDataContext.GetCountAsync(
            this.CoreDataContext.SupportRequests
                .Where(x => x.Status != MotoRent.Domain.Helps.TaskStatus.Done)
                .Where(x => x.Status != MotoRent.Domain.Helps.TaskStatus.Cancelled));
    }
}
