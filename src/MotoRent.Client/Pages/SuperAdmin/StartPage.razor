@page "/super-admin/start-page"
@rendermode InteractiveServer
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]

<PageTitle>Super Admin - MotoRent</PageTitle>

<div class="container-xl">
    <!-- Header Section -->
    <div class="page-header d-print-none mb-4">
        <div class="row align-items-center">
            <div class="col-auto">
                <span class="avatar avatar-lg bg-primary-lt rounded">
                    <i class="ti ti-shield-check fs-1 text-primary"></i>
                </span>
            </div>
            <div class="col">
                <div class="page-pretitle text-secondary">Administration</div>
                <h2 class="page-title">Super Admin Dashboard</h2>
                <div class="text-secondary mt-1">
                    Manage organizations, users, and system configuration
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Row -->
    <div class="row row-deck row-cards mb-4">
        <div class="col-sm-6 col-lg-3">
            <div class="card card-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <span class="bg-primary text-white avatar">
                                <i class="ti ti-building"></i>
                            </span>
                        </div>
                        <div class="col">
                            <div class="font-weight-medium">@m_organizationCount</div>
                            <div class="text-secondary">Organizations</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card card-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <span class="bg-info text-white avatar">
                                <i class="ti ti-users"></i>
                            </span>
                        </div>
                        <div class="col">
                            <div class="font-weight-medium">@m_userCount</div>
                            <div class="text-secondary">Users</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card card-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <span class="bg-success text-white avatar">
                                <i class="ti ti-gift"></i>
                            </span>
                        </div>
                        <div class="col">
                            <div class="font-weight-medium">@m_activeInviteCount</div>
                            <div class="text-secondary">Active Invites</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-lg-3">
            <div class="card card-sm">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <span class="bg-warning text-white avatar">
                                <i class="ti ti-alert-triangle"></i>
                            </span>
                        </div>
                        <div class="col">
                            <div class="font-weight-medium">@m_recentErrorCount</div>
                            <div class="text-secondary">Recent Errors</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Management Cards -->
    <div class="row row-deck row-cards">
        <!-- Organizations Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/organizations" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-primary">
                    <i class="ti ti-building"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Organizations</h3>
                    <p class="text-secondary">
                        View, create, and manage tenant organizations. Configure their settings and monitor their activity.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>Manage Organizations</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Users Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/users" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-info">
                    <i class="ti ti-users"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Users</h3>
                    <p class="text-secondary">
                        Manage system users and their account associations. Assign roles and configure permissions.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>Manage Users</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Impersonate Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/impersonate" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-purple">
                    <i class="ti ti-user-search"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Impersonate</h3>
                    <p class="text-secondary">
                        Sign in as any user to troubleshoot issues or test functionality from their perspective.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>Impersonate User</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- Registration Invites Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/invites" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-success">
                    <i class="ti ti-gift"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">Registration Invites</h3>
                    <p class="text-secondary">
                        Create and manage invite codes for new organizations. Track usage and expiration dates.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>Manage Invites</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- System Logs Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/logs" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-warning">
                    <i class="ti ti-file-text"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">System Logs</h3>
                    <p class="text-secondary">
                        View application logs, error reports, and audit trails for debugging and monitoring.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>View Logs</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>

        <!-- System Settings Card -->
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/super-admin/settings" class="card card-link card-link-pop h-100">
                <div class="ribbon ribbon-top bg-secondary">
                    <i class="ti ti-settings"></i>
                </div>
                <div class="card-body">
                    <h3 class="card-title">System Settings</h3>
                    <p class="text-secondary">
                        Configure global system settings, feature flags, and application-wide preferences.
                    </p>
                </div>
                <div class="card-footer bg-transparent">
                    <div class="d-flex align-items-center text-primary">
                        <span>System Settings</span>
                        <i class="ti ti-arrow-right ms-auto"></i>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="card mt-4">
        <div class="card-header">
            <h3 class="card-title">Quick Actions</h3>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-auto">
                    <a href="/super-admin/organizations/new" class="btn btn-primary">
                        <i class="ti ti-plus me-2"></i>New Organization
                    </a>
                </div>
                <div class="col-auto">
                    <a href="/super-admin/invites/new" class="btn btn-success">
                        <i class="ti ti-mail-plus me-2"></i>Create Invite
                    </a>
                </div>
                <div class="col-auto">
                    <a href="/super-admin/logs?severity=error" class="btn btn-warning">
                        <i class="ti ti-alert-circle me-2"></i>View Errors
                    </a>
                </div>
                <div class="col-auto">
                    <a href="/super-admin/impersonate" class="btn btn-outline-purple">
                        <i class="ti ti-user-search me-2"></i>Quick Impersonate
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private int m_organizationCount = 0;
    private int m_userCount = 0;
    private int m_activeInviteCount = 0;
    private int m_recentErrorCount = 0;

    protected override async Task OnInitializedAsync()
    {
        // TODO: Load actual counts from services
        await Task.CompletedTask;
    }
}
