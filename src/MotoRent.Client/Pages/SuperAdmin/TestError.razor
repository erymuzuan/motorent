@page "/super-admin/test-error"
@using MotoRent.Domain.Core
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]

<h3>Test Error Page </h3>
<p>Click the button below to trigger a test exception for error logging verification.</p>

<button class="btn btn-danger" @onclick="ThrowException">
    <i class="ti ti-bug me-2"></i>Trigger Test Exception
</button>

@code {
    private void ThrowException()
    {
        throw new InvalidOperationException("This is a test exception to verify error logging works correctly.");
    }
}
