@page "/super-admin/organizations"
@rendermode InteractiveServer
@inherits MotoRentComponentBase
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]
@inject ISubscriptionService SubscriptionService

<PageTitle>Organizations - MotoRent</PageTitle>

<div class="container-xl mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Organizations</h4>
            <p class="text-secondary mb-0">Manage tenant organizations and their subscriptions</p>
        </div>
        <a href="/super-admin/organizations/create" class="btn btn-primary">
            <i class="ti ti-plus me-2"></i>
            New Organization
        </a>
    </div>

    @if (m_loading)
    {
        <div class="progress progress-sm mb-4">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }

    <div class="card">
        <div class="table-responsive" style="@(m_openDropdown != null ? "overflow: visible;" : "")">
            <table class="table table-vcenter card-table table-striped">
                <thead>
                    <tr>
                        <th>Account No</th>
                        <th>Name</th>
                        <th>Currency</th>
                        <th>Language</th>
                        <th>Status</th>
                        <th>Location</th>
                        <th class="w-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var org in m_organizations)
                    {
                        <tr>
                            <td><a href="/super-admin/organizations/@org.AccountNo/edit">@org.AccountNo</a></td>
                            <td>@org.Name</td>
                            <td>@org.Currency</td>
                            <td>@org.Language</td>
                            <td>
                                @if (org.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (org.Address != null)
                                {
                                    <span>@org.Address.City, @org.Address.Province</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown" style="position: relative;">
                                    <button type="button" class="btn btn-ghost-secondary btn-icon"
                                            @onclick="@(() => ToggleDropdown(org.AccountNo))">
                                        <i class="ti ti-dots-vertical"></i>
                                    </button>
                                    @if (m_openDropdown == org.AccountNo)
                                    {
                                        <div class="dropdown-menu dropdown-menu-end show"
                                             style="display: block; position: absolute; right: 0; top: 100%; z-index: 1000;">
                                            <a class="dropdown-item" href="/super-admin/organizations/@org.AccountNo/edit">
                                                <i class="ti ti-edit me-2"></i>
                                                Edit
                                            </a>
                                            <a class="dropdown-item" href="#" @onclick="@(() => ViewUsers(org))" @onclick:preventDefault>
                                                <i class="ti ti-users me-2"></i>
                                                View Users
                                            </a>
                                            @if (org.IsActive)
                                            {
                                                <a class="dropdown-item text-warning" href="#" @onclick="@(() => DeactivateOrganization(org))" @onclick:preventDefault>
                                                    <i class="ti ti-ban me-2"></i>
                                                    Deactivate
                                                </a>
                                            }
                                            else
                                            {
                                                <a class="dropdown-item text-success" href="#" @onclick="@(() => ActivateOrganization(org))" @onclick:preventDefault>
                                                    <i class="ti ti-circle-check me-2"></i>
                                                    Activate
                                                </a>
                                            }
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (m_organizations.Count == 0 && !m_loading)
        {
            <div class="card-body">
                <div class="empty">
                    <p class="empty-title">No organizations found</p>
                    <p class="empty-subtitle text-secondary">
                        Get started by creating a new organization.
                    </p>
                    <div class="empty-action">
                        <a href="/super-admin/organizations/create" class="btn btn-primary">
                            <i class="ti ti-plus me-2"></i>
                            New Organization
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private List<Organization> m_organizations = [];
    private bool m_loading = true;
    private string? m_openDropdown;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrganizationsAsync();
    }

    private void ToggleDropdown(string accountNo)
    {
        this.m_openDropdown = this.m_openDropdown == accountNo ? null : accountNo;
    }

    private void CloseDropdown()
    {
        this.m_openDropdown = null;
    }

    private async Task LoadOrganizationsAsync()
    {
        this.m_loading = true;
        try
        {
            var orgs = await this.SubscriptionService.GetAllOrganizationsAsync();
            this.m_organizations = orgs.ToList();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading organizations: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private async Task ViewUsers(Organization organization)
    {
        CloseDropdown();
        await this.DialogService
            .Create<OrganizationUsersDialog>($"Users - {organization.Name}")
            .WithParameter(x => x.Organization, organization)
            .WithSize(ModalSize.ExtraLarge)
            .ShowDialogAsync();
    }

    private async Task DeactivateOrganization(Organization organization)
    {
        CloseDropdown();
        var confirmed = await this.DialogService.ConfirmYesNoAsync(
            $"Are you sure you want to deactivate {organization.Name}? Users will not be able to log in.",
            "Deactivate Organization");

        if (confirmed)
        {
            organization.IsActive = false;
            await LoadOrganizationsAsync();
            this.ShowWarning($"{organization.Name} has been deactivated.");
        }
    }

    private async Task ActivateOrganization(Organization organization)
    {
        CloseDropdown();
        organization.IsActive = true;
        await LoadOrganizationsAsync();
        this.ShowSuccess($"{organization.Name} has been activated.");
    }
}
