@page "/super-admin/impersonate"
@rendermode InteractiveServer
@inherits MotoRentComponentBase
@using System.Security.Cryptography
@using System.Text
@using Microsoft.AspNetCore.Authorization
@using MotoRent.Domain.Core
@using MotoRent.Domain.DataContext
@attribute [Authorize(Roles = UserAccount.SUPER_ADMIN)]
@inject CoreDataContext CoreContext
@inject ISubscriptionService SubscriptionService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<PageTitle>Impersonate User - MotoRent</PageTitle>

<div class="container-xl mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Impersonate User</h4>
            <p class="text-secondary mb-0">Click on an organization badge to sign in as that user</p>
        </div>
        <a href="/super-admin/start-page" class="btn btn-ghost-primary">
            <i class="ti ti-arrow-left me-2"></i>
            Back to Dashboard
        </a>
    </div>

    <!-- Search and Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <div class="col-12 col-md-5">
                    <label class="form-label">Search</label>
                    <div class="input-icon">
                        <span class="input-icon-addon">
                            <i class="ti ti-search"></i>
                        </span>
                        <input type="text" class="form-control" placeholder="Search by username, email, or name..."
                               @bind="m_searchTerm" @bind:event="oninput" @onkeyup="OnSearchKeyup" />
                    </div>
                </div>

                <div class="col-12 col-md-4">
                    <label class="form-label">Organization</label>
                    <select class="form-select" @bind="m_organizationFilter" @bind:after="ApplyFilters">
                        <option value="">All Organizations</option>
                        @foreach (var org in m_organizations)
                        {
                            <option value="@org.AccountNo">@org.Name (@org.AccountNo)</option>
                        }
                    </select>
                </div>
            </div>
        </div>
    </div>

    @if (m_loading)
    {
        <div class="progress progress-sm mb-4">
            <div class="progress-bar progress-bar-indeterminate"></div>
        </div>
    }

    <!-- Users Grid -->
    <div class="row row-cards">
        @foreach (var user in m_filteredUsers)
        {
            <div class="col-12 col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex align-items-start">
                            <!-- Avatar -->
                            <span class="avatar avatar-lg rounded me-3 @(user.IsLockedOut ? "bg-red-lt" : "bg-primary-lt")">
                                @GetInitials(user.FullName ?? user.UserName)
                            </span>

                            <!-- User Info -->
                            <div class="flex-fill min-width-0">
                                <div class="d-flex justify-content-between align-items-start mb-1">
                                    <div>
                                        <h4 class="card-title mb-0">@(user.FullName ?? user.UserName)</h4>
                                        <div class="text-secondary small">@user.Email</div>
                                    </div>
                                    <div class="d-flex gap-1">
                                        <span class="badge @GetProviderBadgeClass(user.CredentialProvider)">
                                            @user.CredentialProvider
                                        </span>
                                        @if (user.IsLockedOut)
                                        {
                                            <span class="badge bg-danger">Locked</span>
                                        }
                                    </div>
                                </div>

                                <!-- Organizations with Impersonate Buttons -->
                                <div class="mt-3">
                                    <div class="text-secondary small mb-2">
                                        <i class="ti ti-building me-1"></i>
                                        Organizations (click to impersonate):
                                    </div>
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var account in user.AccountCollection)
                                        {
                                            var org = m_organizations.FirstOrDefault(o => o.AccountNo == account.AccountNo);
                                            var orgName = org?.Name ?? account.AccountNo;
                                            var roles = string.Join(", ", account.Roles);

                                            <a href="@GetImpersonateUrl(user, account)"
                                               class="btn btn-primary"
                                               data-user="@user.UserName"
                                               data-account="@account.AccountNo"
                                               title="Impersonate as @user.UserName in @orgName (@roles)">
                                                <i class="ti ti-login me-1"></i>
                                                @orgName
                                            </a>
                                        }
                                    </div>

                                    <!-- Roles info -->
                                    <div class="text-muted small mt-2">
                                        @foreach (var account in user.AccountCollection)
                                        {
                                            var org = m_organizations.FirstOrDefault(o => o.AccountNo == account.AccountNo);
                                            <div>
                                                <span class="text-secondary">@(org?.Name ?? account.AccountNo):</span>
                                                <span>@string.Join(", ", account.Roles)</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (m_filteredUsers.Count == 0 && !m_loading)
    {
        <div class="card">
            <div class="card-body">
                <div class="empty">
                    <div class="empty-icon">
                        <i class="ti ti-users-minus" style="font-size: 3rem;"></i>
                    </div>
                    <p class="empty-title">No users found</p>
                    <p class="empty-subtitle text-secondary">
                        No users found matching your search criteria.
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<User> m_users = [];
    private List<User> m_filteredUsers = [];
    private List<Organization> m_organizations = [];
    private bool m_loading = true;
    private string? m_searchTerm;
    private string? m_organizationFilter;
    private System.Timers.Timer? m_debounceTimer;

    protected override async Task OnInitializedAsync()
    {
        await LoadDataAsync();
    }

    private async Task LoadDataAsync()
    {
        this.m_loading = true;
        try
        {
            // Load all users
            var usersQuery = this.CoreContext.Users.OrderBy(u => u.UserName);
            var usersResult = await this.CoreContext.LoadAsync(usersQuery, page: 1, size: 1000);
            this.m_users = usersResult.ItemCollection
                .Where(u => u.AccountCollection.Count > 0)
                .ToList();

            // Load all organizations for filter dropdown
            var orgs = await this.SubscriptionService.GetAllOrganizationsAsync();
            this.m_organizations = orgs.ToList();

            ApplyFilters();
        }
        catch (Exception ex)
        {
            this.ShowError($"Error loading data: {ex.Message}");
        }
        finally
        {
            this.m_loading = false;
        }
    }

    private void OnSearchKeyup()
    {
        this.m_debounceTimer?.Stop();
        this.m_debounceTimer?.Dispose();

        this.m_debounceTimer = new System.Timers.Timer(300);
        this.m_debounceTimer.Elapsed += (sender, args) =>
        {
            this.m_debounceTimer?.Stop();
            InvokeAsync(() =>
            {
                ApplyFilters();
                StateHasChanged();
            });
        };
        this.m_debounceTimer.Start();
    }

    private void ApplyFilters()
    {
        this.m_filteredUsers = this.m_users
            .Where(MatchesSearch)
            .Where(MatchesOrganization)
            .ToList();
    }

    private bool MatchesSearch(User user)
    {
        if (string.IsNullOrWhiteSpace(this.m_searchTerm)) return true;
        var term = this.m_searchTerm.ToLowerInvariant();
        return (user.UserName?.ToLowerInvariant().Contains(term) ?? false) ||
               (user.FullName?.ToLowerInvariant().Contains(term) ?? false) ||
               (user.Email?.ToLowerInvariant().Contains(term) ?? false);
    }

    private bool MatchesOrganization(User user)
    {
        if (string.IsNullOrWhiteSpace(this.m_organizationFilter)) return true;
        return user.AccountCollection.Any(a => a.AccountNo == this.m_organizationFilter);
    }

    private string GetImpersonateUrl(User user, UserAccount account)
    {
        var hash = ComputeMd5Hash($"{user.UserName}:{account.AccountNo}");
        return $"/account/impersonate?user={Uri.EscapeDataString(user.UserName)}&account={Uri.EscapeDataString(account.AccountNo)}&hash={hash}";
    }

    private static string ComputeMd5Hash(string input)
    {
        var inputBytes = Encoding.UTF8.GetBytes(input);
        var hashBytes = MD5.HashData(inputBytes);
        return Convert.ToHexString(hashBytes).ToLowerInvariant();
    }

    private static string GetProviderBadgeClass(string provider) => provider switch
    {
        User.GOOGLE => "bg-red",
        User.MICROSOFT => "bg-azure",
        _ => "bg-secondary"
    };

    private static string GetInitials(string? name)
    {
        if (string.IsNullOrWhiteSpace(name)) return "?";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        if (parts.Length >= 2)
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        return name.Length >= 2 ? name[..2].ToUpper() : name.ToUpper();
    }
}
